<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Compliance Analytics Form View -->
        <record id="view_compliance_analytics_form" model="ir.ui.view">
            <field name="name">Compliance Analytics Form</field>
            <field name="model">tazweed.compliance.analytics</field>
            <field name="arch" type="xml">
                <form string="Compliance Analytics">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="analytics_name" placeholder="Analytics Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="period_start"/>
                                <field name="period_end"/>
                            </group>
                        </group>
                        
                        <!-- Emiratization Metrics -->
                        <separator string="Emiratization Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="total_employees" readonly="1"/>
                                <field name="uae_nationals" readonly="1"/>
                            </group>
                            <group>
                                <field name="emiratization_percentage" readonly="1" widget="gauge"/>
                                <field name="emiratization_compliant" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- WPS Metrics -->
                        <separator string="WPS Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="wps_submitted_count" readonly="1"/>
                                <field name="wps_pending_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="wps_compliance_rate" readonly="1" widget="gauge"/>
                            </group>
                        </group>
                        
                        <!-- MOHRE Metrics -->
                        <separator string="MOHRE Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="mohre_reported_count" readonly="1"/>
                                <field name="mohre_pending_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="mohre_compliance_rate" readonly="1" widget="gauge"/>
                            </group>
                        </group>
                        
                        <!-- Labour Law Metrics -->
                        <separator string="Labour Law Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="minimum_wage_compliant" readonly="1"/>
                                <field name="minimum_wage_non_compliant" readonly="1"/>
                            </group>
                            <group>
                                <field name="minimum_wage_compliance_rate" readonly="1" widget="gauge"/>
                            </group>
                        </group>
                        
                        <!-- Leave Compliance -->
                        <separator string="Leave Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="leave_compliant" readonly="1"/>
                                <field name="leave_non_compliant" readonly="1"/>
                            </group>
                            <group>
                                <field name="leave_compliance_rate" readonly="1" widget="gauge"/>
                            </group>
                        </group>
                        
                        <!-- Overall Compliance -->
                        <separator string="Overall Compliance" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="overall_compliance_score" readonly="1" widget="gauge"/>
                                <field name="compliance_status" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Risk Assessment -->
                        <separator string="Risk Assessment" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="high_risk_count" readonly="1"/>
                                <field name="medium_risk_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="low_risk_count" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Compliance Analytics Tree View -->
        <record id="view_compliance_analytics_tree" model="ir.ui.view">
            <field name="name">Compliance Analytics Tree</field>
            <field name="model">tazweed.compliance.analytics</field>
            <field name="arch" type="xml">
                <tree string="Compliance Analytics">
                    <field name="analytics_name"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="emiratization_percentage"/>
                    <field name="wps_compliance_rate"/>
                    <field name="mohre_compliance_rate"/>
                    <field name="overall_compliance_score"/>
                    <field name="compliance_status"/>
                </tree>
            </field>
        </record>
        
        <!-- Compliance Analytics Search View -->
        <record id="view_compliance_analytics_search" model="ir.ui.view">
            <field name="name">Compliance Analytics Search</field>
            <field name="model">tazweed.compliance.analytics</field>
            <field name="arch" type="xml">
                <search string="Compliance Analytics">
                    <field name="analytics_name"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_period" string="Period Start" context="{'group_by': 'period_start'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Compliance Analytics Action -->
        <record id="action_compliance_analytics" model="ir.actions.act_window">
            <field name="name">Compliance Analytics</field>
            <field name="res_model">tazweed.compliance.analytics</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Compliance Analytics record
                </p>
            </field>
        </record>
    </data>
</odoo>
