<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Dashboard Template -->
    <template id="portal_dashboard_enhanced" name="Enhanced Client Portal Dashboard">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <div class="tazweed-portal-dashboard">
                <!-- Dashboard Header -->
                <div class="dashboard-header mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h2 class="mb-0">
                                <i class="fa fa-tachometer-alt me-2"></i>Dashboard
                            </h2>
                            <p class="text-muted mb-0">Welcome back, <t t-esc="request.env.user.name"/></p>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group">
                                <button class="btn btn-outline-primary" id="refreshDashboard">
                                    <i class="fa fa-sync-alt me-1"></i>Refresh
                                </button>
                                <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fa fa-download me-1"></i>Export
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" data-export="pdf">Export PDF</a></li>
                                    <li><a class="dropdown-item" href="#" data-export="excel">Export Excel</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Alerts Section -->
                <div id="alertsSection" class="mb-4">
                    <!-- Alerts will be loaded via JS -->
                </div>
                
                <!-- KPI Cards Row -->
                <div class="row mb-4" id="kpiCards">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="kpi-card bg-primary text-white">
                            <div class="kpi-icon"><i class="fa fa-users"></i></div>
                            <div class="kpi-content">
                                <h3 id="kpi-employees">--</h3>
                                <p>Active Employees</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="kpi-card bg-success text-white">
                            <div class="kpi-icon"><i class="fa fa-briefcase"></i></div>
                            <div class="kpi-content">
                                <h3 id="kpi-job-orders">--</h3>
                                <p>Active Job Orders</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="kpi-card bg-warning text-dark">
                            <div class="kpi-icon"><i class="fa fa-user-clock"></i></div>
                            <div class="kpi-content">
                                <h3 id="kpi-pending">--</h3>
                                <p>Pending Reviews</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="kpi-card bg-info text-white">
                            <div class="kpi-icon"><i class="fa fa-chart-line"></i></div>
                            <div class="kpi-content">
                                <h3 id="kpi-fill-rate">--%</h3>
                                <p>Fill Rate</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Charts Row -->
                <div class="row mb-4">
                    <div class="col-md-8 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-chart-bar me-2"></i>Placement Trend</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="placementTrendChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-chart-pie me-2"></i>Cost Breakdown</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="costBreakdownChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Pending Actions and Activity -->
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-tasks me-2"></i>Pending Actions</h5>
                            </div>
                            <div class="card-body" id="pendingActions">
                                <!-- Loaded via JS -->
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-history me-2"></i>Recent Activity</h5>
                            </div>
                            <div class="card-body" id="recentActivity" style="max-height: 400px; overflow-y: auto;">
                                <!-- Loaded via JS -->
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-bolt me-2"></i>Quick Actions</h5>
                            </div>
                            <div class="card-body">
                                <div class="row" id="quickActions">
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <a href="/my/job-orders/new" class="btn btn-outline-primary w-100">
                                            <i class="fa fa-plus me-2"></i>New Job Order
                                        </a>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <a href="/my/requests/new" class="btn btn-outline-success w-100">
                                            <i class="fa fa-ticket me-2"></i>Submit Request
                                        </a>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <a href="/my/candidates?filterby=pending" class="btn btn-outline-warning w-100">
                                            <i class="fa fa-user-check me-2"></i>Review Candidates
                                        </a>
                                    </div>
                                    <div class="col-md-3 col-sm-6 mb-2">
                                        <a href="/my/invoices" class="btn btn-outline-info w-100">
                                            <i class="fa fa-file-invoice me-2"></i>View Invoices
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Include Chart.js -->
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script src="/tazweed_client_portal/static/src/js/portal_dashboard.js"></script>
        </t>
    </template>
    
    <!-- Employee List Template -->
    <template id="portal_employees" name="Client Portal Employees">
        <t t-call="portal.portal_layout">
            <div class="tazweed-portal-employees">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h2><i class="fa fa-users me-2"></i>My Employees</h2>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-4">
                                <select class="form-select" id="filterDepartment">
                                    <option value="">All Departments</option>
                                    <t t-foreach="departments" t-as="dept">
                                        <option t-att-value="dept" t-att-selected="filters.get('department') == dept">
                                            <t t-esc="dept"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select" id="filterStatus">
                                    <option value="">All Status</option>
                                    <option value="compliant" t-att-selected="filters.get('status') == 'compliant'">Compliant</option>
                                    <option value="expiring" t-att-selected="filters.get('status') == 'expiring'">Expiring Soon</option>
                                    <option value="expired" t-att-selected="filters.get('status') == 'expired'">Expired</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="searchEmployee" 
                                       placeholder="Search..." t-att-value="filters.get('search', '')"/>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row" id="employeeGrid">
                    <t t-foreach="employees" t-as="emp">
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card employee-card shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="employee-avatar me-3">
                                            <t t-if="emp.get('photo')">
                                                <img t-att-src="'data:image/png;base64,' + emp['photo'].decode('utf-8')" 
                                                     class="rounded-circle" width="60" height="60"/>
                                            </t>
                                            <t t-else="">
                                                <div class="avatar-placeholder rounded-circle">
                                                    <i class="fa fa-user"></i>
                                                </div>
                                            </t>
                                        </div>
                                        <div>
                                            <h5 class="mb-0"><t t-esc="emp['name']"/></h5>
                                            <small class="text-muted"><t t-esc="emp['job_title']"/></small>
                                        </div>
                                    </div>
                                    
                                    <div class="employee-info">
                                        <p class="mb-1">
                                            <i class="fa fa-building me-2 text-muted"></i>
                                            <t t-esc="emp['department'] or 'N/A'"/>
                                        </p>
                                        <p class="mb-1">
                                            <i class="fa fa-calendar me-2 text-muted"></i>
                                            Tenure: <t t-esc="emp['tenure']"/>
                                        </p>
                                        <p class="mb-0">
                                            <i class="fa fa-shield-alt me-2 text-muted"></i>
                                            <span t-attf-class="badge bg-#{emp['document_status'] == 'compliant' and 'success' or emp['document_status'] == 'expiring' and 'warning' or 'danger'}">
                                                <t t-esc="emp['document_status'].title()"/>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="card-footer bg-white">
                                    <a t-attf-href="/my/employees/#{emp['id']}" class="btn btn-sm btn-outline-primary w-100">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                    
                    <t t-if="not employees">
                        <div class="col-12 text-center py-5">
                            <i class="fa fa-users fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No employees found</p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Employee Detail Template -->
    <template id="portal_employee_detail" name="Employee Detail">
        <t t-call="portal.portal_layout">
            <t t-set="emp" t-value="employee['employee']"/>
            <t t-set="placement" t-value="employee['placement']"/>
            <t t-set="docs" t-value="employee['documents']"/>
            
            <div class="tazweed-employee-detail">
                <div class="row mb-4">
                    <div class="col-12">
                        <a href="/my/employees" class="btn btn-outline-secondary mb-3">
                            <i class="fa fa-arrow-left me-2"></i>Back to Employees
                        </a>
                    </div>
                </div>
                
                <div class="row">
                    <!-- Employee Info Card -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body text-center">
                                <div class="employee-avatar-large mb-3">
                                    <t t-if="emp.get('photo')">
                                        <img t-att-src="'data:image/png;base64,' + emp['photo'].decode('utf-8')" 
                                             class="rounded-circle" width="120" height="120"/>
                                    </t>
                                    <t t-else="">
                                        <div class="avatar-placeholder-large rounded-circle mx-auto">
                                            <i class="fa fa-user fa-3x"></i>
                                        </div>
                                    </t>
                                </div>
                                <h4><t t-esc="emp['name']"/></h4>
                                <p class="text-muted"><t t-esc="emp['job_title']"/></p>
                                
                                <hr/>
                                
                                <div class="text-start">
                                    <p><i class="fa fa-building me-2"></i><t t-esc="emp['department']"/></p>
                                    <p><i class="fa fa-envelope me-2"></i><t t-esc="emp['email'] or 'N/A'"/></p>
                                    <p><i class="fa fa-phone me-2"></i><t t-esc="emp['phone'] or 'N/A'"/></p>
                                    <p><i class="fa fa-globe me-2"></i><t t-esc="emp['nationality'] or 'N/A'"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Placement Info -->
                    <div class="col-md-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-briefcase me-2"></i>Placement Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Start Date:</strong> <t t-esc="placement['start_date']"/></p>
                                        <p><strong>Contract Type:</strong> <t t-esc="placement['contract_type'] or 'N/A'"/></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Work Location:</strong> <t t-esc="placement['work_location'] or 'N/A'"/></p>
                                        <p><strong>Supervisor:</strong> <t t-esc="placement['supervisor'] or 'N/A'"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Document Status -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">
                                    <i class="fa fa-file-alt me-2"></i>Document Status
                                    <span t-attf-class="badge bg-#{docs['status'] == 'compliant' and 'success' or docs['status'] == 'expiring' and 'warning' or 'danger'} ms-2">
                                        <t t-esc="docs['status'].title()"/>
                                    </span>
                                </h5>
                            </div>
                            <div class="card-body">
                                <t t-if="docs['expired']">
                                    <div class="alert alert-danger">
                                        <h6><i class="fa fa-exclamation-circle me-2"></i>Expired Documents</h6>
                                        <ul class="mb-0">
                                            <t t-foreach="docs['expired']" t-as="doc">
                                                <li><t t-esc="doc['document']"/> - Expired <t t-esc="doc['days_overdue']"/> days ago</li>
                                            </t>
                                        </ul>
                                    </div>
                                </t>
                                
                                <t t-if="docs['expiring']">
                                    <div class="alert alert-warning">
                                        <h6><i class="fa fa-exclamation-triangle me-2"></i>Expiring Soon</h6>
                                        <ul class="mb-0">
                                            <t t-foreach="docs['expiring']" t-as="doc">
                                                <li><t t-esc="doc['document']"/> - Expires in <t t-esc="doc['days_remaining']"/> days</li>
                                            </t>
                                        </ul>
                                    </div>
                                </t>
                                
                                <t t-if="not docs['expired'] and not docs['expiring']">
                                    <div class="alert alert-success">
                                        <i class="fa fa-check-circle me-2"></i>All documents are up to date
                                    </div>
                                </t>
                            </div>
                        </div>
                        
                        <!-- Attendance Summary -->
                        <div class="card shadow-sm">
                            <div class="card-header bg-white">
                                <h5 class="mb-0"><i class="fa fa-clock me-2"></i>Attendance (This Month)</h5>
                            </div>
                            <div class="card-body">
                                <t t-set="att" t-value="employee['attendance']"/>
                                <div class="row text-center">
                                    <div class="col-md-3">
                                        <h3 class="text-success"><t t-esc="att['present_days']"/></h3>
                                        <p class="text-muted">Days Present</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h3 class="text-danger"><t t-esc="att['absent_days']"/></h3>
                                        <p class="text-muted">Days Absent</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h3 class="text-warning"><t t-esc="att['late_days']"/></h3>
                                        <p class="text-muted">Late Arrivals</p>
                                    </div>
                                    <div class="col-md-3">
                                        <h3 class="text-info"><t t-esc="att['total_hours']"/></h3>
                                        <p class="text-muted">Hours Worked</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Enhanced Documents Template -->
    <template id="portal_documents_enhanced" name="Enhanced Documents">
        <t t-call="portal.portal_layout">
            <div class="tazweed-portal-documents">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h2><i class="fa fa-folder-open me-2"></i>Documents</h2>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-4">
                                <select class="form-select" id="filterType">
                                    <option value="">All Types</option>
                                    <option value="contract">Contracts</option>
                                    <option value="invoice">Invoices</option>
                                    <option value="report">Reports</option>
                                    <option value="certificate">Certificates</option>
                                    <option value="policy">Policies</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select" id="filterCategory">
                                    <option value="">All Categories</option>
                                    <t t-foreach="categories" t-as="cat">
                                        <option t-att-value="cat.id"><t t-esc="cat.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="searchDocument" placeholder="Search..."/>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Document Name</th>
                                <th>Type</th>
                                <th>Size</th>
                                <th>Shared Date</th>
                                <th>Expiry</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="documents" t-as="doc">
                                <tr>
                                    <td>
                                        <i t-attf-class="fa fa-file-#{doc.file_type.lower() in ['pdf'] and 'pdf' or doc.file_type.lower() in ['doc', 'docx'] and 'word' or doc.file_type.lower() in ['xls', 'xlsx'] and 'excel' or 'alt'} me-2 text-muted"></i>
                                        <t t-esc="doc.name"/>
                                    </td>
                                    <td><span class="badge bg-secondary"><t t-esc="doc.document_type"/></span></td>
                                    <td><t t-esc="'%.1f KB' % (doc.file_size / 1024)"/></td>
                                    <td><t t-esc="doc.share_date.strftime('%b %d, %Y')"/></td>
                                    <td>
                                        <t t-if="doc.expiry_date">
                                            <span t-attf-class="badge bg-#{doc.is_expired and 'danger' or doc.days_to_expiry &lt;= 30 and 'warning' or 'success'}">
                                                <t t-esc="doc.expiry_date"/>
                                            </span>
                                        </t>
                                        <t t-else="">-</t>
                                    </td>
                                    <td>
                                        <a t-attf-href="/my/documents/#{doc.id}/download" class="btn btn-sm btn-outline-primary">
                                            <i class="fa fa-download"></i>
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                
                <t t-if="not documents">
                    <div class="text-center py-5">
                        <i class="fa fa-folder-open fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No documents found</p>
                    </div>
                </t>
            </div>
        </t>
    </template>
    
    <!-- Notification Settings Template -->
    <template id="portal_notification_settings" name="Notification Settings">
        <t t-call="portal.portal_layout">
            <div class="tazweed-notification-settings">
                <h2 class="mb-4"><i class="fa fa-bell me-2"></i>Notification Settings</h2>
                
                <form id="notificationSettingsForm">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Email Notifications</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_new_invoice"
                                               t-att-checked="preferences.email_new_invoice"/>
                                        <label class="form-check-label" for="email_new_invoice">New Invoice Notifications</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_invoice_due"
                                               t-att-checked="preferences.email_invoice_due"/>
                                        <label class="form-check-label" for="email_invoice_due">Invoice Due Reminders</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_candidate_submitted"
                                               t-att-checked="preferences.email_candidate_submitted"/>
                                        <label class="form-check-label" for="email_candidate_submitted">Candidate Submissions</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_placement_update"
                                               t-att-checked="preferences.email_placement_update"/>
                                        <label class="form-check-label" for="email_placement_update">Placement Updates</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_document_shared"
                                               t-att-checked="preferences.email_document_shared"/>
                                        <label class="form-check-label" for="email_document_shared">Document Shared</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_request_update"
                                               t-att-checked="preferences.email_request_update"/>
                                        <label class="form-check-label" for="email_request_update">Request Updates</label>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="email_document_expiry"
                                               t-att-checked="preferences.email_document_expiry"/>
                                        <label class="form-check-label" for="email_document_expiry">Document Expiry Alerts</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">Email Digest</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="email_digest_enabled"
                                       t-att-checked="preferences.email_digest_enabled"/>
                                <label class="form-check-label" for="email_digest_enabled">Enable Email Digest</label>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Digest Frequency</label>
                                <select class="form-select" id="email_digest_frequency" style="max-width: 200px;">
                                    <option value="daily" t-att-selected="preferences.email_digest_frequency == 'daily'">Daily</option>
                                    <option value="weekly" t-att-selected="preferences.email_digest_frequency == 'weekly'">Weekly</option>
                                    <option value="monthly" t-att-selected="preferences.email_digest_frequency == 'monthly'">Monthly</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save me-2"></i>Save Settings
                    </button>
                </form>
            </div>
        </t>
    </template>
    
    <!-- Reports Template -->
    <template id="portal_reports" name="Client Portal Reports">
        <t t-call="portal.portal_layout">
            <div class="tazweed-portal-reports">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h2><i class="fa fa-chart-bar me-2"></i>Reports</h2>
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#generateReportModal">
                            <i class="fa fa-plus me-2"></i>Generate Report
                        </button>
                    </div>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Report Name</th>
                                <th>Type</th>
                                <th>Period</th>
                                <th>Generated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="reports" t-as="report">
                                <tr>
                                    <td><t t-esc="report.name"/></td>
                                    <td><span class="badge bg-info"><t t-esc="report.report_type"/></span></td>
                                    <td><t t-esc="report.date_from"/> - <t t-esc="report.date_to"/></td>
                                    <td><t t-esc="report.generated_date.strftime('%b %d, %Y %H:%M') if report.generated_date else '-'"/></td>
                                    <td>
                                        <t t-if="report.report_file">
                                            <a t-attf-href="/web/content/client.portal.report/#{report.id}/report_file/#{report.report_filename}?download=true" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fa fa-download"></i>
                                            </a>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
                
                <t t-if="not reports">
                    <div class="text-center py-5">
                        <i class="fa fa-chart-bar fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No reports generated yet</p>
                    </div>
                </t>
            </div>
            
            <!-- Generate Report Modal -->
            <div class="modal fade" id="generateReportModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Generate Report</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="generateReportForm">
                                <div class="mb-3">
                                    <label class="form-label">Report Type</label>
                                    <select class="form-select" name="report_type" required="required">
                                        <option value="workforce">Workforce Summary</option>
                                        <option value="financial">Financial Summary</option>
                                        <option value="recruitment">Recruitment Report</option>
                                        <option value="compliance">Compliance Report</option>
                                        <option value="comprehensive">Comprehensive Report</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">From Date</label>
                                    <input type="date" class="form-control" name="date_from" required="required"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">To Date</label>
                                    <input type="date" class="form-control" name="date_to" required="required"/>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="btnGenerateReport">Generate</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
