<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Workflow Definition Form View -->
        <record id="view_workflow_definition_form" model="ir.ui.view">
            <field name="name">Workflow Definition Form</field>
            <field name="model">tazweed.workflow.definition</field>
            <field name="arch" type="xml">
                <form string="Workflow Definition">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_duplicate_as_template" string="Duplicate" type="object"/>
                        <button name="action_view_instances" string="View Instances" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Workflow Name"/>
                            </h1>
                        </div>
                        
                        <!-- Basic Information -->
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="workflow_type"/>
                                <field name="category"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                                <field name="version" readonly="1"/>
                                <field name="is_template"/>
                            </group>
                        </group>
                        
                        <field name="description" placeholder="Workflow Description"/>
                        
                        <!-- Workflow Configuration -->
                        <notebook>
                            <page string="Configuration">
                                <group>
                                    <group>
                                        <field name="model_id"/>
                                        <field name="start_state"/>
                                        <field name="end_states"/>
                                    </group>
                                    <group>
                                        <field name="require_approval"/>
                                        <field name="approval_type" attrs="{'invisible': [('require_approval', '=', False)]}"/>
                                    </group>
                                </group>
                                
                                <group>
                                    <group>
                                        <field name="timeout_days"/>
                                        <field name="auto_approve_days"/>
                                    </group>
                                    <group>
                                        <field name="allow_rejection"/>
                                        <field name="allow_cancellation"/>
                                        <field name="allow_delegation"/>
                                        <field name="require_comments"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Steps">
                                <field name="step_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="step_type"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Approval Levels" attrs="{'invisible': [('require_approval', '=', False)]}">
                                <field name="approval_level_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="approver_type"/>
                                        <field name="min_approvers"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notifications">
                                <group>
                                    <group>
                                        <field name="notify_on_start"/>
                                        <field name="notify_on_approval"/>
                                        <field name="notify_on_rejection"/>
                                    </group>
                                    <group>
                                        <field name="notify_on_completion"/>
                                        <field name="notify_on_escalation"/>
                                        <field name="notify_on_sla_breach"/>
                                    </group>
                                </group>
                                <field name="notification_template_ids" widget="many2many_tags"/>
                            </page>
                            
                            <page string="SLA &amp; Escalation">
                                <group>
                                    <group>
                                        <field name="sla_enabled"/>
                                        <field name="response_time_hours" attrs="{'invisible': [('sla_enabled', '=', False)]}"/>
                                        <field name="resolution_time_hours" attrs="{'invisible': [('sla_enabled', '=', False)]}"/>
                                    </group>
                                    <group>
                                        <field name="escalation_enabled"/>
                                    </group>
                                </group>
                                <field name="escalation_rule_ids" attrs="{'invisible': [('escalation_enabled', '=', False)]}" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="level"/>
                                        <field name="trigger_type"/>
                                        <field name="hours_after_creation"/>
                                        <field name="escalate_to_type"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Triggers">
                                <group>
                                    <field name="auto_trigger"/>
                                </group>
                                <field name="trigger_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="trigger_type"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Statistics">
                                <group>
                                    <group>
                                        <field name="instance_count" readonly="1"/>
                                        <field name="active_instance_count" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="completed_instance_count" readonly="1"/>
                                        <field name="rejected_instance_count" readonly="1"/>
                                        <field name="avg_completion_hours" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Workflow Definition Tree View -->
        <record id="view_workflow_definition_tree" model="ir.ui.view">
            <field name="name">Workflow Definition Tree</field>
            <field name="model">tazweed.workflow.definition</field>
            <field name="arch" type="xml">
                <tree string="Workflow Definitions">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="workflow_type"/>
                    <field name="category"/>
                    <field name="state"/>
                    <field name="is_active"/>
                    <field name="instance_count"/>
                    <field name="active_instance_count"/>
                </tree>
            </field>
        </record>
        
        <!-- Workflow Definition Search View -->
        <record id="view_workflow_definition_search" model="ir.ui.view">
            <field name="name">Workflow Definition Search</field>
            <field name="model">tazweed.workflow.definition</field>
            <field name="arch" type="xml">
                <search string="Workflow Definitions">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="workflow_type"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="filter_inactive" string="Inactive" domain="[('state', '=', 'inactive')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_type" string="Type" context="{'group_by': 'workflow_type'}"/>
                        <filter name="group_category" string="Category" context="{'group_by': 'category'}"/>
                        <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Workflow Definition Action -->
        <record id="action_workflow_definition" model="ir.actions.act_window">
            <field name="name">Workflow Definitions</field>
            <field name="res_model">tazweed.workflow.definition</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Workflow Definition
                </p>
                <p>
                    Define automated workflows for HR processes like onboarding, leave requests, and approvals.
                </p>
            </field>
        </record>
    </data>
</odoo>
