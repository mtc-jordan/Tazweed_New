<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Form View -->
    <record id="view_placement_client_form" model="ir.ui.view">
        <field name="name">tazweed.client.form</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'active')]}"/>
                    <button name="action_hold" string="Put On Hold" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('state', '=', 'inactive')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="prospect,active,inactive"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-briefcase" type="action" name="%(action_job_order)d">
                            <field name="job_order_count" widget="statinfo" string="Job Orders"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-users" type="action" name="%(action_placement)d">
                            <field name="placement_count" widget="statinfo" string="Placements"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Company Name..."/>
                        </h1>
                        <field name="code" placeholder="Client Code"/>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="industry_id"/>
                            <field name="company_size"/>
                        </group>
                        <group>
                            <field name="emirate"/>
                            <field name="is_free_zone"/>
                            <field name="free_zone" attrs="{'invisible': [('is_free_zone', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contacts" name="contacts">
                            <field name="contact_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="designation"/>
                                    <field name="contact_type"/>
                                    <field name="email"/>
                                    <field name="mobile"/>
                                    <field name="is_primary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Contracts" name="contracts">
                            <field name="contract_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="contract_type"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Billing" name="billing">
                            <group>
                                <group>
                                    <field name="billing_type"/>
                                    <field name="payment_terms"/>
                                    <field name="credit_limit"/>
                                </group>
                                <group>
                                    <field name="default_markup_pct"/>
                                    <field name="default_commission_pct"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents">
                            <group>
                                <group>
                                    <field name="trade_license"/>
                                    <field name="trade_license_expiry"/>
                                </group>
                                <group>
                                    <field name="establishment_card"/>
                                    <field name="establishment_card_expiry"/>
                                </group>
                            </group>
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="expiry_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Client Tree View -->
    <record id="view_placement_client_tree" model="ir.ui.view">
        <field name="name">tazweed.client.tree</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="code"/>
                <field name="name"/>
                <field name="industry_id"/>
                <field name="emirate"/>
                <field name="job_order_count"/>
                <field name="active_placement_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Client Search View -->
    <record id="view_placement_client_search" model="ir.ui.view">
        <field name="name">tazweed.client.search</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <search string="Search Clients">
                <field name="name"/>
                <field name="code"/>
                <field name="industry_id"/>
                <separator/>
                <filter name="active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="prospect" string="Prospects" domain="[('state', '=', 'prospect')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_industry" string="Industry" context="{'group_by': 'industry_id'}"/>
                    <filter name="group_emirate" string="Emirate" context="{'group_by': 'emirate'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Action -->
    <record id="action_placement_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">tazweed.client</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_placement_client_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first client
            </p>
        </field>
    </record>
</odoo>
