<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_bank_tree" model="ir.ui.view">
        <field name="name">tazweed.employee.bank.tree</field>
        <field name="model">tazweed.employee.bank</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="bank_name"/>
                <field name="account_number"/>
                <field name="iban"/>
                <field name="is_primary"/>
                <field name="is_salary_account"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_bank_form" model="ir.ui.view">
        <field name="name">tazweed.employee.bank.form</field>
        <field name="model">tazweed.employee.bank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="bank_id"/>
                            <field name="bank_name"/>
                        </group>
                        <group>
                            <field name="account_number"/>
                            <field name="iban"/>
                            <field name="swift_code"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="branch_name"/>
                            <field name="branch_code"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="is_primary"/>
                            <field name="is_salary_account"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_banks" model="ir.actions.act_window">
        <field name="name">Bank Accounts</field>
        <field name="res_model">tazweed.employee.bank</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
