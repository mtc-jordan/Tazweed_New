<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ============================================== -->
        <!-- CERTIFICATES & LETTERS -->
        <!-- ============================================== -->
        
        <!-- Salary Certificate -->
        <record id="request_type_salary_certificate" model="hr.service.request.type">
            <field name="name">Salary Certificate</field>
            <field name="code">SALARY_CERT</field>
            <field name="category">certificate</field>
            <field name="sequence">1</field>
            <field name="description">Official certificate confirming employee's current salary and employment details. Commonly required for bank loans, credit cards, visa applications, and rental agreements.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Salary Certificate Request</h5>
                    <p>Please provide the following information:</p>
                    <ul>
                        <li>Purpose of the certificate (bank, visa, etc.)</li>
                        <li>Name of the organization it's addressed to</li>
                        <li>Preferred language (English/Arabic/Both)</li>
                        <li>Number of copies needed</li>
                    </ul>
                    <p><strong>Processing Time:</strong> 1-2 business days</p>
                </div>
            ]]></field>
        </record>
        
        <!-- Experience Letter / Employment Certificate -->
        <record id="request_type_experience_letter" model="hr.service.request.type">
            <field name="name">Experience Letter / Employment Certificate</field>
            <field name="code">EXP_LETTER</field>
            <field name="category">certificate</field>
            <field name="sequence">2</field>
            <field name="description">Official letter confirming employment history, job title, and tenure with the company. Required for new employment, visa applications, or professional certifications.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">3</field>
            <field name="priority_sla_days">1</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Experience Letter Request</h5>
                    <p>Please provide:</p>
                    <ul>
                        <li>Purpose of the letter</li>
                        <li>Specific details to include (if any)</li>
                        <li>Preferred language</li>
                    </ul>
                    <p><strong>Note:</strong> For current employees, this will be an employment verification letter. For departing employees, a full experience letter will be issued.</p>
                </div>
            ]]></field>
        </record>
        
        <!-- No Objection Certificate (NOC) -->
        <record id="request_type_noc" model="hr.service.request.type">
            <field name="name">No Objection Certificate (NOC)</field>
            <field name="code">NOC</field>
            <field name="category">certificate</field>
            <field name="sequence">3</field>
            <field name="description">Certificate stating the company has no objection to the employee's specific activity (visa transfer, part-time work, higher education, etc.)</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">manager_hr</field>
            <field name="sla_days">3</field>
            <field name="priority_sla_days">2</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-warning">
                    <h5>NOC Request</h5>
                    <p><strong>Important:</strong> NOC requests require both Manager and HR approval.</p>
                    <p>Please specify:</p>
                    <ul>
                        <li>Purpose of NOC (visa transfer, education, part-time work, etc.)</li>
                        <li>Duration (if applicable)</li>
                        <li>Any specific conditions</li>
                    </ul>
                </div>
            ]]></field>
        </record>
        
        <!-- Bank Letter -->
        <record id="request_type_bank_letter" model="hr.service.request.type">
            <field name="name">Bank Letter</field>
            <field name="code">BANK_LETTER</field>
            <field name="category">certificate</field>
            <field name="sequence">4</field>
            <field name="description">Letter addressed to a bank for account opening, loan application, or credit card request.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Bank Letter Request</h5>
                    <p>Please provide:</p>
                    <ul>
                        <li>Bank name</li>
                        <li>Purpose (account opening, loan, credit card)</li>
                        <li>Any specific information the bank requires</li>
                    </ul>
                </div>
            ]]></field>
        </record>
        
        <!-- Embassy Letter -->
        <record id="request_type_embassy_letter" model="hr.service.request.type">
            <field name="name">Embassy / Visa Support Letter</field>
            <field name="code">EMBASSY_LETTER</field>
            <field name="category">certificate</field>
            <field name="sequence">5</field>
            <field name="description">Letter addressed to an embassy or consulate supporting visa application for business or personal travel.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">manager_hr</field>
            <field name="sla_days">3</field>
            <field name="priority_sla_days">2</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Embassy Letter Request</h5>
                    <p>Please provide:</p>
                    <ul>
                        <li>Embassy/Consulate name and country</li>
                        <li>Purpose of travel (business/personal)</li>
                        <li>Travel dates</li>
                        <li>Any specific requirements from the embassy</li>
                    </ul>
                </div>
            ]]></field>
        </record>
        
        <!-- Promotion Letter -->
        <record id="request_type_promotion_letter" model="hr.service.request.type">
            <field name="name">Promotion Letter Copy</field>
            <field name="code">PROMO_LETTER</field>
            <field name="category">certificate</field>
            <field name="sequence">6</field>
            <field name="description">Copy of promotion letter for personal records or external requirements.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- Address Proof Letter -->
        <record id="request_type_address_proof" model="hr.service.request.type">
            <field name="name">Address Proof Letter</field>
            <field name="code">ADDRESS_PROOF</field>
            <field name="category">certificate</field>
            <field name="sequence">7</field>
            <field name="description">Letter confirming employee's residential address as per company records.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- ============================================== -->
        <!-- DOCUMENT REQUESTS -->
        <!-- ============================================== -->
        
        <!-- Payslip Copy -->
        <record id="request_type_payslip_copy" model="hr.service.request.type">
