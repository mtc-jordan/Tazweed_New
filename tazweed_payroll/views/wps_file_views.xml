<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WPS File Form View (Payroll Extension) -->
    <record id="view_wps_file_form_payroll" model="ir.ui.view">
        <field name="name">tazweed.wps.file.form.payroll</field>
        <field name="model">tazweed.wps.file</field>
        <field name="inherit_id" ref="tazweed_wps.view_wps_file_form"/>
        <field name="arch" type="xml">
            <!-- Add payslip batch field to the form -->
            <xpath expr="//field[@name='period_month']" position="before">
                <field name="payslip_run_id"/>
            </xpath>
            <!-- Add payroll-specific buttons -->
            <xpath expr="//button[@name='action_generate_lines']" position="after">
                <button name="action_generate_lines_from_payslips" string="Generate from Payslips" type="object" 
                        attrs="{'invisible': [('state', '!=', 'draft')]}" class="btn-secondary"/>
            </xpath>
        </field>
    </record>

    <!-- WPS File Tree View (Payroll Extension) -->
    <record id="view_wps_file_tree_payroll" model="ir.ui.view">
        <field name="name">tazweed.wps.file.tree.payroll</field>
        <field name="model">tazweed.wps.file</field>
        <field name="inherit_id" ref="tazweed_wps.view_wps_file_tree"/>
        <field name="arch" type="xml">
            <!-- Add payslip batch column -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="payslip_run_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- WPS File Search View (Payroll Extension) -->
    <record id="view_wps_file_search_payroll" model="ir.ui.view">
        <field name="name">tazweed.wps.file.search.payroll</field>
        <field name="model">tazweed.wps.file</field>
        <field name="inherit_id" ref="tazweed_wps.view_wps_file_search"/>
        <field name="arch" type="xml">
            <!-- Add payslip batch search field -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="payslip_run_id"/>
            </xpath>
        </field>
    </record>
</odoo>
