<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Email Template: Request Submitted (to Employee) -->
        <record id="email_template_service_request_submitted" model="mail.template">
            <field name="name">HR Service Request: Submitted</field>
            <field name="model_id" ref="model_hr_service_request"/>
            <field name="subject">Your HR Service Request {{object.reference}} has been submitted</field>
            <field name="email_from">{{(object.company_id.email or user.email_formatted) | safe}}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-size: 13px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear <t t-out="object.employee_id.name"/>,
    </p>
    <br/>
    <p>Your HR service request has been successfully submitted and is now pending approval.</p>
    <br/>
    <table style="border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5; width: 30%;"><strong>Reference</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reference"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Type</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_type_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Date</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_date"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Expected Completion</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.expected_date"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Status</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;">Pending Approval</td>
        </tr>
    </table>
    <br/>
    <p>You will be notified once your request is approved and processed.</p>
    <br/>
    <p>Best regards,<br/>HR Department</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
        
        <!-- Email Template: Request Approved (to Employee) -->
        <record id="email_template_service_request_approved" model="mail.template">
            <field name="name">HR Service Request: Approved</field>
            <field name="model_id" ref="model_hr_service_request"/>
            <field name="subject">Your HR Service Request {{object.reference}} has been approved</field>
            <field name="email_from">{{(object.company_id.email or user.email_formatted) | safe}}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-size: 13px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear <t t-out="object.employee_id.name"/>,
    </p>
    <br/>
    <p>Good news! Your HR service request has been <strong style="color: green;">approved</strong> and is now being processed.</p>
    <br/>
    <table style="border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5; width: 30%;"><strong>Reference</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reference"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Type</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_type_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Expected Completion</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.expected_date"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Status</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd; color: green;"><strong>Processing</strong></td>
        </tr>
    </table>
    <br/>
    <p>You will be notified when your document/service is ready.</p>
    <br/>
    <p>Best regards,<br/>HR Department</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
        
        <!-- Email Template: Request Ready (to Employee) -->
        <record id="email_template_service_request_ready" model="mail.template">
            <field name="name">HR Service Request: Ready for Collection</field>
            <field name="model_id" ref="model_hr_service_request"/>
            <field name="subject">Your HR Service Request {{object.reference}} is ready for collection</field>
            <field name="email_from">{{(object.company_id.email or user.email_formatted) | safe}}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-size: 13px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear <t t-out="object.employee_id.name"/>,
    </p>
    <br/>
    <p>Your HR service request is now <strong style="color: #28a745;">ready for collection</strong>!</p>
    <br/>
    <table style="border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5; width: 30%;"><strong>Reference</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reference"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Type</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_type_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Status</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd; color: #28a745;"><strong>Ready for Collection</strong></td>
        </tr>
    </table>
    <br/>
    <p>Please visit the HR department to collect your document/complete your service request.</p>
    <br/>
    <p>Best regards,<br/>HR Department</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
        
        <!-- Email Template: Request Rejected (to Employee) -->
        <record id="email_template_service_request_rejected" model="mail.template">
            <field name="name">HR Service Request: Rejected</field>
            <field name="model_id" ref="model_hr_service_request"/>
            <field name="subject">Your HR Service Request {{object.reference}} has been rejected</field>
            <field name="email_from">{{(object.company_id.email or user.email_formatted) | safe}}</field>
            <field name="email_to">{{object.employee_id.work_email}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-size: 13px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear <t t-out="object.employee_id.name"/>,
    </p>
    <br/>
    <p>We regret to inform you that your HR service request has been <strong style="color: red;">rejected</strong>.</p>
    <br/>
    <table style="border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5; width: 30%;"><strong>Reference</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reference"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Type</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_type_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Rejected By</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.rejected_by.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Rejection Reason</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd; color: red;"><t t-out="object.rejection_reason"/></td>
        </tr>
    </table>
    <br/>
    <p>If you have any questions, please contact the HR department.</p>
    <br/>
    <p>Best regards,<br/>HR Department</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
        
        <!-- Email Template: Pending Approval (to Manager/HR) -->
        <record id="email_template_service_request_pending_approval" model="mail.template">
            <field name="name">HR Service Request: Pending Your Approval</field>
            <field name="model_id" ref="model_hr_service_request"/>
            <field name="subject">[Action Required] HR Service Request {{object.reference}} pending approval</field>
            <field name="email_from">{{(object.company_id.email or user.email_formatted) | safe}}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px; font-size: 13px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear Approver,
    </p>
    <br/>
    <p>A new HR service request requires your approval.</p>
    <br/>
    <table style="border-collapse: collapse; width: 100%;">
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5; width: 30%;"><strong>Reference</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reference"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Employee</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.employee_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Department</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.department_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Request Type</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.request_type_id.name"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Priority</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.priority"/></td>
        </tr>
        <tr>
            <td style="padding: 8px; border: 1px solid #ddd; background-color: #f5f5f5;"><strong>Reason</strong></td>
            <td style="padding: 8px; border: 1px solid #ddd;"><t t-out="object.reason"/></td>
        </tr>
    </table>
    <br/>
    <p>Please review and take action on this request.</p>
    <br/>
    <p>Best regards,<br/>Tazweed HR System</p>
</div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
        
    </data>
</odoo>
