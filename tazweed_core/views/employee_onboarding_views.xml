<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Onboarding Template Views -->
    <record id="view_onboarding_template_tree" model="ir.ui.view">
        <field name="name">employee.onboarding.template.tree</field>
        <field name="model">employee.onboarding.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="default_duration_days"/>
                <field name="onboarding_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_onboarding_template_form" model="ir.ui.view">
        <field name="name">employee.onboarding.template.form</field>
        <field name="model">employee.onboarding.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_onboardings" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="onboarding_count" widget="statinfo" string="Onboardings"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="default_duration_days"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="department_ids" widget="many2many_tags"/>
                            <field name="job_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="task_type"/>
                                    <field name="assigned_to"/>
                                    <field name="days_to_complete"/>
                                    <field name="is_mandatory"/>
                                    <field name="document_type_id" attrs="{'invisible': [('task_type', '!=', 'document')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Required Documents" name="documents">
                            <field name="required_document_type_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Onboarding Views -->
    <record id="view_employee_onboarding_tree" model="ir.ui.view">
        <field name="name">employee.onboarding.tree</field>
        <field name="model">employee.onboarding</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'completed'"
                  decoration-warning="state == 'in_progress'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="template_id"/>
                <field name="start_date"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-warning="state == 'in_progress'"
                       decoration-info="state == 'pending'"
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_onboarding_form" model="ir.ui.view">
        <field name="name">employee.onboarding.form</field>
        <field name="model">employee.onboarding</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_tasks" type="object" string="Generate Tasks"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-secondary"/>
                    <button name="action_start" type="object" string="Start Onboarding"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"
                            class="btn-primary"/>
                    <button name="action_complete" type="object" string="Complete"
                            attrs="{'invisible': [('state', '!=', 'in_progress')]}"
                            class="btn-success"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"
                            class="btn-secondary"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_portal" type="object"
                                class="oe_stat_button" icon="fa-globe">
                            <span>Portal View</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="template_id"/>
                            <field name="start_date"/>
                            <field name="target_completion_date"/>
                            <field name="actual_completion_date" attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tasks_completed"/>
                            <field name="tasks_total"/>
                        </group>
                        <group>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids">
                                <tree decoration-success="state == 'completed'"
                                      decoration-warning="is_overdue == True"
                                      decoration-muted="state == 'skipped'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="task_type"/>
                                    <field name="assigned_to"/>
                                    <field name="due_date"/>
                                    <field name="is_mandatory"/>
                                    <field name="is_overdue" invisible="1"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'completed'"
                                           decoration-warning="state == 'in_progress'"
                                           decoration-info="state == 'pending'"/>
                                    <button name="action_start" type="object" string="Start"
                                            attrs="{'invisible': [('state', '!=', 'pending')]}"
                                            icon="fa-play"/>
                                    <button name="action_complete" type="object" string="Complete"
                                            attrs="{'invisible': [('state', 'in', ['completed', 'skipped'])]}"
                                            icon="fa-check"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type_id"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Welcome Message" name="welcome">
                            <field name="welcome_message"/>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="General notes..."/>
                            </group>
                            <group>
                                <field name="hr_notes" nolabel="1" placeholder="HR notes (not visible to employee)..."
                                       groups="hr.group_hr_user"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_employee_onboarding_kanban" model="ir.ui.view">
        <field name="name">employee.onboarding.kanban</field>
        <field name="model">employee.onboarding</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="progress"/>
                <field name="state"/>
                <field name="start_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="employee_id"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="name"/>
                                    <br/>
                                    <span>Start: <field name="start_date"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="progress" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_employee_onboarding_search" model="ir.ui.view">
        <field name="name">employee.onboarding.search</field>
        <field name="model">employee.onboarding</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="my_team" string="My Team"
                        domain="[('manager_id.user_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_department" string="Department" context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_template" string="Template" context="{'group_by': 'template_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_employee_onboarding" model="ir.actions.act_window">
        <field name="name">Onboarding</field>
        <field name="res_model">employee.onboarding</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_employee_onboarding_search"/>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a new employee onboarding
            </p>
            <p>
                Create onboarding processes for new employees with tasks,
                document uploads, and progress tracking.
            </p>
        </field>
    </record>

    <record id="action_onboarding_template" model="ir.actions.act_window">
        <field name="name">Onboarding Templates</field>
        <field name="res_model">employee.onboarding.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create an onboarding template
            </p>
            <p>
                Define reusable onboarding workflows with tasks and required documents.
            </p>
        </field>
    </record>

</odoo>
