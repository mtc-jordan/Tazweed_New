<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Public Holiday Form View -->
    <record id="view_public_holiday_form" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.form</field>
        <field name="model">tazweed.public.holiday</field>
        <field name="arch" type="xml">
            <form string="Public Holiday">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,confirmed" class="btn-danger"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object" 
                            states="cancelled" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group string="Holiday Details">
                            <field name="name"/>
                            <field name="name_ar"/>
                            <field name="holiday_type"/>
                        </group>
                        <group string="Date">
                            <field name="date"/>
                            <field name="date_to"/>
                            <field name="year"/>
                        </group>
                    </group>
                    <group>
                        <group string="Settings">
                            <field name="is_paid"/>
                            <field name="applicable_to"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Public Holiday Tree View -->
    <record id="view_public_holiday_tree" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.tree</field>
        <field name="model">tazweed.public.holiday</field>
        <field name="arch" type="xml">
            <tree string="Public Holidays" decoration-success="state == 'confirmed'" 
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="name_ar"/>
                <field name="date"/>
                <field name="date_to"/>
                <field name="holiday_type"/>
                <field name="is_paid"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Public Holiday Search View -->
    <record id="view_public_holiday_search" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.search</field>
        <field name="model">tazweed.public.holiday</field>
        <field name="arch" type="xml">
            <search string="Public Holidays">
                <field name="name"/>
                <field name="year"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <separator/>
                <filter name="national" string="National" domain="[('holiday_type', '=', 'national')]"/>
                <filter name="religious" string="Religious" domain="[('holiday_type', '=', 'religious')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_year" string="Year" context="{'group_by': 'year'}"/>
                    <filter name="group_type" string="Type" context="{'group_by': 'holiday_type'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Public Holiday Calendar View -->
    <record id="view_public_holiday_calendar" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.calendar</field>
        <field name="model">tazweed.public.holiday</field>
        <field name="arch" type="xml">
            <calendar string="Public Holidays" date_start="date" date_stop="date_to" color="holiday_type" mode="year">
                <field name="name"/>
                <field name="holiday_type"/>
            </calendar>
        </field>
    </record>

    <!-- Public Holiday Action -->
    <record id="action_public_holiday" model="ir.actions.act_window">
        <field name="name">Public Holidays</field>
        <field name="res_model">tazweed.public.holiday</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'search_default_confirmed': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new public holiday
            </p>
            <p>
                Manage UAE public holidays for leave and attendance calculations.
            </p>
        </field>
    </record>

    <!-- Public Holiday Year Form View -->
    <record id="view_public_holiday_year_form" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.year.form</field>
        <field name="model">tazweed.public.holiday.year</field>
        <field name="arch" type="xml">
            <form string="Public Holiday Year">
                <header>
                    <button name="action_generate_standard_holidays" string="Generate Standard Holidays" 
                            type="object" states="draft" class="btn-secondary"/>
                    <button name="action_confirm_all" string="Confirm All" type="object" 
                            states="draft" class="btn-primary"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="year"/>
                        <field name="holiday_count"/>
                    </group>
                    <notebook>
                        <page string="Holidays" name="holidays">
                            <field name="holiday_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="holiday_type"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Public Holiday Year Tree View -->
    <record id="view_public_holiday_year_tree" model="ir.ui.view">
        <field name="name">tazweed.public.holiday.year.tree</field>
        <field name="model">tazweed.public.holiday.year</field>
        <field name="arch" type="xml">
            <tree string="Public Holiday Years">
                <field name="name"/>
                <field name="year"/>
                <field name="holiday_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Public Holiday Year Action -->
    <record id="action_public_holiday_year" model="ir.actions.act_window">
        <field name="name">Holiday Years</field>
        <field name="res_model">tazweed.public.holiday.year</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
