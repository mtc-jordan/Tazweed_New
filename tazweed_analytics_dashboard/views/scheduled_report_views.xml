<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ==================== Scheduled Report Views ==================== -->
    
    <!-- Tree View -->
    <record id="view_scheduled_report_tree" model="ir.ui.view">
        <field name="name">analytics.scheduled.report.tree</field>
        <field name="model">analytics.scheduled.report</field>
        <field name="arch" type="xml">
            <tree string="Scheduled Reports" decoration-success="last_run_status == 'success'" 
                  decoration-danger="last_run_status == 'failed'" decoration-muted="not active">
                <field name="name"/>
                <field name="report_type"/>
                <field name="frequency"/>
                <field name="next_run_date"/>
                <field name="last_run_date"/>
                <field name="last_run_status" widget="badge" 
                       decoration-success="last_run_status == 'success'"
                       decoration-danger="last_run_status == 'failed'"
                       decoration-warning="last_run_status == 'pending'"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_scheduled_report_form" model="ir.ui.view">
        <field name="name">analytics.scheduled.report.form</field>
        <field name="model">analytics.scheduled.report</field>
        <field name="arch" type="xml">
            <form string="Scheduled Report">
                <header>
                    <button name="action_run_now" string="Run Now" type="object" class="btn-primary" icon="fa-play"/>
                    <button name="action_preview" string="Preview" type="object" class="btn-secondary" icon="fa-eye"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="toggle_active" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Report Settings">
                            <field name="report_type"/>
                            <field name="format"/>
                            <field name="include_charts"/>
                            <field name="include_details"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Schedule">
                            <field name="frequency"/>
                            <field name="day_of_week" attrs="{'invisible': [('frequency', 'not in', ['weekly'])]}"/>
                            <field name="day_of_month" attrs="{'invisible': [('frequency', 'not in', ['monthly', 'quarterly'])]}"/>
                            <field name="time_of_day" widget="float_time"/>
                            <field name="next_run_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Date Range">
                            <field name="date_range_type"/>
                            <field name="custom_date_from" attrs="{'invisible': [('date_range_type', '!=', 'custom')], 'required': [('date_range_type', '=', 'custom')]}"/>
                            <field name="custom_date_to" attrs="{'invisible': [('date_range_type', '!=', 'custom')], 'required': [('date_range_type', '=', 'custom')]}"/>
                        </group>
                        <group string="Filters">
                            <field name="department_ids" widget="many2many_tags"/>
                            <field name="client_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Recipients" name="recipients">
                            <group>
                                <field name="recipient_ids" widget="many2many_tags"/>
                            </group>
                            <group string="Additional Email Addresses">
                                <field name="additional_emails" nolabel="1" placeholder="Enter email addresses, one per line"/>
                            </group>
                        </page>
                        
                        <page string="Execution History" name="history">
                            <group>
                                <field name="last_run_date" readonly="1"/>
                                <field name="last_run_status" readonly="1"/>
                            </group>
                            <group string="Last Run Message">
                                <field name="last_run_message" readonly="1" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_scheduled_report_search" model="ir.ui.view">
        <field name="name">analytics.scheduled.report.search</field>
        <field name="model">analytics.scheduled.report</field>
        <field name="arch" type="xml">
            <search string="Search Scheduled Reports">
                <field name="name"/>
                <field name="report_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Daily" name="daily" domain="[('frequency', '=', 'daily')]"/>
                <filter string="Weekly" name="weekly" domain="[('frequency', '=', 'weekly')]"/>
                <filter string="Monthly" name="monthly" domain="[('frequency', '=', 'monthly')]"/>
                <separator/>
                <filter string="Success" name="success" domain="[('last_run_status', '=', 'success')]"/>
                <filter string="Failed" name="failed" domain="[('last_run_status', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Report Type" name="group_type" context="{'group_by': 'report_type'}"/>
                    <filter string="Frequency" name="group_frequency" context="{'group_by': 'frequency'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'last_run_status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_scheduled_report" model="ir.actions.act_window">
        <field name="name">Scheduled Reports</field>
        <field name="res_model">analytics.scheduled.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Scheduled Report
            </p>
            <p>
                Set up automated email delivery of analytics reports on a daily, weekly, monthly, or quarterly basis.
            </p>
        </field>
    </record>
    
</odoo>
