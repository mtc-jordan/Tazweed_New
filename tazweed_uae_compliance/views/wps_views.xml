<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- WPS Compliance Action for Compliance Module Menu -->
    <record id="action_wps_compliance_uae" model="ir.actions.act_window">
        <field name="name">WPS Compliance</field>
        <field name="res_model">tazweed.wps.compliance</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No WPS compliance reports yet
            </p>
            <p>
                Track WPS compliance and MOHRE reporting status.
            </p>
        </field>
    </record>
    
    <!-- WPS Files Action for Compliance Module Menu -->
    <record id="action_wps_files_compliance" model="ir.actions.act_window">
        <field name="name">WPS Files</field>
        <field name="res_model">tazweed.wps.file</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_current_year': 1}</field>
    </record>
    
</odoo>
