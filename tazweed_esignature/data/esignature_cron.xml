<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Cron Job: Check Expired Signature Requests -->
        <record id="cron_check_signature_expiry" model="ir.cron">
            <field name="name">E-Signature: Check Expired Requests</field>
            <field name="model_id" ref="model_signature_request"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>
        
        <!-- Cron Job: Send Automatic Reminders -->
        <record id="cron_send_signature_reminders" model="ir.cron">
            <field name="name">E-Signature: Send Automatic Reminders</field>
            <field name="model_id" ref="model_signature_request"/>
            <field name="state">code</field>
            <field name="code">model.cron_send_reminders()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="doall">False</field>
        </record>
        
    </data>
</odoo>
