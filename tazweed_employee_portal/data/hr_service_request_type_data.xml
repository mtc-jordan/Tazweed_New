            <field name="requires_approval">False</field>
            <field name="sla_days">1</field>
            <field name="priority_sla_days">1</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Payslip Copy Request</h5>
                    <p>Please specify:</p>
                    <ul>
                        <li>Month(s) and year of payslip needed</li>
                        <li>Whether you need a stamped/certified copy</li>
                    </ul>
                    <p><strong>Note:</strong> You can also download payslips directly from the Employee Portal.</p>
                </div>
            ]]></field>
        </record>
        
        <!-- Contract Copy -->
