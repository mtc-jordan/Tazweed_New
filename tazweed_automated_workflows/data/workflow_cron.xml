<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Process Scheduled Triggers - Every 15 minutes -->
        <record id="cron_process_scheduled_triggers" model="ir.cron">
            <field name="name">Workflow: Process Scheduled Triggers</field>
            <field name="model_id" ref="model_tazweed_workflow_trigger"/>
            <field name="state">code</field>
            <field name="code">model.process_scheduled_triggers()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>
        
        <!-- Check SLA Status - Every hour -->
        <record id="cron_check_sla_status" model="ir.cron">
            <field name="name">Workflow: Check SLA Status</field>
            <field name="model_id" ref="model_tazweed_workflow_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_sla_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">20</field>
        </record>
        
        <!-- Process Escalations - Every 30 minutes -->
        <record id="cron_process_escalations" model="ir.cron">
            <field name="name">Workflow: Process Escalations</field>
            <field name="model_id" ref="model_tazweed_workflow_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_escalations()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">15</field>
        </record>
        
        <!-- Auto-Approve Timeout - Daily -->
        <record id="cron_auto_approve_timeout" model="ir.cron">
            <field name="name">Workflow: Auto-Approve on Timeout</field>
            <field name="model_id" ref="model_tazweed_workflow_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_auto_approve_timeout()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">25</field>
        </record>
        
        <!-- Cancel Timeout Workflows - Daily -->
        <record id="cron_cancel_timeout" model="ir.cron">
            <field name="name">Workflow: Cancel Timed Out Workflows</field>
            <field name="model_id" ref="model_tazweed_workflow_instance"/>
            <field name="state">code</field>
            <field name="code">model.cron_cancel_timeout()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">30</field>
        </record>
        
        <!-- Process Automation Rules - Every 5 minutes -->
        <record id="cron_process_automation_rules" model="ir.cron">
            <field name="name">Workflow: Process Automation Rules</field>
            <field name="model_id" ref="model_tazweed_automation_rule"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_automation_rules()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>
        
        <!-- Process Scheduled Tasks - Every minute -->
        <record id="cron_process_scheduled_tasks" model="ir.cron">
            <field name="name">Workflow: Process Scheduled Tasks</field>
            <field name="model_id" ref="model_tazweed_scheduled_task"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_scheduled_tasks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="priority">1</field>
        </record>
        
    </data>
</odoo>
