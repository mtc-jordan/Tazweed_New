<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Job Posting Form View -->
    <record id="view_job_posting_form" model="ir.ui.view">
        <field name="name">job.posting.form</field>
        <field name="model">job.posting</field>
        <field name="arch" type="xml">
            <form string="Job Posting">
                <header>
                    <button name="action_post" type="object" string="Post Now" 
                        class="btn-primary" states="draft,scheduled"/>
                    <button name="action_pause" type="object" string="Pause" 
                        class="btn-warning" states="active"/>
                    <button name="action_resume" type="object" string="Resume" 
                        class="btn-success" states="paused"/>
                    <button name="action_close" type="object" string="Close" 
                        class="btn-secondary" states="active,paused"/>
                    <button name="action_refresh" type="object" string="Renew" 
                        class="btn-primary" states="expired,closed"/>
                    <button name="action_refresh" type="object" string="Retry" 
                        class="btn-warning" states="failed"/>
                    <field name="state" widget="statusbar" 
                        statusbar_visible="draft,active,expired,closed"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Featured" bg_color="bg-success" 
                        />
                    <widget name="web_ribbon" title="Sponsored" bg_color="bg-warning" 
                        />
                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Job Title"/>
                        </h1>
                        <h3>
                            <field name="job_board_id" options="{'no_create': True}"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Job Information">

                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="location"/>
                            <field name="remote_type" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group string="Employment Details">
                            <field name="employment_type"/>
                            <field name="experience_level"/>

                        </group>
                    </group>
                    <group>
                        <group string="Salary" >
                            
                            <field name="salary_min"/>
                            <field name="salary_max"/>
                            <field name="salary_currency"/>
                            
                        </group>
                        <group string="Dates">
                            <field name="posted_date"/>
                            <field name="expiry_date"/>
                            
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Requirements" name="requirements">
                            <field name="requirements" widget="html"/>
                        </page>
                        <page string="Benefits" name="benefits">
                            <field name="benefits" widget="html"/>
                        </page>
                        <page string="Promotion" name="promotion">
                            <group>
                                <group string="Promotion Options">

                                </group>
                                <group string="Cost">
                                    <field name="cost"/>
                                    
                                </group>
                            </group>
                        </page>
                        <page string="Performance" name="performance">
                            <group>
                                <group string="Engagement">
                                    <field name="view_count"/>
                                    <field name="click_count"/>
                                    <field name="application_count"/>
                                </group>
                                <group string="Conversions">

                                    <field name="hired_count"/>
                                </group>
                            </group>
                        </page>
                        <page string="Syndication" name="syndication" 
                            >
                            <group>

                            </group>
                        </page>
                        <page string="Technical" name="technical">
                            <group>
                                <group string="External References">
                                    <field name="external_id"/>
                                    <field name="external_url" widget="url"/>
                                </group>
                                <group string="Status">

                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Job Posting Tree View -->
    <record id="view_job_posting_tree" model="ir.ui.view">
        <field name="name">job.posting.tree</field>
        <field name="model">job.posting</field>
        <field name="arch" type="xml">
            <tree string="Job Postings" decoration-success="state == 'active'" 
                decoration-warning="state == 'paused'" decoration-danger="state == 'expired'"
                decoration-muted="state in ('closed', 'failed')">
                <field name="name"/>
                <field name="job_board_id"/>
                
                <field name="location"/>
                <field name="employment_type"/>
                <field name="posted_date"/>
                <field name="expiry_date"/>
                <field name="view_count"/>
                <field name="application_count"/>
                <field name="state" widget="badge" 
                    decoration-success="state == 'active'"
                    decoration-warning="state in ('draft', 'scheduled', 'paused')"
                    decoration-danger="state in ('expired', 'failed')"
                    decoration-info="state == 'closed'"/>
            </tree>
        </field>
    </record>

    <!-- Job Posting Kanban View -->
    <record id="view_job_posting_kanban" model="ir.ui.view">
        <field name="name">job.posting.kanban</field>
        <field name="model">job.posting</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="job_board_id"/>
                
                <field name="state"/>
                <field name="view_count"/>
                <field name="application_count"/>

                <progressbar field="state" colors='{"draft": "secondary", "scheduled": "info", "active": "success", "paused": "warning", "expired": "danger", "closed": "muted", "failed": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="title"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle text-muted">
                                            <field name="job_board_id"/>
                                        </span>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    
                                    <div class="mt-2">
                                        <span t-if="record.is_featured.raw_value" class="badge badge-success mr-1">Featured</span>
                                        <span t-if="record.is_sponsored.raw_value" class="badge badge-warning">Sponsored</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="mr-2"><i class="fa fa-eye"/> <field name="view_count"/></span>
                                        <span><i class="fa fa-users"/> <field name="application_count"/></span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'draft': 'secondary', 'scheduled': 'info', 'active': 'success', 'paused': 'warning', 'expired': 'danger', 'closed': 'default', 'failed': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Job Posting Search View -->
    <record id="view_job_posting_search" model="ir.ui.view">
        <field name="name">job.posting.search</field>
        <field name="model">job.posting</field>
        <field name="arch" type="xml">
            <search string="Search Job Postings">
                <field name="title"/>
                <field name="job_board_id"/>

                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter string="Featured" name="featured" domain="[('is_featured', '=', True)]"/>
                <filter string="Sponsored" name="sponsored" domain="[('is_sponsored', '=', True)]"/>
                <separator/>
                <filter string="Expiring Soon" name="expiring_soon" 
                    domain="[('expiry_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('state', '=', 'active')]"/>
                <group expand="0" string="Group By">
                    <filter string="Job Board" name="group_board" context="{'group_by': 'job_board_id'}"/>
                    <filter string="Job Position" name="group_job" context="{'group_by': 'hr_job_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Posted Date" name="group_posted" context="{'group_by': 'posted_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Job Posting Action -->
    <record id="action_job_posting" model="ir.actions.act_window">
        <field name="name">Job Postings</field>
        <field name="res_model">job.posting</field>
        <field name="view_mode">kanban,tree,form</field>
        
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first job posting
            </p>
            <p>
                Post jobs to multiple job boards simultaneously.
                Track views, applications, and conversions.
            </p>
        </field>
    </record>
</odoo>
