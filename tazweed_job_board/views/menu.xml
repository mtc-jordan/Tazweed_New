<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_job_board_root"
        name="Job Boards"
        web_icon="tazweed_job_board,static/description/icon.png"
        sequence="25"/>

    <!-- Dashboard Menu -->
    <menuitem id="menu_job_board_dashboard"
        name="Dashboard"
        parent="menu_job_board_root"
        action="action_job_board_dashboard"
        sequence="1"/>

    <!-- Job Postings Menu -->
    <menuitem id="menu_job_postings"
        name="Job Postings"
        parent="menu_job_board_root"
        sequence="10"/>

    <menuitem id="menu_job_posting_all"
        name="All Postings"
        parent="menu_job_postings"
        action="action_job_posting"
        sequence="1"/>

    <menuitem id="menu_job_posting_active"
        name="Active Postings"
        parent="menu_job_postings"
        action="action_job_posting"
        sequence="2"/>

    <menuitem id="menu_job_posting_draft"
        name="Draft Postings"
        parent="menu_job_postings"
        action="action_job_posting"
        sequence="3"/>

    <menuitem id="menu_job_posting_scheduled"
        name="Scheduled Postings"
        parent="menu_job_postings"
        action="action_job_posting"
        sequence="4"/>

    <menuitem id="menu_post_job_wizard"
        name="Post New Job"
        parent="menu_job_postings"
        action="action_post_job_wizard"
        sequence="10"/>

    <!-- Candidates Menu -->
    <menuitem id="menu_candidates"
        name="Candidates"
        parent="menu_job_board_root"
        sequence="20"/>

    <menuitem id="menu_candidate_source_all"
        name="All Candidates"
        parent="menu_candidates"
        action="action_candidate_source"
        sequence="1"/>

    <menuitem id="menu_import_candidates"
        name="Import Candidates"
        parent="menu_candidates"
        action="action_import_candidates_wizard"
        sequence="10"/>

    <!-- Analytics Menu -->
    <menuitem id="menu_analytics"
        name="Analytics"
        parent="menu_job_board_root"
        sequence="30"/>

    <menuitem id="menu_job_board_analytics"
        name="Performance Analytics"
        parent="menu_analytics"
        action="action_job_board_analytics"
        sequence="1"/>

    <menuitem id="menu_scheduled_reports"
        name="Scheduled Reports"
        parent="menu_analytics"
        action="action_job_board_report"
        sequence="2"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_job_board_config"
        name="Configuration"
        parent="menu_job_board_root"
        sequence="100"
        groups="tazweed_job_board.group_job_board_manager"/>

    <menuitem id="menu_job_boards"
        name="Job Boards"
        parent="menu_job_board_config"
        action="action_job_board"
        sequence="1"/>

    <menuitem id="menu_job_templates"
        name="Job Templates"
        parent="menu_job_board_config"
        action="action_job_template"
        sequence="2"/>
</odoo>
