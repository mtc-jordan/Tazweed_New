<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Approval Workflow Form View -->
        <record id="view_approval_workflow_form" model="ir.ui.view">
            <field name="name">Approval Workflow Form</field>
            <field name="model">tazweed.approval.workflow</field>
            <field name="arch" type="xml">
                <form string="Approval Workflow">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Workflow Name"/>
                            </h1>
                        </div>
                        
                        <!-- Basic Information -->
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="approval_type"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                                <field name="total_levels" readonly="1"/>
                            </group>
                        </group>
                        
                        <field name="description" placeholder="Workflow Description"/>
                        
                        <!-- Approval Configuration -->
                        <separator string="Approval Configuration" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="parallel_approval"/>
                                <field name="sequential_approval"/>
                            </group>
                            <group>
                                <field name="allow_delegation"/>
                                <field name="allow_rejection"/>
                                <field name="allow_comments"/>
                            </group>
                        </group>
                        
                        <!-- Timeout & Escalation -->
                        <separator string="Timeout and Escalation" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="timeout_days"/>
                                <field name="escalation_enabled"/>
                            </group>
                            <group>
                                <field name="escalation_days" attrs="{'invisible': [('escalation_enabled', '=', False)]}"/>
                                <field name="escalation_approver_id" attrs="{'invisible': [('escalation_enabled', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <!-- Notifications -->
                        <separator string="Notifications" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="notify_on_submit"/>
                                <field name="notify_on_approval"/>
                            </group>
                            <group>
                                <field name="notify_on_rejection"/>
                                <field name="notify_on_escalation"/>
                            </group>
                        </group>
                        
                        <!-- Approval Levels -->
                        <separator string="Approval Levels" class="oe_inline"/>
                        <field name="approval_levels" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="approver_ids" widget="many2many_tags"/>
                                <field name="approval_type"/>
                                <field name="description"/>
                            </tree>
                        </field>
                        
                        <!-- Statistics -->
                        <separator string="Statistics" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="total_approvals" readonly="1"/>
                                <field name="pending_approvals" readonly="1"/>
                            </group>
                            <group>
                                <field name="approved_count" readonly="1"/>
                                <field name="rejected_count" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Approval Workflow Tree View -->
        <record id="view_approval_workflow_tree" model="ir.ui.view">
            <field name="name">Approval Workflow Tree</field>
            <field name="model">tazweed.approval.workflow</field>
            <field name="arch" type="xml">
                <tree string="Approval Workflows">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="approval_type"/>
                    <field name="state"/>
                    <field name="is_active"/>
                    <field name="total_levels"/>
                    <field name="total_approvals"/>
                    <field name="pending_approvals"/>
                </tree>
            </field>
        </record>
        
        <!-- Approval Workflow Search View -->
        <record id="view_approval_workflow_search" model="ir.ui.view">
            <field name="name">Approval Workflow Search</field>
            <field name="model">tazweed.approval.workflow</field>
            <field name="arch" type="xml">
                <search string="Approval Workflows">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="approval_type"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="filter_inactive" string="Inactive" domain="[('state', '=', 'inactive')]"/>
                </search>
            </field>
        </record>
        
        <!-- Approval Workflow Action -->
        <record id="action_approval_workflow" model="ir.actions.act_window">
            <field name="name">Approval Workflows</field>
            <field name="res_model">tazweed.approval.workflow</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Approval Workflow
                </p>
            </field>
        </record>
        
        <!-- Approval Request Form View -->
        <record id="view_approval_request_form" model="ir.ui.view">
            <field name="name">Approval Request Form</field>
            <field name="model">tazweed.approval.request</field>
            <field name="arch" type="xml">
                <form string="Approval Request">
                    <header>
                        <button name="action_submit" string="Submit for Approval" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Request Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="workflow_id"/>
                                <field name="requested_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="requested_date" readonly="1"/>
                                <field name="current_level" readonly="1"/>
                            </group>
                        </group>
                        
                        <field name="description" placeholder="Request Description"/>
                        
                        <separator string="Approval Lines" class="oe_inline"/>
                        <field name="approval_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="level"/>
                                <field name="approver_id"/>
                                <field name="state"/>
                                <field name="comments"/>
                                <field name="approved_date"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Approval Request Tree View -->
        <record id="view_approval_request_tree" model="ir.ui.view">
            <field name="name">Approval Request Tree</field>
            <field name="model">tazweed.approval.request</field>
            <field name="arch" type="xml">
                <tree string="Approval Requests">
                    <field name="name"/>
                    <field name="workflow_id"/>
                    <field name="state"/>
                    <field name="requested_by"/>
                    <field name="requested_date"/>
                    <field name="current_level"/>
                </tree>
            </field>
        </record>
        
        <!-- Approval Request Action -->
        <record id="action_approval_request" model="ir.actions.act_window">
            <field name="name">Approval Requests</field>
            <field name="res_model">tazweed.approval.request</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Approval Requests found
                </p>
            </field>
        </record>
    </data>
</odoo>
