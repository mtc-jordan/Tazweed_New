<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Workflow Instance Form View -->
        <record id="view_workflow_instance_form" model="ir.ui.view">
            <field name="name">Workflow Instance Form</field>
            <field name="model">tazweed.workflow.instance</field>
            <field name="arch" type="xml">
                <form string="Workflow Instance">
                    <header>
                        <button name="action_start" string="Start Workflow" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        <button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['approved', 'rejected', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Instance Name"/>
                            </h1>
                        </div>
                        
                        <!-- Basic Information -->
                        <group>
                            <group>
                                <field name="workflow_id"/>
                                <field name="reference_model"/>
                            </group>
                            <group>
                                <field name="reference_id"/>
                                <field name="current_step" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Timeline -->
                        <separator string="Timeline" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="initiated_by" readonly="1"/>
                                <field name="initiated_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="started_date" readonly="1"/>
                                <field name="completed_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Approvers -->
                        <separator string="Approvers" class="oe_inline"/>
                        <field name="approver_ids" widget="many2many_tags"/>
                        
                        <!-- Approvals -->
                        <separator string="Approvals" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="total_approvals" readonly="1"/>
                                <field name="completed_approvals" readonly="1"/>
                            </group>
                            <group>
                                <field name="pending_approvals" readonly="1"/>
                                <field name="execution_time" readonly="1" widget="float_time"/>
                            </group>
                        </group>
                        
                        <field name="approval_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="approver_id"/>
                                <field name="state"/>
                                <field name="comments"/>
                                <field name="approved_date"/>
                            </tree>
                        </field>
                        
                        <!-- Comments & Reason -->
                        <separator string="Additional Information" class="oe_inline"/>
                        <group>
                            <field name="comments" nolabel="1" placeholder="Comments"/>
                        </group>
                        
                        <group attrs="{'invisible': [('state', '!=', 'rejected')]}">
                            <field name="rejection_reason" nolabel="1" placeholder="Rejection Reason"/>
                        </group>
                        
                        <!-- Execution Logs -->
                        <separator string="Execution Logs" class="oe_inline"/>
                        <field name="execution_logs" nolabel="1" readonly="1">
                            <tree>
                                <field name="action"/>
                                <field name="description"/>
                                <field name="executed_by"/>
                                <field name="create_date"/>
                            </tree>
                        </field>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Workflow Instance Tree View -->
        <record id="view_workflow_instance_tree" model="ir.ui.view">
            <field name="name">Workflow Instance Tree</field>
            <field name="model">tazweed.workflow.instance</field>
            <field name="arch" type="xml">
                <tree string="Workflow Instances">
                    <field name="name"/>
                    <field name="workflow_id"/>
                    <field name="state"/>
                    <field name="initiated_by"/>
                    <field name="initiated_date"/>
                    <field name="completed_date"/>
                    <field name="pending_approvals"/>
                </tree>
            </field>
        </record>
        
        <!-- Workflow Instance Search View -->
        <record id="view_workflow_instance_search" model="ir.ui.view">
            <field name="name">Workflow Instance Search</field>
            <field name="model">tazweed.workflow.instance</field>
            <field name="arch" type="xml">
                <search string="Workflow Instances">
                    <field name="name"/>
                    <field name="workflow_id"/>
                    <separator/>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="filter_pending" string="Pending" domain="[('state', '=', 'pending')]"/>
                    <filter name="filter_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter name="filter_approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="filter_rejected" string="Rejected" domain="[('state', '=', 'rejected')]"/>
                </search>
            </field>
        </record>
        
        <!-- Workflow Instance Action -->
        <record id="action_workflow_instance" model="ir.actions.act_window">
            <field name="name">Workflow Instances</field>
            <field name="res_model">tazweed.workflow.instance</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Workflow Instances found
                </p>
            </field>
        </record>
    </data>
</odoo>
