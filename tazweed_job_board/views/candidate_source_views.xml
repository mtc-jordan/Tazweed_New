<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Candidate Source Form View -->
    <record id="view_candidate_source_form" model="ir.ui.view">
        <field name="name">candidate.source.form</field>
        <field name="model">candidate.source</field>
        <field name="arch" type="xml">
            <form string="Sourced Candidate">
                <header>
                    <button name="action_shortlist" type="object" string="Shortlist" class="btn-primary" states="new,reviewing"/>
                    <button name="action_contact" type="object" string="Contact" states="shortlisted"/>
                    <button name="action_reject" type="object" string="Reject" states="new,reviewing,shortlisted,contacted"/>
                    <button name="action_convert_to_applicant" type="object" string="Convert to Applicant" class="btn-success" states="shortlisted,contacted"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,reviewing,shortlisted,contacted,interviewing,hired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="candidate_name" placeholder="Candidate Name"/>
                        </h1>
                        <h4>
                            <field name="name" readonly="1"/>
                        </h4>
                    </div>
                    <group>
                        <group string="Source Information">
                            <field name="job_board_id"/>
                            <field name="job_posting_id"/>
                            <field name="hr_job_id"/>
                            <field name="applied_date"/>
                        </group>
                        <group string="Contact Information">
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="linkedin_url" widget="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Professional Info">
                            <group>
                                <group>
                                    <field name="current_title"/>
                                    <field name="current_company"/>
                                    <field name="experience_years"/>
                                    <field name="experience_level"/>
                                </group>
                                <group>
                                    <field name="education_level"/>
                                    <field name="education_field"/>
                                    <field name="languages"/>
                                </group>
                            </group>
                            <group string="Skills">
                                <field name="skills" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Salary and Availability">
                            <group>
                                <group>
                                    <field name="expected_salary"/>
                                    <field name="salary_currency"/>
                                    <field name="notice_period"/>
                                </group>
                                <group>
                                    <field name="available_from"/>
                                    <field name="willing_to_relocate"/>
                                    <field name="visa_status"/>
                                </group>
                            </group>
                        </page>
                        <page string="Location">
                            <group>
                                <group>
                                    <field name="country_id"/>
                                    <field name="city"/>
                                </group>
                                <group>
                                    <field name="nationality_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents">
                            <group>
                                <field name="resume" filename="resume_filename"/>
                                <field name="resume_filename" invisible="1"/>
                                <field name="cover_letter"/>
                            </group>
                        </page>
                        <page string="Scoring">
                            <group>
                                <group>
                                    <field name="match_score"/>
                                    <field name="ai_score"/>
                                </group>
                                <group>
                                    <field name="recruiter_rating" widget="priority"/>
                                    <field name="recruiter_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Candidate Source Tree View -->
    <record id="view_candidate_source_tree" model="ir.ui.view">
        <field name="name">candidate.source.tree</field>
        <field name="model">candidate.source</field>
        <field name="arch" type="xml">
            <tree string="Sourced Candidates">
                <field name="name"/>
                <field name="candidate_name"/>
                <field name="job_board_id"/>
                <field name="hr_job_id"/>
                <field name="current_title"/>
                <field name="email"/>
                <field name="match_score"/>
                <field name="state" widget="badge" decoration-success="state in ('shortlisted', 'hired')" decoration-warning="state == 'reviewing'" decoration-danger="state == 'rejected'"/>
                <field name="recruiter_id"/>
            </tree>
        </field>
    </record>

    <!-- Candidate Source Search View -->
    <record id="view_candidate_source_search" model="ir.ui.view">
        <field name="name">candidate.source.search</field>
        <field name="model">candidate.source</field>
        <field name="arch" type="xml">
            <search string="Search Candidates">
                <field name="candidate_name"/>
                <field name="email"/>
                <field name="job_board_id"/>
                <field name="hr_job_id"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="Shortlisted" name="shortlisted" domain="[('state', '=', 'shortlisted')]"/>
                <filter string="Hired" name="hired" domain="[('state', '=', 'hired')]"/>
                <separator/>
                <filter string="My Candidates" name="my_candidates" domain="[('recruiter_id', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Job Board" name="group_board" context="{'group_by': 'job_board_id'}"/>
                    <filter string="Job Position" name="group_job" context="{'group_by': 'hr_job_id'}"/>
                    <filter string="Recruiter" name="group_recruiter" context="{'group_by': 'recruiter_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Candidate Source Action -->
    <record id="action_candidate_source" model="ir.actions.act_window">
        <field name="name">Sourced Candidates</field>
        <field name="res_model">candidate.source</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_new': 1}</field>
    </record>
</odoo>
