<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ============================================== -->
    <!-- CLIENT REQUEST TYPE VIEWS -->
    <!-- ============================================== -->
    
    <!-- Request Type Tree View -->
    <record id="view_client_request_type_tree" model="ir.ui.view">
        <field name="name">client.request.type.tree</field>
        <field name="model">client.request.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="approval_type"/>
                <field name="sla_days"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- Request Type Form View -->
    <record id="view_client_request_type_form" model="ir.ui.view">
        <field name="name">client.request.type.form</field>
        <field name="model">client.request.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="approval_type"/>
                            <field name="sla_days"/>
                            <field name="priority_sla_days"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Notifications">
                            <group>
                                <group>
                                    <field name="notify_account_manager"/>
                                    <field name="notify_finance"/>
                                    <field name="notify_operations"/>
                                </group>
                            </group>
                        </page>
                        <page string="Form Configuration">
                            <group>
                                <group>
                                    <field name="requires_attachment"/>
                                    <field name="requires_worker_selection"/>
                                    <field name="requires_invoice_selection"/>
                                </group>
                                <group>
                                    <field name="requires_amount"/>
                                    <field name="requires_date_range"/>
                                </group>
                            </group>
                        </page>
                        <page string="Response Template">
                            <field name="response_template"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Request Type Action -->
    <record id="action_client_request_type" model="ir.actions.act_window">
        <field name="name">Request Types</field>
        <field name="res_model">client.request.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first request type
            </p>
            <p>
                Configure the types of requests clients can submit through the portal.
            </p>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- CLIENT REQUEST VIEWS -->
    <!-- ============================================== -->
    
    <!-- Client Request Tree View -->
    <record id="view_client_request_tree" model="ir.ui.view">
        <field name="name">client.request.tree</field>
        <field name="model">client.request</field>
        <field name="arch" type="xml">
            <tree decoration-danger="sla_status == 'overdue'" 
                  decoration-warning="sla_status == 'at_risk'"
                  decoration-muted="state in ['completed', 'cancelled', 'rejected']">
                <field name="reference"/>
                <field name="client_id"/>
                <field name="request_type_id"/>
                <field name="subject"/>
                <field name="priority"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'completed'"
                       decoration-info="state in ['submitted', 'under_review']"
                       decoration-warning="state in ['pending_info', 'in_progress']"
                       decoration-danger="state == 'rejected'"/>
                <field name="sla_status" widget="badge"
                       decoration-success="sla_status == 'on_track'"
                       decoration-warning="sla_status == 'at_risk'"
                       decoration-danger="sla_status == 'overdue'"/>
                <field name="assigned_to"/>
                <field name="expected_date"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    
    <!-- Client Request Kanban View -->
    <record id="view_client_request_kanban" model="ir.ui.view">
        <field name="name">client.request.kanban</field>
        <field name="model">client.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="reference"/>
                <field name="client_id"/>
                <field name="subject"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="sla_status"/>
                <field name="assigned_to"/>
                <field name="category"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <span t-if="record.priority.raw_value == 'urgent'" 
                                              class="badge bg-danger">Urgent</span>
                                        <span t-elif="record.priority.raw_value == 'high'" 
                                              class="badge bg-warning">High</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="subject"/>
                                    <div class="text-muted mt-1">
                                        <field name="client_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.sla_status.raw_value == 'overdue'" 
                                              class="badge bg-danger">Overdue</span>
                                        <span t-elif="record.sla_status.raw_value == 'at_risk'" 
                                              class="badge bg-warning">At Risk</span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="assigned_to" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Client Request Form View -->
    <record id="view_client_request_form" model="ir.ui.view">
        <field name="name">client.request.form</field>
        <field name="model">client.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" 
                            class="btn-primary" states="draft"/>
                    <button name="action_review" string="Start Review" type="object" 
                            class="btn-primary" states="submitted"/>
                    <button name="action_request_info" string="Request Info" type="object" 
                            states="submitted,under_review"/>
                    <button name="action_approve" string="Approve" type="object" 
                            class="btn-success" states="under_review"/>
                    <button name="action_start_processing" string="Start Processing" type="object" 
                            class="btn-primary" states="approved"/>
                    <button name="action_complete" string="Complete" type="object" 
                            class="btn-success" states="in_progress"/>
                    <button name="action_reject" string="Reject" type="object" 
                            class="btn-danger" states="submitted,under_review"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,submitted"/>
                    <button name="action_reopen" string="Reopen" type="object" 
                            states="completed,rejected,cancelled"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_review,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-paperclip" type="object" name="action_view_attachments">
                            <field name="attachment_count" widget="statinfo" string="Attachments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="portal_user_id" readonly="1"/>
                            <field name="request_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="category" invisible="1"/>
                        </group>
                        <group>
                            <field name="priority"/>
                            <field name="sla_status" widget="badge"
                                   decoration-success="sla_status == 'on_track'"
                                   decoration-warning="sla_status == 'at_risk'"
                                   decoration-danger="sla_status == 'overdue'"/>
                            <field name="expected_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="subject" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <notebook>
                        <page string="Request Details">
                            <group string="Description">
                                <field name="description" nolabel="1" 
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'pending_info'])]}"/>
                            </group>
                            <group string="Related Records" 
                                   attrs="{'invisible': [('category', 'not in', ['worker', 'invoice'])]}">
                                <group>
                                    <field name="worker_ids" widget="many2many_tags"
                                           attrs="{'invisible': [('category', '!=', 'worker')]}"/>
                                    <field name="invoice_id" 
                                           attrs="{'invisible': [('category', '!=', 'invoice')]}"/>
                                </group>
                                <group>
                                    <field name="amount" attrs="{'invisible': [('category', '!=', 'invoice')]}"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        <group string="Date Range">
                                <group>
                                    <field name="date_from"/>
                                </group>
                                <group>
                                    <field name="date_to"/>
                                </group>
                            </group>
                            <group string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Response" attrs="{'invisible': [('state', 'in', ['draft', 'submitted'])]}">
                            <group>
                                <field name="response" nolabel="1"/>
                            </group>
                            <group string="Response Attachments">
                                <field name="response_attachment_ids" widget="many2many_binary" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Assignment">
                            <group>
                                <group>
                                    <field name="assigned_to"/>
                                    <field name="assigned_team"/>
                                </group>
                                <group>
                                    <field name="submitted_date"/>
                                    <field name="completed_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Feedback" attrs="{'invisible': [('state', '!=', 'completed')]}">
                            <group>
                                <group>
                                    <field name="rating"/>
                                </group>
                            </group>
                            <group>
                                <field name="feedback" nolabel="1" placeholder="Client feedback..."/>
                            </group>
                        </page>
                        <page string="Internal Notes" groups="base.group_user">
                            <field name="internal_notes" placeholder="Internal notes (not visible to client)..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Client Request Search View -->
    <record id="view_client_request_search" model="ir.ui.view">
        <field name="name">client.request.search</field>
        <field name="model">client.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="client_id"/>
                <field name="subject"/>
                <field name="request_type_id"/>
                <field name="assigned_to"/>
                <separator/>
                <filter string="My Requests" name="my_requests" 
                        domain="[('assigned_to', '=', uid)]"/>
                <filter string="Unassigned" name="unassigned" 
                        domain="[('assigned_to', '=', False)]"/>
                <separator/>
                <filter string="Pending" name="pending" 
                        domain="[('state', 'in', ['submitted', 'under_review', 'pending_info'])]"/>
                <filter string="In Progress" name="in_progress" 
                        domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" 
                        domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Overdue" name="overdue" 
                        domain="[('sla_status', '=', 'overdue')]"/>
                <filter string="At Risk" name="at_risk" 
                        domain="[('sla_status', '=', 'at_risk')]"/>
                <separator/>
                <filter string="Urgent" name="urgent" 
                        domain="[('priority', 'in', ['urgent', 'high'])]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to'}"/>
                    <filter string="SLA Status" name="group_sla" context="{'group_by': 'sla_status'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Client Request Actions -->
    <record id="action_client_request_all" model="ir.actions.act_window">
        <field name="name">All Client Requests</field>
        <field name="res_model">client.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No client requests found
            </p>
            <p>
                Client requests submitted through the portal will appear here.
            </p>
        </field>
    </record>
    
    <record id="action_client_request_my" model="ir.actions.act_window">
        <field name="name">My Assigned Requests</field>
        <field name="res_model">client.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_my_requests': 1}</field>
    </record>
    
    <record id="action_client_request_overdue" model="ir.actions.act_window">
        <field name="name">Overdue Requests</field>
        <field name="res_model">client.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_overdue': 1}</field>
    </record>
    
    <!-- ============================================== -->
    <!-- CLIENT INVOICE REQUEST VIEWS -->
    <!-- ============================================== -->
    
    <record id="view_client_invoice_request_tree" model="ir.ui.view">
        <field name="name">client.invoice.request.tree</field>
        <field name="model">client.invoice.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="client_id"/>
                <field name="request_type"/>
                <field name="state" widget="badge"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    
    <record id="view_client_invoice_request_form" model="ir.ui.view">
        <field name="name">client.invoice.request.form</field>
        <field name="model">client.invoice.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="1"/>
                            <field name="client_id"/>
                            <field name="request_type"/>
                        </group>
                        <group>
                            <field name="invoice_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group attrs="{'invisible': [('request_type', '!=', 'correction')]}">
                                <field name="correction_details" nolabel="1"/>
                            </group>
                            <group attrs="{'invisible': [('request_type', '!=', 'payment_extension')]}">
                                <group>
                                    <field name="current_due_date"/>
                                    <field name="requested_due_date"/>
                                </group>
                                <group>
                                    <field name="extension_reason"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('request_type', '!=', 'payment_plan')]}">
                                <group>
                                    <field name="total_amount"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="installment_count"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('request_type', '!=', 'statement')]}">
                                <group>
                                    <field name="statement_from"/>
                                    <field name="statement_to"/>
                                </group>
                            </group>
                        </page>
                        <page string="Response">
                            <field name="response"/>
                            <field name="response_attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_client_invoice_request" model="ir.actions.act_window">
        <field name="name">Invoice Requests</field>
        <field name="res_model">client.invoice.request</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <!-- ============================================== -->
    <!-- CLIENT WORKER REQUEST VIEWS -->
    <!-- ============================================== -->
    
    <record id="view_client_worker_request_tree" model="ir.ui.view">
        <field name="name">client.worker.request.tree</field>
        <field name="model">client.worker.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="reference"/>
                <field name="client_id"/>
                <field name="request_type"/>
                <field name="priority"/>
                <field name="state" widget="badge"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>
    
    <record id="view_client_worker_request_form" model="ir.ui.view">
        <field name="name">client.worker.request.form</field>
        <field name="model">client.worker.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="1"/>
                            <field name="client_id"/>
                            <field name="request_type"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="worker_ids" widget="many2many_tags"/>
                            <field name="placement_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Additional Workers" 
                              attrs="{'invisible': [('request_type', '!=', 'additional')]}">
                            <group>
                                <group>
                                    <field name="job_title"/>
                                    <field name="quantity"/>
                                    <field name="required_date"/>
                                </group>
                            </group>
                            <group string="Requirements">
                                <field name="requirements" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Replacement" 
                              attrs="{'invisible': [('request_type', '!=', 'replacement')]}">
                            <group>
                                <field name="replacement_reason"/>
                            </group>
                        </page>
                        <page string="Extension" 
                              attrs="{'invisible': [('request_type', '!=', 'extension')]}">
                            <group>
                                <group>
                                    <field name="current_end_date"/>
                                    <field name="requested_end_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Issue Details" 
                              attrs="{'invisible': [('request_type', 'not in', ['performance', 'attendance', 'conduct'])]}">
                            <group>
                                <field name="issue_date"/>
                            </group>
                            <group>
                                <field name="issue_description" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Appreciation" 
                              attrs="{'invisible': [('request_type', '!=', 'appreciation')]}">
                            <field name="appreciation_message" nolabel="1"/>
                        </page>
                        <page string="Response">
                            <field name="response"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="action_client_worker_request" model="ir.actions.act_window">
        <field name="name">Worker Requests</field>
        <field name="res_model">client.worker.request</field>
        <field name="view_mode">tree,form</field>
    </record>
    
</odoo>
