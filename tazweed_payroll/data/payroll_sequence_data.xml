<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Payslip Sequence -->
        <record id="seq_payslip" model="ir.sequence">
            <field name="name">Payslip Sequence</field>
            <field name="code">hr.payslip</field>
            <field name="prefix">SLIP/%(year)s/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Payslip Batch Sequence -->
        <record id="seq_payslip_run" model="ir.sequence">
            <field name="name">Payslip Batch Sequence</field>
            <field name="code">hr.payslip.run</field>
            <field name="prefix">BATCH/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Loan Sequence -->
        <record id="seq_loan" model="ir.sequence">
            <field name="name">Loan Sequence</field>
            <field name="code">tazweed.payroll.loan</field>
            <field name="prefix">LOAN/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- WPS File Sequence -->
        <record id="seq_wps" model="ir.sequence">
            <field name="name">WPS File Sequence</field>
            <field name="code">tazweed.wps.file</field>
            <field name="prefix">WPS/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Gratuity Sequence -->
        <record id="seq_gratuity" model="ir.sequence">
            <field name="name">Gratuity Sequence</field>
            <field name="code">tazweed.employee.gratuity</field>
            <field name="prefix">GRAT/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
