<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="signature_template_view_tree" model="ir.ui.view">
        <field name="name">signature.template.tree</field>
        <field name="model">signature.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="document_type" widget="badge"/>
                <field name="default_signers"/>
                <field name="default_expiry_days"/>
                <field name="request_count"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="signature_template_view_form" model="ir.ui.view">
        <field name="name">signature.template.form</field>
        <field name="model">signature.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="request_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Template Name"/></h1>
                    </div>
                    <group>
                        <group string="Document Settings">
                            <field name="document_type"/>
                            <field name="template_file" filename="template_filename"/>
                            <field name="template_filename" invisible="1"/>
                            <field name="description"/>
                        </group>
                        <group string="Signer Settings">
                            <field name="default_signers"/>
                            <field name="require_sequential"/>
                            <field name="default_expiry_days"/>
                        </group>
                    </group>
                    <group>
                        <group string="Reminder Settings">
                            <field name="reminder_enabled"/>
                            <field name="reminder_days" attrs="{'invisible': [('reminder_enabled', '=', False)]}"/>
                        </group>
                        <group string="Other">
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="signature_template_view_kanban" model="ir.ui.view">
        <field name="name">signature.template.kanban</field>
        <field name="model">signature.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="document_type"/>
                <field name="request_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="document_type" widget="badge"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <span><field name="request_count"/> requests</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_signature_template" model="ir.actions.act_window">
        <field name="name">Signature Templates</field>
        <field name="res_model">signature.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first signature template</p>
            <p>Templates help you quickly create signature requests with predefined settings.</p>
        </field>
    </record>
</odoo>
