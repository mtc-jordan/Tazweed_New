<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_document_tree" model="ir.ui.view">
        <field name="name">tazweed.employee.document.tree</field>
        <field name="model">tazweed.employee.document</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='expired'" decoration-warning="state=='expiring'">
                <field name="employee_id"/>
                <field name="document_type_id"/>
                <field name="document_number"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="state" widget="badge" decoration-success="state=='valid'" decoration-warning="state=='expiring'" decoration-danger="state=='expired'"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_document_form" model="ir.ui.view">
        <field name="name">tazweed.employee.document.form</field>
        <field name="model">tazweed.employee.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_renew" string="Renew" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'valid')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="document_type_id"/>
                            <field name="document_number"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="issue_place"/>
                            <field name="issue_authority"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="attachment" filename="attachment_name"/>
                            <field name="attachment_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="days_to_expiry"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_documents" model="ir.actions.act_window">
        <field name="name">Employee Documents</field>
        <field name="res_model">tazweed.employee.document</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
