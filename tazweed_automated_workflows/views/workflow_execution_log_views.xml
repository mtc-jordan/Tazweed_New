<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Workflow Execution Log Tree View -->
    <record id="view_workflow_execution_log_tree" model="ir.ui.view">
        <field name="name">tazweed.workflow.execution.log.tree</field>
        <field name="model">tazweed.workflow.execution.log</field>
        <field name="arch" type="xml">
            <tree string="Execution Logs" default_order="create_date desc">
                <field name="create_date" string="Date/Time"/>
                <field name="instance_id" string="Workflow Instance"/>
                <field name="action"/>
                <field name="executed_by"/>
                <field name="description" optional="show"/>
            </tree>
        </field>
    </record>
    
    <!-- Workflow Execution Log Form View -->
    <record id="view_workflow_execution_log_form" model="ir.ui.view">
        <field name="name">tazweed.workflow.execution.log.form</field>
        <field name="model">tazweed.workflow.execution.log</field>
        <field name="arch" type="xml">
            <form string="Execution Log" create="false" edit="false">
                <sheet>
                    <group>
                        <group string="Log Information">
                            <field name="executed_date" string="Date/Time"/>
                            <field name="instance_id" string="Workflow Instance"/>
                            <field name="action"/>
                            <field name="executed_by"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Workflow Execution Log Search View -->
    <record id="view_workflow_execution_log_search" model="ir.ui.view">
        <field name="name">tazweed.workflow.execution.log.search</field>
        <field name="model">tazweed.workflow.execution.log</field>
        <field name="arch" type="xml">
            <search string="Search Logs">
                <field name="instance_id"/>
                <field name="action"/>
                <field name="executed_by"/>
                <separator/>
                <filter name="filter_today" string="Today" 
                        domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_week" string="This Week" 
                        domain="[('create_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_approvals" string="Approvals" 
                        domain="[('action', 'in', ['approved', 'rejected'])]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_instance" string="Instance" context="{'group_by': 'instance_id'}"/>
                    <filter name="group_by_action" string="Action" context="{'group_by': 'action'}"/>
                    <filter name="group_by_user" string="User" context="{'group_by': 'executed_by'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Workflow Execution Log Action -->
    <record id="action_workflow_execution_log" model="ir.actions.act_window">
        <field name="name">Execution Logs</field>
        <field name="res_model">tazweed.workflow.execution.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No execution logs yet
            </p>
            <p>
                Execution logs are automatically created when workflow actions are performed.
            </p>
        </field>
    </record>
    
</odoo>
