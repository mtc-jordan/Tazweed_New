            <field name="code">pending_signatures</field>
            <field name="sequence">190</field>
            <field name="category">performance</field>
            <field name="value_type">custom</field>
            <field name="display_format">number</field>
            <field name="icon">fa-signature</field>
            <field name="color">#607D8B</field>
            <field name="show_trend">True</field>
        </record>
        
