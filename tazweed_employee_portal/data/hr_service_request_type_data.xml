        <!-- ============================================== -->
        
        <!-- Name Change Request -->
        <record id="request_type_name_change" model="hr.service.request.type">
            <field name="name">Name Change Request</field>
            <field name="code">NAME_CHANGE</field>
            <field name="category">service</field>
            <field name="sequence">20</field>
            <field name="description">Request to update name in company records (due to marriage, legal name change, etc.)</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">5</field>
            <field name="priority_sla_days">3</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Name Change Request</h5>
                    <p>Required documents:</p>
                    <ul>
                        <li>Legal document supporting name change (marriage certificate, court order, etc.)</li>
                        <li>Updated Emirates ID (if applicable)</li>
                        <li>Updated passport (if applicable)</li>
                    </ul>
                    <p><strong>Note:</strong> This will update your name across all company systems and documents.</p>
                </div>
            ]]></field>
        </record>
        
        <!-- Bank Account Change -->
        <record id="request_type_bank_change" model="hr.service.request.type">
            <field name="name">Salary Bank Account Change</field>
            <field name="code">BANK_CHANGE</field>
            <field name="category">service</field>
            <field name="sequence">21</field>
            <field name="description">Request to change salary bank account details.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">5</field>
            <field name="priority_sla_days">3</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-warning">
                    <h5>Bank Account Change Request</h5>
                    <p>Required documents:</p>
                    <ul>
                        <li>Bank account details (IBAN, account number)</li>
                        <li>Bank letter or cancelled cheque</li>
                    </ul>
                    <p><strong>Important:</strong> Changes will be effective from the next payroll cycle.</p>
                </div>
            ]]></field>
        </record>
        
