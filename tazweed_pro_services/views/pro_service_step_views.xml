<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Step Tree View -->
    <record id="view_pro_service_step_tree" model="ir.ui.view">
        <field name="name">pro.service.step.tree</field>
        <field name="model">pro.service.step</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="service_id"/>
                <field name="name"/>
                <field name="step_type"/>
                <field name="location"/>
                <field name="government_authority_id"/>
                <field name="estimated_duration"/>
                <field name="waiting_days"/>
                <field name="requires_customer_presence"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Service Step Form View -->
    <record id="view_pro_service_step_form" model="ir.ui.view">
        <field name="name">pro.service.step.form</field>
        <field name="model">pro.service.step</field>
        <field name="arch" type="xml">
            <form string="Service Step">
                <sheet>
                    <group>
                        <group>
                            <field name="service_id"/>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="step_type"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="government_authority_id"/>
                            <field name="estimated_duration"/>
                            <field name="waiting_days"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="requires_customer_presence"/>
                            <field name="requires_original_documents"/>
                            <field name="auto_proceed"/>
                        </group>
                        <group>
                            <field name="government_fee"/>
                            <field name="service_fee"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Instructions" name="instructions">
                            <field name="instructions"/>
                        </page>
                        <page string="Documents" name="documents">
                            <group>
                                <field name="required_document_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="output_document_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="description"/>
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Step Action -->
    <record id="action_pro_service_step" model="ir.actions.act_window">
        <field name="name">Service Steps</field>
        <field name="res_model">pro.service.step</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
