<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Unified Document Tree View -->
    <record id="view_unified_document_tree" model="ir.ui.view">
        <field name="name">document.center.unified.tree</field>
        <field name="model">document.center.unified</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'expired'" decoration-warning="state == 'expiring'" decoration-muted="state == 'archived'">
                <field name="display_name"/>
                <field name="document_category"/>
                <field name="source_module"/>
                <field name="employee_id"/>
                <field name="candidate_id" optional="hide"/>
                <field name="department_id"/>
                <field name="document_number"/>
                <field name="issue_date" optional="hide"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="is_verified"/>
                <field name="state" widget="badge" decoration-danger="state == 'expired'" decoration-warning="state == 'expiring'" decoration-success="state == 'valid'"/>
            </tree>
        </field>
    </record>

    <!-- Unified Document Form View -->
    <record id="view_unified_document_form" model="ir.ui.view">
        <field name="name">document.center.unified.form</field>
        <field name="model">document.center.unified</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_verify" string="Verify Document" type="object" class="btn-primary" attrs="{'invisible': [('is_verified', '=', True)]}"/>
                    <button name="action_create_new_version" string="New Version" type="object" class="btn-secondary"/>
                    <button name="action_view_source" string="View Source" type="object" class="btn-secondary" attrs="{'invisible': [('source_record_id', '=', False)]}"/>
                    <button name="action_archive" string="Archive" type="object" class="btn-secondary" attrs="{'invisible': [('state', '=', 'archived')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,valid,expiring,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_source" type="object" class="oe_stat_button" icon="fa-external-link" attrs="{'invisible': [('source_record_id', '=', False)]}">
                            <span class="o_stat_text">Source Record</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'expired')]}"/>
                    <widget name="web_ribbon" title="Expiring" bg_color="bg-warning" attrs="{'invisible': [('state', '!=', 'expiring')]}"/>
                    <widget name="web_ribbon" title="Verified" bg_color="bg-success" attrs="{'invisible': [('is_verified', '!=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Document Information">
                            <field name="name"/>
                            <field name="document_category"/>
                            <field name="document_type_id"/>
                            <field name="document_number"/>
                            <field name="source_module" readonly="1"/>
                        </group>
                        <group string="Related To">
                            <field name="employee_id"/>
                            <field name="candidate_id"/>
                            <field name="department_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Dates">
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                            <field name="days_to_expiry" readonly="1"/>
                            <field name="expiry_status" readonly="1"/>
                        </group>
                        <group string="Issue Details">
                            <field name="issue_place"/>
                            <field name="issue_authority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attachment" name="attachment">
                            <group>
                                <field name="attachment" filename="attachment_name"/>
                                <field name="attachment_name"/>
                                <field name="file_size"/>
                            </group>
                        </page>
                        <page string="Verification" name="verification">
                            <group>
                                <group>
                                    <field name="is_verified"/>
                                    <field name="verified_by_id"/>
                                    <field name="verified_date"/>
                                </group>
                                <group>
                                    <field name="verification_notes"/>
                                </group>
                            </group>
                        </page>
                        <page string="Version History" name="version">
                            <group>
                                <field name="version"/>
                                <field name="is_latest"/>
                                <field name="previous_version_id"/>
                            </group>
                        </page>
                        <page string="Source Information" name="source">
                            <group>
                                <field name="source_model" readonly="1"/>
                                <field name="source_record_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this document..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Unified Document Kanban View -->
    <record id="view_unified_document_kanban" model="ir.ui.view">
        <field name="name">document.center.unified.kanban</field>
        <field name="model">document.center.unified</field>
        <field name="arch" type="xml">
            <kanban default_group_by="document_category">
                <field name="id"/>
                <field name="display_name"/>
                <field name="document_category"/>
                <field name="employee_id"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="state"/>
                <field name="is_verified"/>
                <field name="source_module"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <span t-if="record.is_verified.raw_value" class="badge badge-success">
                                        <i class="fa fa-check"/> Verified
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.employee_id.value">
                                        <i class="fa fa-user text-muted"/> <field name="employee_id"/>
                                    </div>
                                    <div t-if="record.expiry_date.value">
                                        <i class="fa fa-calendar text-muted"/> Expires: <field name="expiry_date"/>
                                    </div>
                                    <div>
                                        <span class="badge badge-pill" t-attf-class="#{record.state.raw_value == 'expired' ? 'badge-danger' : record.state.raw_value == 'expiring' ? 'badge-warning' : 'badge-success'}">
                                            <t t-if="record.days_to_expiry.raw_value &lt; 0">Expired</t>
                                            <t t-elif="record.days_to_expiry.raw_value &lt;= 30"><field name="days_to_expiry"/> days left</t>
                                            <t t-else="">Valid</t>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-secondary">
                                            <field name="source_module"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Unified Document Search View -->
    <record id="view_unified_document_search" model="ir.ui.view">
        <field name="name">document.center.unified.search</field>
        <field name="model">document.center.unified</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="display_name"/>
                <field name="employee_id"/>
                <field name="candidate_id"/>
                <field name="department_id"/>
                <field name="document_number"/>
                <field name="document_type_id"/>
                <separator/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Expiring Soon" name="expiring" domain="[('state', '=', 'expiring')]"/>
                <filter string="Valid" name="valid" domain="[('state', '=', 'valid')]"/>
                <separator/>
                <filter string="Expiring in 7 Days" name="expiring_7" domain="[('expiry_status', '=', 'expiring_7')]"/>
                <filter string="Expiring in 15 Days" name="expiring_15" domain="[('expiry_status', 'in', ['expiring_7', 'expiring_15'])]"/>
                <filter string="Expiring in 30 Days" name="expiring_30" domain="[('expiry_status', 'in', ['expiring_7', 'expiring_15', 'expiring_30'])]"/>
                <separator/>
                <filter string="Verified" name="verified" domain="[('is_verified', '=', True)]"/>
                <filter string="Not Verified" name="not_verified" domain="[('is_verified', '=', False)]"/>
                <separator/>
                <filter string="Identity Documents" name="identity" domain="[('document_category', '=', 'identity')]"/>
                <filter string="Visa &amp; Work Permits" name="visa" domain="[('document_category', '=', 'visa')]"/>
                <filter string="Contracts" name="contract" domain="[('document_category', '=', 'contract')]"/>
                <filter string="Certificates" name="certificate" domain="[('document_category', '=', 'certificate')]"/>
                <filter string="Medical" name="medical" domain="[('document_category', '=', 'medical')]"/>
                <separator/>
                <filter string="From HR Core" name="core" domain="[('source_module', '=', 'core')]"/>
                <filter string="From Placement" name="placement" domain="[('source_module', '=', 'placement')]"/>
                <filter string="From Payroll" name="payroll" domain="[('source_module', '=', 'payroll')]"/>
                <filter string="From Leave" name="leave" domain="[('source_module', '=', 'leave')]"/>
                <filter string="Manual Upload" name="manual" domain="[('source_module', '=', 'manual')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'document_category'}"/>
                    <filter string="Source Module" name="group_source" context="{'group_by': 'source_module'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Expiry Status" name="group_expiry" context="{'group_by': 'expiry_status'}"/>
                    <filter string="Document Type" name="group_type" context="{'group_by': 'document_type_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Unified Document Action -->
    <record id="action_unified_document" model="ir.actions.act_window">
        <field name="name">All Documents</field>
        <field name="res_model">document.center.unified</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_unified_document_search"/>
        <field name="context">{'search_default_valid': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents found
            </p>
            <p>
                This is the central document hub. Documents from all HR modules appear here.
                Click "Sync Documents" to import documents from other modules.
            </p>
        </field>
    </record>

    <!-- Expiring Documents Action -->
    <record id="action_expiring_documents" model="ir.actions.act_window">
        <field name="name">Expiring Documents</field>
        <field name="res_model">document.center.unified</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_unified_document_search"/>
        <field name="domain">[('state', 'in', ['expiring', 'expired'])]</field>
        <field name="context">{'search_default_expiring_30': 1}</field>
    </record>

    <!-- Expired Documents Action -->
    <record id="action_expired_documents" model="ir.actions.act_window">
        <field name="name">Expired Documents</field>
        <field name="res_model">document.center.unified</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_unified_document_search"/>
        <field name="domain">[('state', '=', 'expired')]</field>
    </record>

    <!-- Server Action to Sync Documents -->
    <record id="action_sync_all_documents" model="ir.actions.server">
        <field name="name">Sync All Documents</field>
        <field name="model_id" ref="model_document_center_unified"/>
        <field name="binding_model_id" ref="model_document_center_unified"/>
        <field name="state">code</field>
        <field name="code">
model.sync_all_documents()
action = {'type': 'ir.actions.client', 'tag': 'display_notification', 'params': {'title': 'Success', 'message': 'Documents synchronized from all modules.', 'type': 'success'}}
        </field>
    </record>
</odoo>
