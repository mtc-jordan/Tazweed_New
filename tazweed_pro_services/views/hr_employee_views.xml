<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend HR Employee Form View -->
    <record id="view_employee_form_pro" model="ir.ui.view">
        <field name="name">hr.employee.form.pro</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_view_pro_requests" type="object" 
                        class="oe_stat_button" icon="fa-id-card">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="pro_request_count"/>
                        </span>
                        <span class="o_stat_text">PRO Requests</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <!-- Add PRO Request button to employee kanban -->
    <record id="hr_kanban_view_employees_pro" model="ir.ui.view">
        <field name="name">hr.employee.kanban.pro</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
            <field name="id" position="after">
                <field name="active_pro_requests"/>
            </field>
        </field>
    </record>
</odoo>
