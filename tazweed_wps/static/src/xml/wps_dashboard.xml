<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="tazweed_wps.WPSDashboard" owl="1">
        <div class="wps-dashboard o_action">
            <div class="container-fluid py-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="mb-0">
                        <i class="fa fa-bank me-2"/>WPS Dashboard
                    </h2>
                    <button class="btn btn-primary" t-on-click="createNewWPS">
                        <i class="fa fa-plus me-1"/>New WPS File
                    </button>
                </div>
                
                <!-- Loading State -->
                <div t-if="state.loading" class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-3x"/>
                    <p class="mt-3">Loading dashboard...</p>
                </div>
                
                <!-- Dashboard Content -->
                <div t-if="!state.loading and state.data">
                    <!-- KPI Cards -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 opacity-75">Total WPS Files</h6>
                                            <h2 class="card-title mb-0" t-esc="state.data.summary?.total_files || 0"/>
                                        </div>
                                        <i class="fa fa-file-text fa-2x opacity-50"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 opacity-75">Pending Submission</h6>
                                            <h2 class="card-title mb-0" t-esc="state.data.summary?.pending_submission || 0"/>
                                        </div>
                                        <i class="fa fa-clock-o fa-2x opacity-50"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 opacity-75">Processed</h6>
                                            <h2 class="card-title mb-0" t-esc="state.data.summary?.processed || 0"/>
                                        </div>
                                        <i class="fa fa-check-circle fa-2x opacity-50"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <h6 class="card-subtitle mb-2 opacity-75">Compliance Rate</h6>
                                            <h2 class="card-title mb-0">
                                                <t t-esc="(state.data.compliance?.rate || 0).toFixed(1)"/>%
                                            </h2>
                                        </div>
                                        <i class="fa fa-shield fa-2x opacity-50"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Second Row KPIs -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Draft Files</h6>
                                    <h3 class="card-title text-secondary" t-esc="state.data.summary?.draft_files || 0"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Submitted</h6>
                                    <h3 class="card-title text-warning" t-esc="state.data.summary?.submitted || 0"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Rejected</h6>
                                    <h3 class="card-title text-danger" t-esc="state.data.summary?.rejected || 0"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Total Employees</h6>
                                    <h3 class="card-title" t-esc="state.data.employees?.total || 0"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="row g-3 mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Quick Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <button class="btn btn-outline-primary" t-on-click="openWPSFiles">
                                            <i class="fa fa-file-text me-1"/>All WPS Files
                                        </button>
                                        <button class="btn btn-outline-success" t-on-click="openCompliance">
                                            <i class="fa fa-shield me-1"/>Compliance Reports
                                        </button>
                                        <button class="btn btn-outline-secondary" t-on-click="openBanks">
                                            <i class="fa fa-bank me-1"/>UAE Banks
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Charts -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-8">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">WPS Trend (Last 6 Months)</h5>
                                </div>
                                <div class="card-body">
                                    <div style="height: 300px;">
                                        <canvas t-ref="trendChart"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">Status Distribution</h5>
                                </div>
                                <div class="card-body">
                                    <div style="height: 300px;">
                                        <canvas t-ref="statusChart"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Files Table -->
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Recent WPS Files</h5>
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-hover mb-0">
                                        <thead>
                                            <tr>
                                                <th>Reference</th>
                                                <th>Period</th>
                                                <th>Employees</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.data.recent_files || []" t-as="file" t-key="file.id">
                                                <tr>
                                                    <td t-esc="file.name"/>
                                                    <td t-esc="file.period"/>
                                                    <td t-esc="file.employees"/>
                                                    <td t-esc="formatCurrency(file.amount)"/>
                                                    <td>
                                                        <span t-attf-class="badge bg-#{file.state === 'processed' ? 'success' : file.state === 'submitted' ? 'warning' : file.state === 'rejected' ? 'danger' : 'secondary'}"
                                                              t-esc="file.state"/>
                                                    </td>
                                                </tr>
                                            </t>
                                            <tr t-if="!state.data.recent_files?.length">
                                                <td colspan="5" class="text-center text-muted py-4">
                                                    No WPS files yet
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
    
</templates>
