            <field name="sla_days">1</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- Personal Information Update -->
        <record id="request_type_personal_update" model="hr.service.request.type">
            <field name="name">Personal Information Update</field>
            <field name="code">PERSONAL_UPD</field>
            <field name="category">service</field>
            <field name="sequence">23</field>
            <field name="description">Update personal information (address, phone, marital status, etc.)</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- Dependent Addition -->
        <record id="request_type_dependent_add" model="hr.service.request.type">
            <field name="name">Add/Update Dependents</field>
            <field name="code">DEPENDENT_ADD</field>
            <field name="category">service</field>
            <field name="sequence">24</field>
            <field name="description">Add or update dependent information for insurance and benefits.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">5</field>
            <field name="priority_sla_days">3</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-info">
                    <h5>Dependent Update Request</h5>
                    <p>Required documents:</p>
                    <ul>
                        <li>Dependent's passport copy</li>
                        <li>Dependent's Emirates ID (if applicable)</li>
                        <li>Relationship proof (marriage certificate, birth certificate)</li>
                    </ul>
                </div>
            ]]></field>
        </record>
        
        <!-- Insurance Card Request -->
        <record id="request_type_insurance_card" model="hr.service.request.type">
            <field name="name">Insurance Card Request</field>
            <field name="code">INSURANCE_CARD</field>
            <field name="category">service</field>
            <field name="sequence">25</field>
            <field name="description">Request for new or replacement insurance card.</field>
