<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- All Requests Action (HR) -->
    <record id="action_hr_service_request_all" model="ir.actions.act_window">
        <field name="name">HR Service Requests</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_pending_approval': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No HR service requests found
            </p>
            <p>
                Employees can submit requests for certificates, documents, and HR services.
            </p>
        </field>
    </record>
    
    

    
    <!-- ============================================== -->
    <!-- HR SERVICE REQUEST TYPE VIEWS -->
    <!-- ============================================== -->
    
    <!-- Request Type Tree View -->
    <record id="view_hr_service_request_type_tree" model="ir.ui.view">
        <field name="name">hr.service.request.type.tree</field>
        <field name="model">hr.service.request.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="approval_type"/>
                <field name="sla_days"/>
                <field name="request_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <!-- Request Type Form View -->
    <record id="view_hr_service_request_type_form" model="ir.ui.view">
        <field name="name">hr.service.request.type.form</field>
        <field name="model">hr.service.request.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_hr_service_request_all)d" type="action"
                                class="oe_stat_button" icon="fa-file-text-o"
                                context="{'search_default_request_type_id': active_id}">
                            <field name="request_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Request Type Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="requires_approval"/>
                            <field name="approval_type" attrs="{'invisible': [('requires_approval', '=', False)]}"/>
                            <field name="sla_days"/>
                            <field name="priority_sla_days"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Instructions" name="instructions">
                            <field name="instructions"/>
                        </page>
                        <page string="Fees" name="fees">
                            <group>
                                <group>
                                    <field name="has_fee"/>
                                    <field name="fee_amount" attrs="{'invisible': [('has_fee', '=', False)]}"/>
                                    <field name="fee_currency_id" attrs="{'invisible': [('has_fee', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Statistics" name="stats">
                            <group>
                                <group>
                                    <field name="request_count"/>
                                    <field name="avg_processing_time"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Request Type Action -->
    <record id="action_hr_service_request_type" model="ir.actions.act_window">
        <field name="name">Request Types</field>
        <field name="res_model">hr.service.request.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new HR service request type
            </p>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- HR SERVICE REQUEST VIEWS -->
    <!-- ============================================== -->
    
    <!-- Request Tree View -->
    <record id="view_hr_service_request_tree" model="ir.ui.view">
        <field name="name">hr.service.request.tree</field>
        <field name="model">hr.service.request</field>
        <field name="arch" type="xml">
            <tree decoration-danger="sla_status == 'overdue'" 
                  decoration-warning="sla_status == 'at_risk'"
                  decoration-muted="state in ['cancelled', 'rejected']">
                <field name="reference"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="request_type_id"/>
                <field name="category" optional="hide"/>
                <field name="request_date"/>
                <field name="priority"/>
                <field name="expected_date"/>
                <field name="sla_status" widget="badge" 
                       decoration-success="sla_status == 'on_track'"
                       decoration-warning="sla_status == 'at_risk'"
                       decoration-danger="sla_status == 'overdue'"/>
                <field name="assigned_to" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state in ['draft', 'submitted']"
                       decoration-warning="state in ['manager_approval', 'hr_approval']"
                       decoration-primary="state == 'processing'"
                       decoration-success="state in ['ready', 'completed']"
                       decoration-danger="state in ['rejected', 'cancelled']"/>
            </tree>
        </field>
    </record>
    
    <!-- Request Form View -->
    <record id="view_hr_service_request_form" model="ir.ui.view">
        <field name="name">hr.service.request.form</field>
        <field name="model">hr.service.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit Request" type="object"
                            class="btn-primary" states="draft"/>
                    <button name="action_manager_approve" string="Approve" type="object"
                            class="btn-primary" states="manager_approval"
                            groups="hr.group_hr_user"/>
                    <button name="action_hr_approve" string="Approve" type="object"
                            class="btn-primary" states="hr_approval"
                            groups="hr.group_hr_user"/>
                    <button name="action_reject" string="Reject" type="object"
                            class="btn-danger" states="manager_approval,hr_approval"
                            groups="hr.group_hr_user"/>
                    <button name="action_start_processing" string="Start Processing" type="object"
                            states="processing" groups="hr.group_hr_user"/>
                    <button name="action_mark_ready" string="Mark Ready" type="object"
                            class="btn-success" states="processing"
                            groups="hr.group_hr_user"/>
                    <button name="action_mark_collected" string="Mark Collected" type="object"
                            class="btn-success" states="ready"
                            groups="hr.group_hr_user"/>
                    <button name="action_complete" string="Complete" type="object"
                            class="btn-success" states="ready"
                            groups="hr.group_hr_user"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            states="draft,submitted,manager_approval,hr_approval"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                            states="cancelled,rejected"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,hr_approval,processing,ready,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_hr_service_request_all)d" type="action"
                                class="oe_stat_button" icon="fa-paperclip"
                                attrs="{'invisible': [('document_attachment_ids', '=', [])]}">
                            <field name="document_attachment_ids" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" 
                            attrs="{'invisible': [('state', '!=', 'rejected')]}"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-secondary" 
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <div class="oe_title">
                        <label for="reference"/>
                        <h1>
                            <field name="reference" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="department_id"/>
                            <field name="job_id"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="request_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="category"/>
                            <field name="request_date"/>
                            <field name="priority"/>
                        </group>
                    </group>
                    
                    <!-- SLA Information -->
                    <group string="SLA Information" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <group>
                            <field name="expected_date"/>
                            <field name="sla_status" widget="badge"
                                   decoration-success="sla_status == 'on_track'"
                                   decoration-warning="sla_status == 'at_risk'"
                                   decoration-danger="sla_status == 'overdue'"/>
                        </group>
                        <group>
                            <field name="assigned_to" groups="hr.group_hr_user"/>
                            <field name="completed_date" attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Request Details" name="details">
                            <group>
                                <field name="reason" placeholder="Please explain why you need this document/service..."
                                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                            <group>
                                <group>
                                    <field name="purpose"/>
                                    <field name="purpose_other" attrs="{'invisible': [('purpose', '!=', 'other')]}"/>
                                    <field name="addressed_to" placeholder="e.g., Emirates NBD Bank"/>
                                </group>
                                <group>
                                    <field name="language"/>
                                    <field name="copies_needed"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('category', 'not in', ['document', 'financial'])]}">
                                <group>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </group>
                            </group>
                            <group>
                                <field name="additional_info" placeholder="Any additional information..."/>
                            </group>
                        </page>
                        
                        <page string="Approvals" name="approvals" 
                              attrs="{'invisible': [('state', '=', 'draft')]}">
                            <group>
                                <group string="Manager Approval" 
                                       attrs="{'invisible': [('manager_approved', '=', False), ('state', 'not in', ['manager_approval'])]}">
                                    <field name="manager_approved"/>
                                    <field name="manager_approved_by"/>
                                    <field name="manager_approved_date"/>
                                    <field name="manager_comments"/>
                                </group>
                                <group string="HR Approval"
                                       attrs="{'invisible': [('hr_approved', '=', False), ('state', 'not in', ['hr_approval'])]}">
                                    <field name="hr_approved"/>
                                    <field name="hr_approved_by"/>
                                    <field name="hr_approved_date"/>
                                    <field name="hr_comments"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('state', '!=', 'rejected')]}">
                                <group string="Rejection Details">
                                    <field name="rejected_by"/>
                                    <field name="rejected_date"/>
                                    <field name="rejection_reason"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Processing" name="processing" groups="hr.group_hr_user">
                            <group>
                                <group>
                                    <field name="assigned_to"/>
                                </group>
                                <group>
                                    <field name="collected" attrs="{'invisible': [('state', 'not in', ['ready', 'completed'])]}"/>
                                    <field name="collected_date" attrs="{'invisible': [('collected', '=', False)]}"/>
                                </group>
                            </group>
                            <group>
                                <field name="processing_notes"/>
                            </group>
                            <group string="Generated Documents">
                                <field name="document_attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                        
                        <page string="Fees" name="fees" attrs="{'invisible': [('fee_applicable', '=', False)]}">
                            <group>
                                <group>
                                    <field name="fee_applicable"/>
                                    <field name="fee_amount"/>
                                </group>
                                <group>
                                    <field name="fee_paid"/>
                                    <field name="fee_paid_date" attrs="{'invisible': [('fee_paid', '=', False)]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Request Kanban View -->
    <record id="view_hr_service_request_kanban" model="ir.ui.view">
        <field name="name">hr.service.request.kanban</field>
        <field name="model">hr.service.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="reference"/>
                <field name="employee_id"/>
                <field name="request_type_id"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="sla_status"/>
                <field name="expected_date"/>
                <field name="assigned_to"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <span t-if="record.priority.raw_value == 'urgent'" 
                                              class="badge badge-danger">Urgent</span>
                                        <span t-elif="record.priority.raw_value == 'high'" 
                                              class="badge badge-warning">High</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="request_type_id"/>
                                    <div class="text-muted">
                                        <field name="employee_id"/>
                                    </div>
                                    <div t-if="record.expected_date.raw_value" class="mt-1">
                                        <span class="text-muted">Due: </span>
                                        <field name="expected_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="sla_status" widget="badge"
                                               decoration-success="sla_status == 'on_track'"
                                               decoration-warning="sla_status == 'at_risk'"
                                               decoration-danger="sla_status == 'overdue'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="assigned_to" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Request Search View -->
    <record id="view_hr_service_request_search" model="ir.ui.view">
        <field name="name">hr.service.request.search</field>
        <field name="model">hr.service.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference"/>
                <field name="employee_id"/>
                <field name="request_type_id"/>
                <field name="department_id"/>
                <field name="assigned_to"/>
                <separator/>
                <filter name="my_requests" string="My Requests" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter name="my_team" string="My Team" 
                        domain="[('manager_id.user_id', '=', uid)]"/>
                <filter name="assigned_to_me" string="Assigned to Me" 
                        domain="[('assigned_to.user_id', '=', uid)]"/>
                <separator/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="pending_approval" string="Pending Approval" 
                        domain="[('state', 'in', ['manager_approval', 'hr_approval'])]"/>
                <filter name="processing" string="Processing" domain="[('state', '=', 'processing')]"/>
                <filter name="ready" string="Ready" domain="[('state', '=', 'ready')]"/>
                <filter name="completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="overdue" string="Overdue" domain="[('sla_status', '=', 'overdue')]"/>
                <filter name="at_risk" string="At Risk" domain="[('sla_status', '=', 'at_risk')]"/>
                <separator/>
                <filter name="certificates" string="Certificates" domain="[('category', '=', 'certificate')]"/>
                <filter name="documents" string="Documents" domain="[('category', '=', 'document')]"/>
                <filter name="services" string="Services" domain="[('category', '=', 'service')]"/>
                <filter name="financial" string="Financial" domain="[('category', '=', 'financial')]"/>
                <separator/>
                <filter name="urgent" string="Urgent" domain="[('priority', '=', 'urgent')]"/>
                <filter name="high_priority" string="High Priority" domain="[('priority', '=', 'high')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_by_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_by_type" string="Request Type" context="{'group_by': 'request_type_id'}"/>
                    <filter name="group_by_category" string="Category" context="{'group_by': 'category'}"/>
                    <filter name="group_by_employee" string="Employee" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_department" string="Department" context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_assigned" string="Assigned To" context="{'group_by': 'assigned_to'}"/>
                    <filter name="group_by_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    <filter name="group_by_date" string="Request Date" context="{'group_by': 'request_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- ACTIONS -->
    <!-- ============================================== -->
    
<!-- My Requests Action (Employee) -->
    <record id="action_hr_service_request_my" model="ir.actions.act_window">
        <field name="name">My Requests</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Submit your first HR service request
            </p>
            <p>
                Request certificates, documents, or HR services easily.
            </p>
        </field>
    </record>
    
    <!-- Team Requests Action (Manager) -->
    <record id="action_hr_service_request_team" model="ir.actions.act_window">
        <field name="name">Team Requests</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('manager_id.user_id', '=', uid)]</field>
        <field name="context">{'search_default_pending_approval': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No team requests pending
            </p>
        </field>
    </record>
    
    <!-- Pending Approval Action -->
    <record id="action_hr_service_request_pending" model="ir.actions.act_window">
        <field name="name">Pending Approval</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', 'in', ['manager_approval', 'hr_approval'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No requests pending approval
            </p>
        </field>
    </record>
    
    <!-- Processing Action -->
    <record id="action_hr_service_request_processing" model="ir.actions.act_window">
        <field name="name">In Processing</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'processing')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No requests in processing
            </p>
        </field>
    </record>
    
    <!-- Ready for Collection Action -->
    <record id="action_hr_service_request_ready" model="ir.actions.act_window">
        <field name="name">Ready for Collection</field>
        <field name="res_model">hr.service.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'ready')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No requests ready for collection
            </p>
        </field>
    </record>
    
    <!-- ============================================== -->
    <!-- REJECT WIZARD VIEW -->
    <!-- ============================================== -->
    
    <record id="view_hr_service_request_reject_wizard_form" model="ir.ui.view">
        <field name="name">hr.service.request.reject.wizard.form</field>
        <field name="model">hr.service.request.reject.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="request_id" readonly="1"/>
                    <field name="rejection_reason" placeholder="Please provide a reason for rejection..."/>
                </group>
                <footer>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
</odoo>
