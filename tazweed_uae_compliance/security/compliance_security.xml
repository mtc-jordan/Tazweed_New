<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Compliance Module Category -->
        <record id="module_category_compliance" model="ir.module.category">
            <field name="name">UAE Compliance</field>
            <field name="sequence">26</field>
        </record>

        <!-- Security Groups -->
        <record id="group_compliance_user" model="res.groups">
            <field name="name">Compliance User</field>
            <field name="category_id" ref="module_category_compliance"/>
        </record>

        <record id="group_compliance_officer" model="res.groups">
            <field name="name">Compliance Officer</field>
            <field name="category_id" ref="module_category_compliance"/>
            <field name="implied_ids" eval="[(4, ref('group_compliance_user'))]"/>
        </record>

        <record id="group_compliance_manager" model="res.groups">
            <field name="name">Compliance Manager</field>
            <field name="category_id" ref="module_category_compliance"/>
            <field name="implied_ids" eval="[(4, ref('group_compliance_officer'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="wps_file_company_rule" model="ir.rule">
            <field name="name">WPS File: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_wps_file"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="emiratization_company_rule" model="ir.rule">
            <field name="name">Emiratization: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_emiratization_quota"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
