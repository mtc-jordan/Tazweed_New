            <field name="code">CONTRACT_COPY</field>
            <field name="category">document</field>
            <field name="sequence">11</field>
            <field name="description">Request for copy of employment contract or specific contract amendments.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- Offer Letter Copy -->
        <record id="request_type_offer_letter" model="hr.service.request.type">
            <field name="name">Offer Letter Copy</field>
            <field name="code">OFFER_LETTER</field>
            <field name="category">document</field>
            <field name="sequence">12</field>
            <field name="description">Request for copy of original offer letter.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">2</field>
            <field name="priority_sla_days">1</field>
        </record>
        
        <!-- Tax Documents -->
        <record id="request_type_tax_docs" model="hr.service.request.type">
            <field name="name">Tax Documents</field>
            <field name="code">TAX_DOCS</field>
            <field name="category">document</field>
            <field name="sequence">13</field>
            <field name="description">Request for tax-related documents (Form 16, tax certificates, etc.)</field>
            <field name="requires_approval">False</field>
            <field name="sla_days">3</field>
            <field name="priority_sla_days">2</field>
        </record>
        
        <!-- Passport Copy Return -->
        <record id="request_type_passport_return" model="hr.service.request.type">
            <field name="name">Passport Return Request</field>
            <field name="code">PASSPORT_RET</field>
            <field name="category">document</field>
            <field name="sequence">14</field>
            <field name="description">Request to collect passport from HR (if held by company for visa processing).</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">hr</field>
            <field name="sla_days">1</field>
            <field name="priority_sla_days">1</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-warning">
                    <h5>Passport Return Request</h5>
                    <p>Please specify:</p>
                    <ul>
                        <li>Reason for passport collection</li>
                        <li>Expected return date (if applicable)</li>
                    </ul>
                    <p><strong>Note:</strong> You will need to sign an acknowledgment upon collection.</p>
                </div>
            ]]></field>
        </record>
        
