<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Competency Form View -->
    <record id="view_competency_form" model="ir.ui.view">
        <field name="name">tazweed.competency.form</field>
        <field name="model">tazweed.competency</field>
        <field name="arch" type="xml">
            <form string="Competency">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Competency name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="competency_type"/>
                        </group>
                        <group>
                            <field name="department_ids" widget="many2many_tags"/>
                            <field name="job_ids" widget="many2many_tags"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description..."/>
                    <notebook>
                        <page string="Proficiency Levels" name="levels">
                            <group>
                                <field name="level_1_description" placeholder="Level 1 - Basic description..."/>
                                <field name="level_2_description" placeholder="Level 2 - Developing description..."/>
                                <field name="level_3_description" placeholder="Level 3 - Proficient description..."/>
                                <field name="level_4_description" placeholder="Level 4 - Advanced description..."/>
                                <field name="level_5_description" placeholder="Level 5 - Expert description..."/>
                            </group>
                        </page>
                        <page string="Behavioral Indicators" name="indicators">
                            <field name="behavioral_indicators" placeholder="List behavioral indicators..."/>
                        </page>
                        <page string="Related Skills" name="skills">
                            <field name="skill_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Competency Tree View -->
    <record id="view_competency_tree" model="ir.ui.view">
        <field name="name">tazweed.competency.tree</field>
        <field name="model">tazweed.competency</field>
        <field name="arch" type="xml">
            <tree string="Competencies">
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="competency_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Competency Action -->
    <record id="action_competency" model="ir.actions.act_window">
        <field name="name">Competencies</field>
        <field name="res_model">tazweed.competency</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your first competency
            </p>
        </field>
    </record>

    <!-- Competency Assessment Views -->
    <record id="view_competency_assessment_form" model="ir.ui.view">
        <field name="name">tazweed.competency.assessment.form</field>
        <field name="model">tazweed.competency.assessment</field>
        <field name="arch" type="xml">
            <form string="Competency Assessment">
                <header>
                    <button name="action_start" string="Start" type="object" class="btn-primary" states="draft"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" states="in_progress"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="assessor_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="assessment_type"/>
                            <field name="overall_rating"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Competencies" name="competencies">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="competency_id"/>
                                    <field name="expected_level"/>
                                    <field name="rating"/>
                                    <field name="gap"/>
                                    <field name="strengths"/>
                                    <field name="development_areas"/>
                                    <field name="comments"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_competency_assessment_tree" model="ir.ui.view">
        <field name="name">tazweed.competency.assessment.tree</field>
        <field name="model">tazweed.competency.assessment</field>
        <field name="arch" type="xml">
            <tree string="Competency Assessments">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="assessor_id"/>
                <field name="assessment_type"/>
                <field name="date"/>
                <field name="overall_rating"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_competency_assessment" model="ir.actions.act_window">
        <field name="name">Competency Assessments</field>
        <field name="res_model">tazweed.competency.assessment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first competency assessment
            </p>
        </field>
    </record>

    <!-- Development Plan Views -->
    <record id="view_development_plan_form" model="ir.ui.view">
        <field name="name">tazweed.development.plan.form</field>
        <field name="model">tazweed.development.plan</field>
        <field name="arch" type="xml">
            <form string="Development Plan">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="draft"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" states="active"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,active"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-tasks">
                            <field name="development_activity_count" widget="statinfo" string="Activities"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-graduation-cap">
                            <field name="training_count" widget="statinfo" string="Training"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="manager_id"/>
                            <field name="department_id"/>
                        </group>
                        <group>
                            <field name="plan_type"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Goals" name="goals">
                            <group>
                                <field name="career_goal" placeholder="Long-term career goal..."/>
                                <field name="short_term_objectives" placeholder="6-month objectives..."/>
                                <field name="long_term_objectives" placeholder="1-3 year objectives..."/>
                            </group>
                        </page>
                        <page string="Activities" name="activities">
                            <field name="development_activity_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="activity_type"/>
                                    <field name="date_start"/>
                                    <field name="date_deadline"/>
                                    <field name="progress" widget="progressbar"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Training" name="training">
                            <field name="training_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="training_type"/>
                                    <field name="provider"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="estimated_cost"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Competency Gaps" name="gaps">
                            <field name="competency_gap_ids">
                                <tree editable="bottom">
                                    <field name="competency_id"/>
                                    <field name="current_level"/>
                                    <field name="target_level"/>
                                    <field name="gap"/>
                                    <field name="priority"/>
                                    <field name="target_date"/>
                                    <field name="development_actions"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Comments" name="comments">
                            <group>
                                <field name="employee_comments" placeholder="Employee comments..."/>
                                <field name="manager_comments" placeholder="Manager comments..."/>
                                <field name="hr_comments" placeholder="HR comments..." groups="hr.group_hr_manager"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_development_plan_tree" model="ir.ui.view">
        <field name="name">tazweed.development.plan.tree</field>
        <field name="model">tazweed.development.plan</field>
        <field name="arch" type="xml">
            <tree string="Development Plans">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="plan_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="progress" widget="progressbar"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_development_plan" model="ir.actions.act_window">
        <field name="name">Development Plans</field>
        <field name="res_model">tazweed.development.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first development plan
            </p>
        </field>
    </record>
</odoo>
