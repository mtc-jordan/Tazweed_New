<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_esignature_user" model="res.groups">
            <field name="name">E-Signature User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_esignature_manager" model="res.groups">
            <field name="name">E-Signature Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_esignature_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="signature_request_rule_user" model="ir.rule">
            <field name="name">Signature Request: User can see own company</field>
            <field name="model_id" ref="model_signature_request"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_esignature_user'))]"/>
        </record>
        <record id="signature_template_rule_user" model="ir.rule">
            <field name="name">Signature Template: User can see own company</field>
            <field name="model_id" ref="model_signature_template"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_esignature_user'))]"/>
        </record>
    </data>
</odoo>
