        <!-- Sequences -->
        <record id="seq_job_posting" model="ir.sequence">
            <field name="name">Job Posting Sequence</field>
            <field name="code">job.posting</field>
            <field name="prefix">JP-%(year)s-</field>
            <field name="padding">4</field>
        </record>

        <record id="seq_candidate_source" model="ir.sequence">
            <field name="name">Candidate Source Sequence</field>
            <field name="code">candidate.source</field>
