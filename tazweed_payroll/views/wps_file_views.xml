<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- WPS File Form View -->
    <record id="view_wps_file_form" model="ir.ui.view">
        <field name="name">tazweed.wps.file.form</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <form string="WPS File">
                <header>
                    <button name="action_generate_lines" string="Generate Lines" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_generate_file" string="Generate File" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_submit" string="Submit to Bank" type="object" 
                            states="generated" class="btn-success"/>
                    <button name="action_mark_processed" string="Mark as Processed" type="object" 
                            states="submitted" class="btn-success"/>
                    <button name="action_mark_failed" string="Mark as Failed" type="object" 
                            states="submitted" class="btn-danger"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,generated" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,submitted,processed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="payslip_run_id"/>
                            <field name="salary_month"/>
                            <field name="salary_year"/>
                        </group>
                        <group string="Employer Details">
                            <field name="employer_eid"/>
                            <field name="employer_bank_code"/>
                            <field name="employer_account"/>
                        </group>
                    </group>
                    <group>
                        <group string="File Details">
                            <field name="file_type"/>
                            <field name="file_name"/>
                            <field name="file_data" filename="file_name"/>
                        </group>
                        <group string="Summary">
                            <field name="employee_count"/>
                            <field name="total_basic"/>
                            <field name="total_housing"/>
                            <field name="total_transport"/>
                            <field name="total_other"/>
                            <field name="total_deductions"/>
                            <field name="total_net" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                    <group string="Submission" attrs="{'invisible': [('state', 'in', ['draft', 'generated'])]}">
                        <group>
                            <field name="submission_date"/>
                            <field name="processing_date"/>
                        </group>
                        <group>
                            <field name="bank_reference"/>
                            <field name="bank_response"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Lines" name="lines">
                            <field name="line_ids">
                                <tree decoration-danger="status == 'error'" 
                                      decoration-warning="status == 'warning'">
                                    <field name="employee_id"/>
                                    <field name="labour_card_no"/>
                                    <field name="bank_code"/>
                                    <field name="iban"/>
                                    <field name="basic_salary"/>
                                    <field name="housing_allowance"/>
                                    <field name="transport_allowance"/>
                                    <field name="other_allowance"/>
                                    <field name="deductions"/>
                                    <field name="net_salary"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- WPS File Tree View -->
    <record id="view_wps_file_tree" model="ir.ui.view">
        <field name="name">tazweed.wps.file.tree</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <tree string="WPS Files" decoration-info="state == 'draft'" 
                  decoration-warning="state == 'submitted'" decoration-success="state == 'processed'">
                <field name="name"/>
                <field name="payslip_run_id"/>
                <field name="salary_month"/>
                <field name="salary_year"/>
                <field name="employee_count"/>
                <field name="total_net" sum="Total"/>
                <field name="submission_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- WPS File Search View -->
    <record id="view_wps_file_search" model="ir.ui.view">
        <field name="name">tazweed.wps.file.search</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <search string="WPS Files">
                <field name="name"/>
                <field name="payslip_run_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="generated" string="Generated" domain="[('state', '=', 'generated')]"/>
                <filter name="submitted" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                <filter name="processed" string="Processed" domain="[('state', '=', 'processed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_month" string="Month" context="{'group_by': 'salary_month'}"/>
                    <filter name="group_year" string="Year" context="{'group_by': 'salary_year'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- WPS File Action -->
    <record id="action_wps_file" model="ir.actions.act_window">
        <field name="name">WPS Files</field>
        <field name="res_model">tazweed.wps.file</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new WPS file
            </p>
            <p>
                Generate WPS (Wage Protection System) files for UAE bank submission.
            </p>
        </field>
    </record>
</odoo>
