<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- HR Documents -->
        <record id="doc_type_employment_contract" model="signature.document.type">
            <field name="name">Employment Contract</field>
            <field name="code">EMP_CONTRACT</field>
            <field name="sequence">1</field>
            <field name="category">hr</field>
            <field name="description">Standard employment contract between employer and employee</field>
            <field name="default_expiry_days">14</field>
            <field name="default_reminder_days">3</field>
            <field name="min_signers">2</field>
        </record>
        
        <record id="doc_type_offer_letter" model="signature.document.type">
            <field name="name">Offer Letter</field>
            <field name="code">OFFER_LETTER</field>
