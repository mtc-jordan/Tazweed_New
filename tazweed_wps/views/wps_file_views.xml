<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- WPS File Form View -->
    <record id="view_wps_file_form" model="ir.ui.view">
        <field name="name">tazweed.wps.file.form</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <form string="WPS File">
                <header>
                    <button name="action_generate_lines" string="Generate Lines" type="object" 
                            class="btn-primary" states="draft"/>
                    <button name="action_generate_sif" string="Generate SIF" type="object" 
                            class="btn-primary" states="draft"/>
                    <button name="action_submit" string="Submit to Bank" type="object" 
                            class="btn-primary" states="generated"/>
                    <button name="action_process" string="Mark Processed" type="object" 
                            class="btn-success" states="submitted"/>
                    <button name="action_reject" string="Reject" type="object" 
                            class="btn-danger" states="submitted"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,generated"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object" 
                            states="cancelled,rejected"/>
                    <button name="action_download_sif" string="Download SIF" type="object" 
                            class="btn-secondary" states="generated,submitted,processed"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,generated,submitted,processed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(tazweed_wps.action_wps_file_lines)d" type="action"
                                class="oe_stat_button" icon="fa-users">
                            <field name="employee_count" widget="statinfo" string="Employees"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="period_month"/>
                            <field name="period_year"/>
                            <field name="salary_date"/>
                            <field name="file_type"/>
                        </group>
                        <group string="Employer Details">
                            <field name="employer_eid"/>
                            <field name="employer_bank_id"/>
                            <field name="employer_bank_code"/>
                            <field name="employer_account"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Lines" name="lines">
                            <field name="line_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="employee_eid"/>
                                    <field name="labour_card_no"/>
                                    <field name="bank_id"/>
                                    <field name="bank_code"/>
                                    <field name="account_number"/>
                                    <field name="basic_salary" sum="Total"/>
                                    <field name="housing_allowance" sum="Total"/>
                                    <field name="transport_allowance" sum="Total"/>
                                    <field name="other_allowance" sum="Total"/>
                                    <field name="deductions" sum="Total"/>
                                    <field name="net_salary" sum="Total"/>
                                    <field name="is_valid"/>
                                    <field name="validation_message" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Totals" name="totals">
                            <group>
                                <group string="Salary Components">
                                    <field name="total_basic"/>
                                    <field name="total_housing"/>
                                    <field name="total_transport"/>
                                    <field name="total_other"/>
                                    <field name="total_overtime"/>
                                    <field name="total_leave"/>
                                </group>
                                <group string="Summary">
                                    <field name="total_deductions"/>
                                    <field name="total_net"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bank Response" name="response" states="submitted,processed,rejected">
                            <group>
                                <group>
                                    <field name="submission_date"/>
                                    <field name="processing_date"/>
                                    <field name="bank_reference"/>
                                </group>
                                <group>
                                    <field name="rejection_reason" attrs="{'invisible': [('state', '!=', 'rejected')]}"/>
                                </group>
                            </group>
                            <field name="bank_response"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- WPS File Tree View -->
    <record id="view_wps_file_tree" model="ir.ui.view">
        <field name="name">tazweed.wps.file.tree</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <tree string="WPS Files" decoration-success="state=='processed'" 
                  decoration-warning="state=='submitted'" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="period_display"/>
                <field name="salary_date"/>
                <field name="employee_count"/>
                <field name="total_net" sum="Total"/>
                <field name="state" widget="badge" 
                       decoration-success="state=='processed'"
                       decoration-warning="state in ['generated','submitted']"
                       decoration-danger="state=='rejected'"
                       decoration-info="state=='draft'"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    
    <!-- WPS File Search View -->
    <record id="view_wps_file_search" model="ir.ui.view">
        <field name="name">tazweed.wps.file.search</field>
        <field name="model">tazweed.wps.file</field>
        <field name="arch" type="xml">
            <search string="Search WPS Files">
                <field name="name"/>
                <field name="period_year"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Current Year" name="current_year" 
                        domain="[('period_year', '=', time.strftime('%%Y'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'period_month'}"/>
                    <filter string="Year" name="group_year" context="{'group_by': 'period_year'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- WPS File Action -->
    <record id="action_wps_file" model="ir.actions.act_window">
        <field name="name">WPS Files</field>
        <field name="res_model">tazweed.wps.file</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_current_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first WPS file
            </p>
            <p>
                Generate SIF files for UAE Wage Protection System compliance.
            </p>
        </field>
    </record>
    
</odoo>
