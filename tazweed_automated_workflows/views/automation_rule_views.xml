<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Automation Rule Form View -->
        <record id="view_automation_rule_form" model="ir.ui.view">
            <field name="name">Automation Rule Form</field>
            <field name="model">tazweed.automation.rule</field>
            <field name="arch" type="xml">
                <form string="Automation Rule">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_test_rule" string="Test Rule" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Rule Name"/>
                            </h1>
                        </div>
                        
                        <!-- Basic Information -->
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="rule_type"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                            </group>
                        </group>
                        
                        <field name="description" placeholder="Rule Description"/>
                        
                        <!-- Trigger Configuration -->
                        <separator string="Trigger Configuration" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="trigger_model"/>
                                <field name="trigger_event"/>
                            </group>
                            <group>
                                <field name="trigger_condition"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="trigger_condition" placeholder="Python condition" nolabel="1"/>
                        </group>
                        
                        <!-- Action Configuration -->
                        <separator string="Action Configuration" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="action_type"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="action_code" placeholder="Python code to execute" nolabel="1"/>
                        </group>
                        
                        <!-- Execution Configuration -->
                        <separator string="Execution Configuration" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="execute_immediately"/>
                                <field name="delay_minutes" attrs="{'invisible': [('execute_immediately', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="max_executions"/>
                                <field name="execution_count" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Execution History -->
                        <separator string="Execution History" class="oe_inline"/>
                        <group>
                            <group>
                                <field name="last_execution" readonly="1"/>
                                <field name="last_execution_status" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Automation Rule Tree View -->
        <record id="view_automation_rule_tree" model="ir.ui.view">
            <field name="name">Automation Rule Tree</field>
            <field name="model">tazweed.automation.rule</field>
            <field name="arch" type="xml">
                <tree string="Automation Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_type"/>
                    <field name="trigger_event"/>
                    <field name="state"/>
                    <field name="is_active"/>
                    <field name="execution_count"/>
                    <field name="last_execution"/>
                </tree>
            </field>
        </record>
        
        <!-- Automation Rule Search View -->
        <record id="view_automation_rule_search" model="ir.ui.view">
            <field name="name">Automation Rule Search</field>
            <field name="model">tazweed.automation.rule</field>
            <field name="arch" type="xml">
                <search string="Automation Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_type"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="filter_inactive" string="Inactive" domain="[('state', '=', 'inactive')]"/>
                </search>
            </field>
        </record>
        
        <!-- Automation Rule Action -->
        <record id="action_automation_rule" model="ir.actions.act_window">
            <field name="name">Automation Rules</field>
            <field name="res_model">tazweed.automation.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Automation Rule
                </p>
            </field>
        </record>
    </data>
</odoo>
