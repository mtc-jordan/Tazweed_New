<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payslip Batch Form View -->
    <record id="view_hr_payslip_run_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <form string="Payslip Batch">
                <header>
                    <button name="action_generate_payslips" string="Generate Payslips" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_compute_payslips" string="Compute Payslips" type="object" 
                            states="draft,verify" class="btn-secondary"/>
                    <button name="action_verify" string="Submit for Review" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_confirm" string="Confirm" type="object" 
                            states="verify" class="btn-primary"/>
                    <button name="action_done" string="Mark as Done" type="object" 
                            states="confirm" class="btn-success"/>
                    <button name="action_generate_wps" string="Generate WPS" type="object" 
                            states="done" class="btn-warning"/>
                    <button name="action_paid" string="Mark as Paid" type="object" 
                            states="done" class="btn-success"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            states="cancel" class="btn-secondary"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,verify,confirm" class="btn-danger"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,confirm,done,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_payslips" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="payslip_count" widget="statinfo" string="Payslips"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Payroll Name..."/>
                        </h1>
                        <field name="reference" readonly="1"/>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group string="Configuration">
                            <field name="struct_id"/>
                            <field name="department_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                        <group string="Settings">
                            <field name="create_single_entry"/>
                        </group>
                        <group string="WPS">
                            <field name="wps_generated"/>
                            <field name="wps_file_id"/>
                        </group>
                    </group>
                    <group string="Totals" col="4">
                        <field name="total_basic"/>
                        <field name="total_gross"/>
                        <field name="total_deductions"/>
                        <field name="total_net"/>
                    </group>
                    <notebook>
                        <page string="Payslips" name="payslips">
                            <field name="slip_ids">
                                <tree>
                                    <field name="number"/>
                                    <field name="employee_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="basic_wage" sum="Total Basic"/>
                                    <field name="gross_wage" sum="Total Gross"/>
                                    <field name="net_wage" sum="Total Net"/>
                                    <field name="wps_status"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="note" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Payslip Batch Tree View -->
    <record id="view_hr_payslip_run_tree" model="ir.ui.view">
        <field name="name">hr.payslip.run.tree</field>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <tree string="Payslip Batches" decoration-info="state == 'draft'" 
                  decoration-warning="state == 'verify'" decoration-success="state == 'paid'">
                <field name="name"/>
                <field name="reference"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="payslip_count"/>
                <field name="total_net" sum="Total Net"/>
                <field name="wps_generated"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Payslip Batch Search View -->
    <record id="view_hr_payslip_run_search" model="ir.ui.view">
        <field name="name">hr.payslip.run.search</field>
        <field name="model">hr.payslip.run</field>
        <field name="arch" type="xml">
            <search string="Payslip Batches">
                <field name="name"/>
                <field name="reference"/>
                <field name="department_id"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="verify" string="Waiting" domain="[('state', '=', 'verify')]"/>
                <filter name="confirm" string="Confirmed" domain="[('state', '=', 'confirm')]"/>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="paid" string="Paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter name="wps_pending" string="WPS Pending" domain="[('wps_generated', '=', False)]"/>
                <filter name="wps_generated" string="WPS Generated" domain="[('wps_generated', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_department" string="Department" context="{'group_by': 'department_id'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_month" string="Month" context="{'group_by': 'date_start:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payslip Batch Action -->
    <record id="action_hr_payslip_run" model="ir.actions.act_window">
        <field name="name">Payslip Batches</field>
        <field name="res_model">hr.payslip.run</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payslip batch
            </p>
            <p>
                Payslip batches allow you to process payroll for multiple employees at once.
            </p>
        </field>
    </record>
</odoo>
