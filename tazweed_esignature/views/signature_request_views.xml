<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="signature_request_view_tree" model="ir.ui.view">
        <field name="name">signature.request.tree</field>
        <field name="model">signature.request</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-warning="state == 'sent'" decoration-success="state == 'signed'" decoration-danger="state in ('expired', 'cancelled')">
                <field name="name"/>
                <field name="document_name"/>
                <field name="document_type" widget="badge"/>
                <field name="signer_count"/>
                <field name="signed_count"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state in ('sent', 'partially_signed')" decoration-success="state == 'signed'" decoration-danger="state in ('expired', 'cancelled')"/>
            </tree>
        </field>
    </record>

    <record id="signature_request_view_form" model="ir.ui.view">
        <field name="name">signature.request.form</field>
        <field name="model">signature.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_for_signature" type="object" string="Send for Signature" class="btn-primary" states="draft"/>
                    <button name="action_send_reminder" type="object" string="Send Reminder" states="sent,partially_signed"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,sent,partially_signed" confirm="Are you sure you want to cancel this request?"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,signed"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'expired')]}"/>
                    <widget name="web_ribbon" title="Cancelled" bg_color="bg-dark" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <div class="oe_title">
                        <label for="document_name"/>
                        <h1><field name="document_name" placeholder="Document Name" attrs="{'readonly': [('state', '!=', 'draft')]}"/></h1>
                        <field name="name" readonly="1"/>
                    </div>
                    <group>
                        <group string="Document">
                            <field name="document_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="template_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="document_file" filename="document_filename" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="document_filename" invisible="1"/>
                        </group>
                        <group string="Settings">
                            <field name="expiry_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Signers" name="signers">
                            <field name="signer_ids" attrs="{'readonly': [('state', 'not in', ['draft', 'sent'])]}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="role" widget="badge"/>
                                    <field name="state" widget="badge" decoration-info="state == 'pending'" decoration-warning="state == 'viewed'" decoration-success="state == 'signed'" decoration-danger="state == 'declined'"/>
                                    <field name="signed_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Signed Document" name="signed_document" attrs="{'invisible': [('state', '!=', 'signed')]}">
                            <group>
                                <field name="signed_document" filename="signed_filename"/>
                                <field name="signed_filename" invisible="1"/>
                                <field name="completed_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="signature_request_view_kanban" model="ir.ui.view">
        <field name="name">signature.request.kanban</field>
        <field name="model">signature.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="document_name"/>
                <field name="document_type"/>
                <field name="state"/>
                <field name="signer_count"/>
                <field name="signed_count"/>
                <field name="expiry_date"/>
                <progressbar field="state" colors='{"draft": "secondary", "sent": "info", "partially_signed": "warning", "signed": "success", "expired": "danger", "cancelled": "dark"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-2">
                                    <strong class="o_kanban_record_title"><field name="document_name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="document_type" widget="badge"/>
                                    <div class="mt-2">
                                        <span class="text-muted">Signers: </span>
                                        <span><field name="signed_count"/>/<field name="signer_count"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <span t-if="record.expiry_date.raw_value" class="text-muted">
                                        <i class="fa fa-clock-o"/> <field name="expiry_date"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="signature_request_view_search" model="ir.ui.view">
        <field name="name">signature.request.search</field>
        <field name="model">signature.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="document_name"/>
                <field name="name"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Partially Signed" name="partially_signed" domain="[('state', '=', 'partially_signed')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="My Requests" name="my_requests" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Document Type" name="group_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Create Date" name="group_create_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_signature_request" model="ir.actions.act_window">
        <field name="name">Signature Requests</field>
        <field name="res_model">signature.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_requests': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first signature request</p>
            <p>Send documents for electronic signature and track their status.</p>
        </field>
    </record>

    <record id="action_esignature_dashboard" model="ir.actions.client">
        <field name="name">E-Signature Dashboard</field>
        <field name="tag">esignature_dashboard</field>
    </record>
</odoo>
