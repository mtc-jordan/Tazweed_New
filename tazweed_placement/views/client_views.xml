<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Form View -->
    <record id="view_tazweed_client_form" model="ir.ui.view">
        <field name="name">tazweed.client.form</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '=', 'active')]}"/>
                    <button name="action_hold" string="Put On Hold" type="object"
                            attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_deactivate" string="Deactivate" type="object"
                            attrs="{'invisible': [('state', '=', 'inactive')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="prospect,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_job_orders" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <field name="job_order_count" widget="statinfo" string="Job Orders"/>
                        </button>
                        <button name="action_view_placements" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="placement_count" widget="statinfo" string="Placements"/>
                        </button>
                        <button type="object" name="action_view_placements" class="oe_stat_button" icon="fa-user-check">
                            <field name="active_placement_count" widget="statinfo" string="Active"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Company Name"/>
                        </h1>
                        <h4>
                            <field name="code" readonly="1"/>
                        </h4>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="industry_id"/>
                            <field name="company_size"/>
                        </group>
                        <group>
                            <field name="emirate"/>
                            <field name="is_free_zone"/>
                            <field name="free_zone" attrs="{'invisible': [('is_free_zone', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Company Details" name="details">
                            <group>
                                <group string="Trade License">
                                    <field name="trade_license"/>
                                    <field name="trade_license_expiry"/>
                                </group>
                                <group string="Establishment Card">
                                    <field name="establishment_card"/>
                                    <field name="establishment_card_expiry"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contacts" name="contacts">
                            <field name="contact_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="designation"/>
                                    <field name="department"/>
                                    <field name="contact_type"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="is_primary"/>
                                    <field name="is_billing_contact"/>
                                </tree>
                            </field>
                            <group>
                                <field name="primary_contact_id" domain="[('client_id', '=', id)]"/>
                            </group>
                        </page>
                        <page string="Contracts" name="contracts">
                            <field name="contract_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="contract_type"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="markup_pct"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                            <group>
                                <field name="active_contract_id"/>
                            </group>
                        </page>
                        <page string="Billing" name="billing">
                            <group>
                                <group>
                                    <field name="billing_type"/>
                                    <field name="payment_terms"/>
                                    <field name="credit_limit"/>
                                </group>
                                <group>
                                    <field name="default_markup_pct"/>
                                    <field name="default_commission_pct"/>
                                    <field name="total_revenue"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents">
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Client Tree View -->
    <record id="view_tazweed_client_tree" model="ir.ui.view">
        <field name="name">tazweed.client.tree</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <tree string="Clients">
                <field name="code"/>
                <field name="name"/>
                <field name="industry_id"/>
                <field name="emirate"/>
                <field name="company_size"/>
                <field name="job_order_count"/>
                <field name="active_placement_count"/>
                <field name="total_revenue" sum="Total Revenue"/>
                <field name="state" widget="badge" decoration-success="state == 'active'" decoration-warning="state == 'on_hold'" decoration-muted="state == 'inactive'"/>
            </tree>
        </field>
    </record>

    <!-- Client Kanban View -->
    <record id="view_tazweed_client_kanban" model="ir.ui.view">
        <field name="name">tazweed.client.kanban</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="industry_id"/>
                <field name="emirate"/>
                <field name="job_order_count"/>
                <field name="active_placement_count"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{kanban_color(record.color.raw_value)}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-secondary"><field name="code"/></span>
                                </div>
                                <div>
                                    <field name="industry_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-map-marker"/> <field name="emirate"/>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <span class="badge badge-info"><field name="job_order_count"/> Jobs</span>
                                    </div>
                                    <div class="col-6">
                                        <span class="badge badge-success"><field name="active_placement_count"/> Active</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Client Search View -->
    <record id="view_tazweed_client_search" model="ir.ui.view">
        <field name="name">tazweed.client.search</field>
        <field name="model">tazweed.client</field>
        <field name="arch" type="xml">
            <search string="Search Clients">
                <field name="name"/>
                <field name="code"/>
                <field name="industry_id"/>
                <field name="emirate"/>
                <separator/>
                <filter string="Active" name="active_clients" domain="[('state', '=', 'active')]"/>
                <filter string="Prospects" name="prospects" domain="[('state', '=', 'prospect')]"/>
                <filter string="On Hold" name="on_hold" domain="[('state', '=', 'on_hold')]"/>
                <separator/>
                <filter string="Free Zone" name="free_zone" domain="[('is_free_zone', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Industry" name="group_industry" context="{'group_by': 'industry_id'}"/>
                    <filter string="Emirate" name="group_emirate" context="{'group_by': 'emirate'}"/>
                    <filter string="Company Size" name="group_size" context="{'group_by': 'company_size'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Action -->
    <record id="action_tazweed_client" model="ir.actions.act_window">
        <field name="name">Clients</field>
        <field name="res_model">tazweed.client</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_tazweed_client_search"/>
        <field name="context">{'search_default_active_clients': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client
            </p>
            <p>
                Add client companies and manage their job orders and placements.
            </p>
        </field>
    </record>

    <!-- Client Contract Form -->
    <record id="view_tazweed_client_contract_form" model="ir.ui.view">
        <field name="name">tazweed.client.contract.form</field>
        <field name="model">tazweed.client.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <header>
                    <button name="action_submit" string="Submit for Approval" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            attrs="{'invisible': [('state', 'in', ('cancelled', 'expired'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,active"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="contract_type"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration_months"/>
                        </group>
                    </group>
                    <group>
                        <group string="Terms">
                            <field name="markup_pct"/>
                            <field name="commission_pct"/>
                            <field name="billing_type"/>
                            <field name="payment_terms"/>
                        </group>
                        <group string="Document">
                            <field name="contract_document" filename="contract_document_name"/>
                            <field name="contract_document_name" invisible="1"/>
                        </group>
                    </group>
                    <separator string="Rate Card"/>
                    <field name="rate_ids">
                        <tree editable="bottom">
                            <field name="job_category"/>
                            <field name="job_id"/>
                            <field name="rate_type"/>
                            <field name="base_rate"/>
                            <field name="markup_pct"/>
                            <field name="bill_rate"/>
                        </tree>
                    </field>
                    <group>
                        <field name="notes" placeholder="Terms and conditions..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
