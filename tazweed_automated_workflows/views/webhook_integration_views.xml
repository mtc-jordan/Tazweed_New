<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Workflow Webhook Tree View -->
    <record id="view_workflow_webhook_tree" model="ir.ui.view">
        <field name="name">workflow.webhook.tree</field>
        <field name="model">workflow.webhook</field>
        <field name="arch" type="xml">
            <tree string="Webhooks" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-danger="state=='error'">
                <field name="name"/>
                <field name="webhook_type"/>
                <field name="url" widget="url"/>
                <field name="method"/>
                <field name="auth_type"/>
                <field name="total_calls"/>
                <field name="success_rate" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-danger="state=='error'"/>
            </tree>
        </field>
    </record>

    <!-- Workflow Webhook Form View -->
    <record id="view_workflow_webhook_form" model="ir.ui.view">
        <field name="name">workflow.webhook.form</field>
        <field name="model">workflow.webhook</field>
        <field name="arch" type="xml">
            <form string="Webhook">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="draft,paused,error"/>
                    <button name="action_pause" string="Pause" type="object" states="active"/>
                    <button name="action_test" string="Test Webhook" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-check" type="object" name="action_view_success">
                            <field name="successful_calls" widget="statinfo" string="Success"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-times" type="object" name="action_view_failed">
                            <field name="failed_calls" widget="statinfo" string="Failed"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Webhook Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="webhook_type"/>
                            <field name="url" widget="url" placeholder="https://api.example.com/webhook"/>
                            <field name="method"/>
                            <field name="content_type"/>
                        </group>
                        <group>
                            <field name="model_id"/>
                            <field name="trigger_type"/>
                            <field name="timeout"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Authentication" name="auth">
                            <group>
                                <group string="Authentication Type">
                                    <field name="auth_type"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('auth_type', '!=', 'basic')]}">
                                <group string="Basic Authentication">
                                    <field name="auth_username"/>
                                    <field name="auth_password" password="True"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('auth_type', '!=', 'bearer')]}">
                                <group string="Bearer Token">
                                    <field name="auth_token" password="True"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('auth_type', '!=', 'api_key')]}">
                                <group string="API Key">
                                    <field name="api_key_name"/>
                                    <field name="api_key_value" password="True"/>
                                    <field name="api_key_location"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('auth_type', '!=', 'hmac')]}">
                                <group string="HMAC Signature">
                                    <field name="hmac_secret" password="True"/>
                                    <field name="hmac_algorithm"/>
                                    <field name="hmac_header"/>
                                </group>
                            </group>
                        </page>
                        <page string="Headers" name="headers">
                            <field name="header_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Payload" name="payload">
                            <group>
                                <field name="payload_type"/>
                            </group>
                            <group attrs="{'invisible': [('payload_type', '!=', 'selected_fields')]}">
                                <field name="selected_field_ids" widget="many2many_tags" domain="[('model_id', '=', model_id)]"/>
                            </group>
                            <group attrs="{'invisible': [('payload_type', '!=', 'custom')]}">
                                <field name="custom_payload" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                            <group attrs="{'invisible': [('payload_type', '!=', 'template')]}">
                                <field name="payload_template" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Trigger" name="trigger">
                            <group>
                                <group>
                                    <field name="trigger_type"/>
                                    <field name="trigger_field_ids" widget="many2many_tags" attrs="{'invisible': [('trigger_type', '!=', 'write')]}" domain="[('model_id', '=', model_id)]"/>
                                </group>
                            </group>
                        </page>
                        <page string="Retry &amp; Response" name="retry">
                            <group>
                                <group string="Retry Configuration">
                                    <field name="retry_enabled"/>
                                    <field name="max_retries" attrs="{'invisible': [('retry_enabled', '=', False)]}"/>
                                    <field name="retry_delay" attrs="{'invisible': [('retry_enabled', '=', False)]}"/>
                                    <field name="retry_backoff" attrs="{'invisible': [('retry_enabled', '=', False)]}"/>
                                </group>
                                <group string="Response Handling">
                                    <field name="expected_status_codes"/>
                                    <field name="response_handling"/>
                                    <field name="response_field_mapping" attrs="{'invisible': [('response_handling', '!=', 'process')]}" widget="ace" options="{'mode': 'json'}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Statistics" name="stats">
                            <group>
                                <group>
                                    <field name="total_calls"/>
                                    <field name="successful_calls"/>
                                    <field name="failed_calls"/>
                                    <field name="success_rate" widget="progressbar"/>
                                </group>
                                <group>
                                    <field name="last_call_date"/>
                                    <field name="last_status_code"/>
                                </group>
                            </group>
                        </page>
                        <page string="Logs" name="logs">
                            <field name="log_ids">
                                <tree>
                                    <field name="call_date"/>
                                    <field name="status_code"/>
                                    <field name="status" widget="badge" decoration-success="status=='success'" decoration-danger="status=='error'"/>
                                    <field name="response_time"/>
                                    <field name="error_message"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Webhook description..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Workflow Webhook Kanban View -->
    <record id="view_workflow_webhook_kanban" model="ir.ui.view">
        <field name="name">workflow.webhook.kanban</field>
        <field name="model">workflow.webhook</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="webhook_type"/>
                <field name="method"/>
                <field name="state"/>
                <field name="success_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="state" widget="label_selection" options="{'classes': {'draft': 'info', 'active': 'success', 'paused': 'warning', 'error': 'danger'}}"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><span class="badge badge-secondary"><field name="method"/></span> <field name="webhook_type"/></div>
                                    <div class="mt-2">
                                        <span class="text-muted">Success Rate:</span>
                                        <field name="success_rate" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Workflow Webhook Search View -->
    <record id="view_workflow_webhook_search" model="ir.ui.view">
        <field name="name">workflow.webhook.search</field>
        <field name="model">workflow.webhook</field>
        <field name="arch" type="xml">
            <search string="Search Webhooks">
                <field name="name"/>
                <field name="url"/>
                <field name="model_id"/>
                <filter string="Outgoing" name="outgoing" domain="[('webhook_type', '=', 'outgoing')]"/>
                <filter string="Incoming" name="incoming" domain="[('webhook_type', '=', 'incoming')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active_state" domain="[('state', '=', 'active')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'webhook_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Method" name="group_method" context="{'group_by': 'method'}"/>
                    <filter string="Model" name="group_model" context="{'group_by': 'model_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Incoming Webhook Tree View -->
    <record id="view_workflow_incoming_webhook_tree" model="ir.ui.view">
        <field name="name">workflow.incoming.webhook.tree</field>
        <field name="model">workflow.incoming.webhook</field>
        <field name="arch" type="xml">
            <tree string="Incoming Webhooks">
                <field name="name"/>
                <field name="endpoint_url" widget="url"/>
                <field name="action_type"/>
                <field name="target_model_id"/>
                <field name="total_received"/>
                <field name="successful_processed"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Incoming Webhook Form View -->
    <record id="view_workflow_incoming_webhook_form" model="ir.ui.view">
        <field name="name">workflow.incoming.webhook.form</field>
        <field name="model">workflow.incoming.webhook</field>
        <field name="arch" type="xml">
            <form string="Incoming Webhook">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Webhook Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="endpoint_token"/>
                            <field name="endpoint_url" widget="CopyClipboardChar"/>
                        </group>
                        <group>
                            <field name="action_type"/>
                            <field name="target_model_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Security" name="security">
                            <group>
                                <group>
                                    <field name="require_signature"/>
                                    <field name="signature_secret" password="True" attrs="{'invisible': [('require_signature', '=', False)]}"/>
                                    <field name="signature_header" attrs="{'invisible': [('require_signature', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="allowed_ips" placeholder="One IP per line..."/>
                                </group>
                            </group>
                        </page>
                        <page string="Processing" name="processing">
                            <group>
                                <field name="field_mapping" widget="ace" options="{'mode': 'json'}" attrs="{'invisible': [('action_type', 'not in', ['create', 'update'])]}"/>
                                <field name="target_method" attrs="{'invisible': [('action_type', '!=', 'method')]}"/>
                                <field name="workflow_id" attrs="{'invisible': [('action_type', '!=', 'workflow')]}"/>
                            </group>
                        </page>
                        <page string="Statistics" name="stats">
                            <group>
                                <group>
                                    <field name="total_received"/>
                                    <field name="successful_processed"/>
                                    <field name="failed_processed"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Webhook description..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Webhook Log Tree View -->
    <record id="view_workflow_webhook_log_tree" model="ir.ui.view">
        <field name="name">workflow.webhook.log.tree</field>
        <field name="model">workflow.webhook.log</field>
        <field name="arch" type="xml">
            <tree string="Webhook Logs" decoration-success="status=='success'" decoration-danger="status=='error'" decoration-warning="status=='retry'">
                <field name="call_date"/>
                <field name="webhook_id"/>
                <field name="status_code"/>
                <field name="status" widget="badge"/>
                <field name="response_time"/>
                <field name="retry_attempt"/>
                <field name="error_message"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_workflow_webhook" model="ir.actions.act_window">
        <field name="name">Outgoing Webhooks</field>
        <field name="res_model">workflow.webhook</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_workflow_webhook_search"/>
        <field name="context">{'default_webhook_type': 'outgoing'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first outgoing webhook
            </p>
            <p>
                Configure webhooks to send data to external systems when events occur.
            </p>
        </field>
    </record>

    <record id="action_workflow_incoming_webhook" model="ir.actions.act_window">
        <field name="name">Incoming Webhooks</field>
        <field name="res_model">workflow.incoming.webhook</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first incoming webhook
            </p>
            <p>
                Set up endpoints to receive data from external systems.
            </p>
        </field>
    </record>

    <record id="action_workflow_webhook_log" model="ir.actions.act_window">
        <field name="name">Webhook Logs</field>
        <field name="res_model">workflow.webhook.log</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
