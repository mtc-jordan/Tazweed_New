<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Module Category -->
    <record id="module_category_tazweed" model="ir.module.category">
        <field name="name">Tazweed HR</field>
        <field name="sequence">10</field>
    </record>

    <!-- User Groups -->
    <record id="group_tazweed_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_tazweed"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_tazweed_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_tazweed"/>
        <field name="implied_ids" eval="[(4, ref('group_tazweed_user'))]"/>
    </record>

    <record id="group_tazweed_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_tazweed"/>
        <field name="implied_ids" eval="[(4, ref('group_tazweed_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
