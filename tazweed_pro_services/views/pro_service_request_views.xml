<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Request Tree View -->
    <record id="view_pro_service_request_tree" model="ir.ui.view">
        <field name="name">pro.service.request.tree</field>
        <field name="model">pro.service.request</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" 
                  decoration-warning="state == 'documents_pending'"
                  decoration-success="state == 'completed'"
                  decoration-danger="sla_status == 'overdue'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="request_type"/>
                <field name="beneficiary_name"/>
                <field name="service_id"/>
                <field name="category_id"/>
                <field name="assigned_to"/>
                <field name="expected_date"/>
                <field name="priority" widget="priority"/>
                <field name="sla_status" widget="badge" 
                       decoration-success="sla_status == 'on_track'"
                       decoration-warning="sla_status == 'at_risk'"
                       decoration-danger="sla_status == 'overdue'"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('documents_pending', 'on_hold')"
                       decoration-primary="state in ('submitted', 'in_progress')"
                       decoration-success="state == 'completed'"
                       decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Service Request Form View -->
    <record id="view_pro_service_request_form" model="ir.ui.view">
        <field name="name">pro.service.request.form</field>
        <field name="model">pro.service.request</field>
        <field name="arch" type="xml">
            <form string="Service Request">
                <header>
                    <button name="action_submit" type="object" string="Submit" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_start_processing" type="object" string="Start Processing" 
                            class="oe_highlight" states="submitted,documents_pending"/>
                    <button name="action_hold" type="object" string="Put On Hold" 
                            states="in_progress"/>
                    <button name="action_resume" type="object" string="Resume" 
                            class="oe_highlight" states="on_hold"/>
                    <button name="action_complete" type="object" string="Complete" 
                            class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel" type="object" string="Cancel" 
                            states="draft,submitted,documents_pending,in_progress,on_hold"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="task_count" widget="statinfo" string="Tasks"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Overdue" bg_color="bg-danger" 
                            attrs="{'invisible': [('sla_status', '!=', 'overdue')]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="request_type"/>
                            <field name="employee_id" attrs="{'invisible': [('request_type', '!=', 'internal')], 'required': [('request_type', '=', 'internal')]}"/>
                            <field name="customer_id" attrs="{'invisible': [('request_type', '!=', 'external')], 'required': [('request_type', '=', 'external')]}"/>
                            <field name="department_id" attrs="{'invisible': [('request_type', '!=', 'internal')]}"/>
                            <field name="service_id"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="requester_id"/>
                            <field name="assigned_to"/>
                            <field name="is_urgent"/>
                            <field name="priority" widget="priority"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="expected_date"/>
                            <field name="completion_date" attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                        </group>
                        <group>
                            <field name="total_fees"/>
                            <field name="sla_status" widget="badge"
                                   decoration-success="sla_status == 'on_track'"
                                   decoration-warning="sla_status == 'at_risk'"
                                   decoration-danger="sla_status == 'overdue'"/>
                            <field name="days_remaining"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents" name="documents">
                            <group>
                                <field name="documents_complete"/>
                                <field name="missing_documents" attrs="{'invisible': [('documents_complete', '=', True)]}"/>
                            </group>
                            <field name="document_ids">
                                <tree editable="bottom">
                                    <field name="document_type_id"/>
                                    <field name="name"/>
                                    <field name="file" filename="file_name"/>
                                    <field name="file_name" invisible="1"/>
                                    <field name="document_number"/>
                                    <field name="expiry_date"/>
                                    <field name="source"/>
                                    <field name="verified"/>
                                    <button name="action_verify" type="object" string="Verify" 
                                            icon="fa-check" attrs="{'invisible': [('verified', '=', True)]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Tasks" name="tasks">
                            <field name="current_step_id" readonly="1"/>
                            <field name="task_ids">
                                <tree decoration-success="state == 'completed'"
                                      decoration-info="state == 'in_progress'"
                                      decoration-muted="state == 'cancelled'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="step_type"/>
                                    <field name="assigned_to"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Billing" name="billing">
                            <field name="billing_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="billing_date"/>
                                    <field name="total_amount"/>
                                    <field name="amount_paid"/>
                                    <field name="amount_due"/>
                                    <field name="payment_status" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="description" placeholder="Description or special instructions..."/>
                            </group>
                            <group>
                                <field name="internal_notes" placeholder="Internal notes..."/>
                            </group>
                            <group attrs="{'invisible': [('state', '!=', 'on_hold')]}">
                                <field name="hold_reason"/>
                            </group>
                            <group attrs="{'invisible': [('state', '!=', 'cancelled')]}">
                                <field name="cancellation_reason"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Service Request Kanban View -->
    <record id="view_pro_service_request_kanban" model="ir.ui.view">
        <field name="name">pro.service.request.kanban</field>
        <field name="model">pro.service.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="beneficiary_name"/>
                <field name="service_id"/>
                <field name="assigned_to"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="sla_status"/>
                <field name="expected_date"/>
                <progressbar field="sla_status" colors='{"on_track": "success", "at_risk": "warning", "overdue": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><strong><field name="beneficiary_name"/></strong></div>
                                    <div><field name="service_id"/></div>
                                    <div>Due: <field name="expected_date"/></div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="sla_status" widget="badge"
                                               decoration-success="sla_status == 'on_track'"
                                               decoration-warning="sla_status == 'at_risk'"
                                               decoration-danger="sla_status == 'overdue'"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="assigned_to" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Service Request Search View -->
    <record id="view_pro_service_request_search" model="ir.ui.view">
        <field name="name">pro.service.request.search</field>
        <field name="model">pro.service.request</field>
        <field name="arch" type="xml">
            <search string="Service Requests">
                <field name="name"/>
                <field name="beneficiary_name"/>
                <field name="employee_id"/>
                <field name="customer_id"/>
                <field name="service_id"/>
                <field name="assigned_to"/>
                <filter string="My Requests" name="my_requests" domain="[('assigned_to', '=', uid)]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Documents Pending" name="docs_pending" domain="[('state', '=', 'documents_pending')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="On Hold" name="on_hold" domain="[('state', '=', 'on_hold')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Internal" name="internal" domain="[('request_type', '=', 'internal')]"/>
                <filter string="External" name="external" domain="[('request_type', '=', 'external')]"/>
                <separator/>
                <filter string="Urgent" name="urgent" domain="[('is_urgent', '=', True)]"/>
                <filter string="Overdue" name="overdue" domain="[('sla_status', '=', 'overdue')]"/>
                <filter string="At Risk" name="at_risk" domain="[('sla_status', '=', 'at_risk')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Service" name="group_service" context="{'group_by': 'service_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to'}"/>
                    <filter string="Request Date" name="group_date" context="{'group_by': 'request_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Request Action -->
    <record id="action_pro_service_request" model="ir.actions.act_window">
        <field name="name">Service Requests</field>
        <field name="res_model">pro.service.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service request
            </p>
            <p>
                Track PRO service requests from submission to completion.
            </p>
        </field>
    </record>

    <!-- My Requests Action -->
    <record id="action_pro_my_requests" model="ir.actions.act_window">
        <field name="name">My Requests</field>
        <field name="res_model">pro.service.request</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_my_requests': 1}</field>
    </record>
</odoo>
