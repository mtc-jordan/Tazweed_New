<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Placement Module Category -->
        <record id="module_category_placement" model="ir.module.category">
            <field name="name">Placement</field>
            <field name="sequence">25</field>
        </record>

        <!-- Security Groups -->
        <record id="group_placement_user" model="res.groups">
            <field name="name">Recruiter</field>
            <field name="category_id" ref="module_category_placement"/>
        </record>

        <record id="group_placement_manager" model="res.groups">
            <field name="name">Placement Manager</field>
            <field name="category_id" ref="module_category_placement"/>
            <field name="implied_ids" eval="[(4, ref('group_placement_user'))]"/>
        </record>

        <record id="group_placement_admin" model="res.groups">
            <field name="name">Placement Administrator</field>
            <field name="category_id" ref="module_category_placement"/>
            <field name="implied_ids" eval="[(4, ref('group_placement_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="placement_client_company_rule" model="ir.rule">
            <field name="name">Placement Client: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_client"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="job_order_company_rule" model="ir.rule">
            <field name="name">Job Order: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_job_order"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="candidate_company_rule" model="ir.rule">
            <field name="name">Candidate: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_candidate"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="placement_company_rule" model="ir.rule">
            <field name="name">Placement: Multi-Company</field>
            <field name="model_id" ref="model_tazweed_placement"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
