<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Template Tree View -->
    <record id="view_document_template_tree" model="ir.ui.view">
        <field name="name">document.template.tree</field>
        <field name="model">document.template</field>
        <field name="arch" type="xml">
            <tree string="Document Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="document_type_id"/>
                <field name="template_type"/>
                <field name="applicable_to"/>
                <field name="usage_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Document Template Kanban View -->
    <record id="view_document_template_kanban" model="ir.ui.view">
        <field name="name">document.template.kanban</field>
        <field name="model">document.template</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="usage_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <span class="badge badge-pill"><field name="category"/></span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="code"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span><i class="fa fa-file-text"/> <field name="usage_count"/> uses</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Template Form View -->
    <record id="view_document_template_form" model="ir.ui.view">
        <field name="name">document.template.form</field>
        <field name="model">document.template</field>
        <field name="arch" type="xml">
            <form string="Document Template">
                <header>
                    <button name="action_generate_document" string="Generate Document" type="object" class="btn-primary"/>
                    <button name="action_duplicate_template" string="Duplicate" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-file-text" type="object" name="action_generate_document">
                            <field name="usage_count" widget="statinfo" string="Uses"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Default" bg_color="bg-success" attrs="{'invisible': [('is_default', '!=', True)]}"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Template Name"/></h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="code"/>
                            <field name="category"/>
                            <field name="document_type_id"/>
                            <field name="applicable_to"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Settings">
                            <field name="template_type"/>
                            <field name="active"/>
                            <field name="is_default"/>
                            <field name="requires_approval"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Template Content">
                            <group attrs="{'invisible': [('template_type', '!=', 'file')]}">
                                <field name="template_file" filename="template_filename"/>
                                <field name="template_filename"/>
                            </group>
                            <group attrs="{'invisible': [('template_type', 'not in', ['html', 'qweb'])]}">
                                <field name="template_body" widget="html" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Template Fields">
                            <field name="field_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="field_key"/>
                                    <field name="field_type"/>
                                    <field name="required"/>
                                    <field name="default_value"/>
                                    <field name="sample_value"/>
                                    <field name="auto_fill"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Preview">
                            <field name="preview_html" widget="html" readonly="1"/>
                        </page>
                        <page string="Instructions">
                            <group>
                                <field name="description" placeholder="Template description..."/>
                            </group>
                            <group>
                                <field name="instructions" placeholder="Usage instructions..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Generate Document Wizard Form View -->
    <record id="view_document_template_generate_wizard_form" model="ir.ui.view">
        <field name="name">document.template.generate.wizard.form</field>
        <field name="model">document.template.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Document">
                <group>
                    <group string="Template">
                        <field name="template_id"/>
                        <field name="document_name"/>
                        <field name="output_format"/>
                    </group>
                    <group string="Target">
                        <field name="employee_id"/>
                        <field name="client_id"/>
                        <field name="expiry_date"/>
                    </group>
                </group>
                <group string="Field Values">
                    <field name="field_value_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="field_name" readonly="1"/>
                            <field name="field_type" readonly="1"/>
                            <field name="required" readonly="1"/>
                            <field name="value"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="action_generate" string="Generate Document" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Document Template Action -->
    <record id="action_document_template" model="ir.actions.act_window">
        <field name="name">Document Templates</field>
        <field name="res_model">document.template</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first document template
            </p>
            <p>
                Document templates allow you to quickly generate standardized documents with dynamic content.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_document_templates" name="Templates" parent="tazweed_document_center.menu_document_center_root" sequence="60"/>
    <menuitem id="menu_document_template_list" name="All Templates" parent="menu_document_templates" action="action_document_template" sequence="10"/>
</odoo>
