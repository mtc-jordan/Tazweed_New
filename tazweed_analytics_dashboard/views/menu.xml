<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Analytics Root Menu -->
    <menuitem id="menu_analytics_root"
              name="Analytics"
              web_icon="tazweed_analytics_dashboard,static/description/icon.png"
              sequence="90"/>

    <!-- Dashboards Menu -->
    <menuitem id="menu_analytics_dashboards"
              name="Dashboards"
              parent="menu_analytics_root"
              action="action_analytics_dashboard"
              sequence="10"/>

    <!-- Cost Center Menu -->
    <menuitem id="menu_cost_center"
              name="Cost Center"
              parent="menu_analytics_root"
              sequence="15"/>
    
    <!-- Cost Center Dashboard -->
    <menuitem id="menu_cost_center_dashboard"
              name="Cost Dashboard"
              parent="menu_cost_center"
              action="action_cost_center_dashboard"
              sequence="1"/>
    
    <!-- Cost Center Data -->
    <menuitem id="menu_cost_center_data"
              name="Cost Data"
              parent="menu_cost_center"
              action="action_employee_cost_center"
              sequence="5"/>
    
    <!-- Cost by Employee -->
    <menuitem id="menu_cost_by_employee"
              name="By Employee"
              parent="menu_cost_center"
              action="action_cost_by_employee"
              sequence="10"/>
    
    <!-- Cost by Department -->
    <menuitem id="menu_cost_by_department"
              name="By Department"
              parent="menu_cost_center"
              action="action_cost_by_department"
              sequence="20"/>
    
    <!-- Cost by Client -->
    <menuitem id="menu_cost_by_client"
              name="By Client"
              parent="menu_cost_center"
              action="action_cost_by_client"
              sequence="30"/>
    
    <!-- Profitability Analysis -->
    <menuitem id="menu_profitability_analysis"
              name="Profitability"
              parent="menu_cost_center"
              action="action_profitability_analysis"
              sequence="40"/>
    
    <!-- Cost Trend -->
    <menuitem id="menu_cost_trend"
              name="Cost Trend"
              parent="menu_cost_center"
              action="action_cost_trend"
              sequence="50"/>

    <!-- Reports Menu -->
    <menuitem id="menu_analytics_reports"
              name="Reports"
              parent="menu_analytics_root"
              action="action_analytics_report"
              sequence="20"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_analytics_config"
              name="Configuration"
              parent="menu_analytics_root"
              sequence="100"/>

    <!-- KPIs Configuration -->
    <menuitem id="menu_analytics_kpis"
              name="KPIs"
              parent="menu_analytics_config"
              action="action_analytics_kpi"
              sequence="10"/>
</odoo>
