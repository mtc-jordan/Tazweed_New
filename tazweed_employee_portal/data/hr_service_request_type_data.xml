        <!-- FINANCIAL REQUESTS -->
        <!-- ============================================== -->
        
        <!-- Salary Advance -->
        <record id="request_type_salary_advance" model="hr.service.request.type">
            <field name="name">Salary Advance Request</field>
            <field name="code">SALARY_ADV</field>
            <field name="category">financial</field>
            <field name="sequence">30</field>
            <field name="description">Request for advance payment of salary.</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">manager_hr</field>
            <field name="sla_days">3</field>
            <field name="priority_sla_days">2</field>
            <field name="instructions"><![CDATA[
                <div class="alert alert-warning">
                    <h5>Salary Advance Request</h5>
                    <p>Please provide:</p>
                    <ul>
                        <li>Amount requested</li>
                        <li>Reason for advance</li>
                        <li>Preferred repayment schedule</li>
                    </ul>
                    <p><strong>Note:</strong> Subject to company policy and approval. Maximum advance is typically 50% of monthly salary.</p>
                </div>
            ]]></field>
        </record>
        
        <!-- Loan Request -->
        <record id="request_type_loan" model="hr.service.request.type">
            <field name="name">Employee Loan Request</field>
            <field name="code">EMP_LOAN</field>
            <field name="category">financial</field>
            <field name="sequence">31</field>
            <field name="description">Request for employee loan (if company policy allows).</field>
            <field name="requires_approval">True</field>
            <field name="approval_type">manager_hr</field>
            <field name="sla_days">7</field>
            <field name="priority_sla_days">5</field>
        </record>
        
        <!-- Expense Reimbursement -->
        <record id="request_type_expense" model="hr.service.request.type">
