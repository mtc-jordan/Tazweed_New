<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portal Home Extension -->
    <template id="portal_my_home_tazweed" name="Portal My Home - Tazweed" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Dashboard</t>
                <t t-set="url" t-value="'/my/dashboard'"/>
                <t t-set="placeholder_count" t-value="'dashboard_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Leaves</t>
                <t t-set="url" t-value="'/my/leaves'"/>
                <t t-set="placeholder_count" t-value="'leave_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Attendance</t>
                <t t-set="url" t-value="'/my/attendance'"/>
                <t t-set="placeholder_count" t-value="'attendance_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Payslips</t>
                <t t-set="url" t-value="'/my/payslips'"/>
                <t t-set="placeholder_count" t-value="'payslip_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Documents</t>
                <t t-set="url" t-value="'/my/documents'"/>
                <t t-set="placeholder_count" t-value="'document_count'"/>
            </t>
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Announcements</t>
                <t t-set="url" t-value="'/my/announcements'"/>
                <t t-set="placeholder_count" t-value="'announcement_count'"/>
            </t>
        </xpath>
    </template>

    <!-- Portal Breadcrumb -->
    <template id="portal_breadcrumb" name="Portal Breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/my">Home</a></li>
                <t t-if="page_name">
                    <li class="breadcrumb-item active" t-esc="page_name"/>
                </t>
            </ol>
        </nav>
    </template>

    <!-- Portal Profile Template -->
    <template id="portal_profile" name="Portal Profile">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body text-center">
                                <img t-if="employee.image_128" 
                                     t-att-src="image_data_uri(employee.image_128)" 
                                     class="rounded-circle mb-3" 
                                     style="width: 150px; height: 150px; object-fit: cover;"/>
                                <div t-else="" class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto mb-3" 
                                     style="width: 150px; height: 150px; font-size: 48px;">
                                    <t t-esc="employee.name[:2].upper()"/>
                                </div>
                                <h4 t-esc="employee.name"/>
                                <p class="text-muted" t-esc="employee.job_id.name"/>
                                <a href="/my/profile/edit" class="btn btn-outline-primary btn-sm">Edit Profile</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Personal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Employee ID:</strong> <t t-esc="employee.employee_number or '-'"/></p>
                                        <p><strong>Department:</strong> <t t-esc="employee.department_id.name or '-'"/></p>
                                        <p><strong>Manager:</strong> <t t-esc="employee.parent_id.name or '-'"/></p>
                                        <p><strong>Work Email:</strong> <t t-esc="employee.work_email or '-'"/></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Work Phone:</strong> <t t-esc="employee.work_phone or '-'"/></p>
                                        <p><strong>Mobile:</strong> <t t-esc="employee.mobile_phone or '-'"/></p>
                                        <p><strong>Join Date:</strong> <t t-esc="employee.joining_date or '-'"/></p>
                                        <p><strong>Nationality:</strong> <t t-esc="employee.country_id.name or '-'"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Profile Edit Template -->
    <template id="portal_profile_edit" name="Portal Profile Edit">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Edit Profile</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/my/profile/edit">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Mobile Phone</label>
                                        <input type="text" name="mobile_phone" class="form-control" 
                                               t-att-value="employee.mobile_phone"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Personal Email</label>
                                        <input type="email" name="private_email" class="form-control" 
                                               t-att-value="employee.private_email"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Emergency Contact</label>
                                        <input type="text" name="emergency_contact" class="form-control" 
                                               t-att-value="employee.emergency_contact"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Emergency Phone</label>
                                        <input type="text" name="emergency_phone" class="form-control" 
                                               t-att-value="employee.emergency_phone"/>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/my/profile" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Announcements Template -->
    <template id="portal_announcements" name="Portal Announcements">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <h3 class="mb-4">Announcements</h3>
                
                <t t-if="announcements">
                    <div class="list-group">
                        <t t-foreach="announcements" t-as="announcement">
                            <a t-att-href="'/my/announcements/%s' % announcement.id" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1" t-esc="announcement.name"/>
                                    <small t-esc="announcement.publish_date"/>
                                </div>
                                <p class="mb-1" t-esc="announcement.summary or ''"/>
                                <small>
                                    <span t-att-class="'badge bg-%s' % ('danger' if announcement.priority == 'urgent' else 'warning' if announcement.priority == 'high' else 'info')"
                                          t-esc="announcement.announcement_type"/>
                                </small>
                            </a>
                        </t>
                    </div>
                    <t t-call="portal.pager"/>
                </t>
                <t t-else="">
                    <div class="alert alert-info">No announcements available.</div>
                </t>
            </div>
        </t>
    </template>

    <!-- Portal Announcement Detail Template -->
    <template id="portal_announcement_detail" name="Portal Announcement Detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <div class="card">
                    <div class="card-header">
                        <h4 t-esc="announcement.name"/>
                        <small class="text-muted">
                            Published: <t t-esc="announcement.publish_date"/> | 
                            Type: <span t-esc="announcement.announcement_type"/>
                        </small>
                    </div>
                    <div class="card-body">
                        <t t-raw="announcement.content"/>
                    </div>
                    <div class="card-footer">
                        <a href="/my/announcements" class="btn btn-secondary">Back to Announcements</a>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Portal Team Template -->
    <template id="portal_team" name="Portal Team">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <h3 class="mb-4">My Team</h3>
                
                <t t-if="team_members">
                    <div class="row">
                        <t t-foreach="team_members" t-as="member">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-body text-center">
                                        <img t-if="member.image_128" 
                                             t-att-src="image_data_uri(member.image_128)" 
                                             class="rounded-circle mb-3" 
                                             style="width: 80px; height: 80px; object-fit: cover;"/>
                                        <div t-else="" class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center mx-auto mb-3" 
                                             style="width: 80px; height: 80px; font-size: 24px;">
                                            <t t-esc="member.name[:2].upper()"/>
                                        </div>
                                        <h5 t-esc="member.name"/>
                                        <p class="text-muted" t-esc="member.job_id.name or '-'"/>
                                        <p><small t-esc="member.work_email or '-'"/></p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
                <t t-else="">
                    <div class="alert alert-info">No team members found.</div>
                </t>
            </div>
        </t>
    </template>

    <!-- Portal Calendar Template -->
    <template id="portal_calendar" name="Portal Calendar">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="tazweed_employee_portal.portal_breadcrumb"/>
            
            <div class="container py-4">
                <h3 class="mb-4">Team Calendar</h3>
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Upcoming Leaves</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="leaves">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Employee</th>
                                                <th>Leave Type</th>
                                                <th>From</th>
                                                <th>To</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="leaves" t-as="leave">
                                                <tr>
                                                    <td t-esc="leave.employee_id.name"/>
                                                    <td t-esc="leave.holiday_status_id.name"/>
                                                    <td t-esc="leave.date_from"/>
                                                    <td t-esc="leave.date_to"/>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-else="">
                                    <p class="text-muted">No upcoming leaves.</p>
                                </t>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Public Holidays</h5>
                            </div>
                            <div class="card-body">
                                <t t-if="holidays">
                                    <ul class="list-group list-group-flush">
                                        <t t-foreach="holidays" t-as="holiday">
                                            <li class="list-group-item d-flex justify-content-between">
                                                <span t-esc="holiday.name"/>
                                                <span class="badge bg-primary" t-esc="holiday.date"/>
                                            </li>
                                        </t>
                                    </ul>
                                </t>
                                <t t-else="">
                                    <p class="text-muted">No upcoming holidays.</p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
