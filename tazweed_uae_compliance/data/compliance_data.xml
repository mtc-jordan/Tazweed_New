<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences -->
        <record id="seq_wps_file" model="ir.sequence">
            <field name="name">WPS File Sequence</field>
            <field name="code">tazweed.wps.file</field>
            <field name="prefix">WPS/%(year)s/</field>
            <field name="padding">4</field>
        </record>

        <record id="seq_labour_contract" model="ir.sequence">
            <field name="name">Labour Contract Sequence</field>
            <field name="code">tazweed.labour.contract</field>
            <field name="prefix">LC/%(year)s/</field>
            <field name="padding">5</field>
        </record>

        <!-- Cron Jobs -->
        <record id="cron_check_document_expiry" model="ir.cron">
            <field name="name">Check Document Expiry</field>
            <field name="model_id" ref="model_tazweed_document_compliance"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
