<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- WPS Module Category -->
        <record id="module_category_wps" model="ir.module.category">
            <field name="name">Tazweed WPS</field>
            <field name="description">UAE Wage Protection System Management</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- WPS User Group -->
        <record id="group_wps_user" model="res.groups">
            <field name="name">WPS User</field>
            <field name="category_id" ref="module_category_wps"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view WPS files and compliance reports</field>
        </record>
        
        <!-- WPS Officer Group -->
        <record id="group_wps_officer" model="res.groups">
            <field name="name">WPS Officer</field>
            <field name="category_id" ref="module_category_wps"/>
            <field name="implied_ids" eval="[(4, ref('group_wps_user'))]"/>
            <field name="comment">Can create and manage WPS files</field>
        </record>
        
        <!-- WPS Manager Group -->
        <record id="group_wps_manager" model="res.groups">
            <field name="name">WPS Manager</field>
            <field name="category_id" ref="module_category_wps"/>
            <field name="implied_ids" eval="[(4, ref('group_wps_officer'))]"/>
            <field name="comment">Full access to WPS management including configuration</field>
        </record>
        
    </data>
</odoo>
