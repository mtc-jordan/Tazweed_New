<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Candidate Form View -->
    <record id="view_candidate_form" model="ir.ui.view">
        <field name="name">tazweed.candidate.form</field>
        <field name="model">tazweed.candidate</field>
        <field name="arch" type="xml">
            <form string="Candidate">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" states="new"/>
                    <button name="action_blacklist" string="Blacklist" type="object" class="btn-danger" states="active"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,active,placed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-briefcase" type="action" name="%(action_placement)d">
                            <field name="placement_count" widget="statinfo" string="Placements"/>
                        </button>
                    </div>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Full Name..."/>
                        </h1>
                        <field name="code" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="marital_status"/>
                        </group>
                        <group>
                            <field name="nationality_id"/>
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="phone"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Personal" name="personal">
                            <group>
                                <group string="Address">
                                    <field name="address"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                </group>
                                <group string="Documents">
                                    <field name="passport_no"/>
                                    <field name="passport_expiry"/>
                                    <field name="emirates_id"/>
                                    <field name="emirates_id_expiry"/>
                                    <field name="visa_status"/>
                                </group>
                            </group>
                        </page>
                        <page string="Education" name="education">
                            <field name="education_level"/>
                            <field name="education_ids">
                                <tree editable="bottom">
                                    <field name="degree"/>
                                    <field name="field_of_study"/>
                                    <field name="institution"/>
                                    <field name="country_id"/>
                                    <field name="year_end"/>
                                    <field name="is_verified"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Experience" name="experience">
                            <field name="total_experience"/>
                            <field name="experience_ids">
                                <tree editable="bottom">
                                    <field name="company_name"/>
                                    <field name="job_title"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="is_current"/>
                                    <field name="duration_years"/>
                                    <field name="is_verified"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Skills" name="skills">
                            <field name="skill_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Preferences" name="preferences">
                            <group>
                                <group>
                                    <field name="expected_salary"/>
                                    <field name="preferred_location"/>
                                </group>
                                <group>
                                    <field name="notice_period"/>
                                    <field name="available_from"/>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents">
                            <group>
                                <field name="cv" filename="cv_name"/>
                                <field name="cv_name" invisible="1"/>
                            </group>
                            <field name="document_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="expiry_date"/>
                                    <field name="is_verified"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Source" name="source">
                            <group>
                                <field name="source"/>
                            </group>
                            <field name="notes" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Candidate Tree View -->
    <record id="view_candidate_tree" model="ir.ui.view">
        <field name="name">tazweed.candidate.tree</field>
        <field name="model">tazweed.candidate</field>
        <field name="arch" type="xml">
            <tree string="Candidates">
                <field name="code"/>
                <field name="name"/>
                <field name="nationality_id"/>
                <field name="education_level"/>
                <field name="total_experience"/>
                <field name="expected_salary"/>
                <field name="visa_status"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Candidate Search View -->
    <record id="view_candidate_search" model="ir.ui.view">
        <field name="name">tazweed.candidate.search</field>
        <field name="model">tazweed.candidate</field>
        <field name="arch" type="xml">
            <search string="Search Candidates">
                <field name="name"/>
                <field name="code"/>
                <field name="nationality_id"/>
                <field name="skill_ids"/>
                <separator/>
                <filter name="active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="available" string="Available" domain="[('state', 'in', ('new', 'active'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_nationality" string="Nationality" context="{'group_by': 'nationality_id'}"/>
                    <filter name="group_education" string="Education" context="{'group_by': 'education_level'}"/>
                    <filter name="group_visa" string="Visa Status" context="{'group_by': 'visa_status'}"/>
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Candidate Action -->
    <record id="action_candidate" model="ir.actions.act_window">
        <field name="name">Candidates</field>
        <field name="res_model">tazweed.candidate</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_candidate_search"/>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first candidate
            </p>
        </field>
    </record>
</odoo>
