<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Document Tags -->
    <record id="tag_contract" model="client.portal.document.tag">
        <field name="name">Contract</field>
        <field name="color">1</field>
    </record>
    <record id="tag_invoice" model="client.portal.document.tag">
        <field name="name">Invoice</field>
        <field name="color">2</field>
    </record>
    <record id="tag_report" model="client.portal.document.tag">
        <field name="name">Report</field>
        <field name="color">3</field>
    </record>
    <record id="tag_compliance" model="client.portal.document.tag">
        <field name="name">Compliance</field>
        <field name="color">4</field>
    </record>
    <record id="tag_timesheet" model="client.portal.document.tag">
        <field name="name">Timesheet</field>
        <field name="color">5</field>
    </record>
    <record id="tag_urgent" model="client.portal.document.tag">
        <field name="name">Urgent</field>
        <field name="color">10</field>
    </record>

    <!-- Scheduled Action: Cleanup Old Notifications -->
    <record id="ir_cron_cleanup_notifications" model="ir.cron">
        <field name="name">Client Portal: Cleanup Old Notifications</field>
        <field name="model_id" ref="model_client_portal_notification"/>
        <field name="state">code</field>
        <field name="code">model.cleanup_old_notifications(30)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
