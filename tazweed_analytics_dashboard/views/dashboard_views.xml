<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Tree View -->
    <record id="analytics_dashboard_view_tree" model="ir.ui.view">
        <field name="name">analytics.dashboard.tree</field>
        <field name="model">analytics.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="dashboard_type"/>
                <field name="layout"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Dashboard Form View -->
    <record id="analytics_dashboard_view_form" model="ir.ui.view">
        <field name="name">analytics.dashboard.form</field>
        <field name="model">analytics.dashboard</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_dashboard" string="View Dashboard" 
                            type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" 
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dashboard Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuration">
                            <field name="dashboard_type"/>
                            <field name="layout"/>
                            <field name="columns"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Refresh">
                            <field name="auto_refresh"/>
                            <field name="refresh_interval" 
                                   attrs="{'invisible': [('auto_refresh', '=', False)]}"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="KPIs" name="kpis">
                            <field name="kpi_ids">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="display_format"/>
                                    <field name="icon"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Access Control" name="access">
                            <group>
                                <group string="Users">
                                    <field name="user_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                                <group string="Groups">
                                    <field name="group_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                            </group>
                            <p class="text-muted">
                                Leave empty to allow access to all analytics users.
                            </p>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Kanban View -->
    <record id="analytics_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">analytics.dashboard.kanban</field>
        <field name="model">analytics.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="dashboard_type"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_primary_left">
                                    <div class="o_primary">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="text-muted">
                                        <field name="dashboard_type"/>
                                    </div>
                                    <div class="text-muted small mt-2">
                                        <field name="description"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="o_kanban_card_manage_section o_kanban_manage_reports">
                                    <div role="menuitem">
                                        <a name="action_view_dashboard" type="object">
                                            View Dashboard
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_analytics_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboards</field>
        <field name="res_model">analytics.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
