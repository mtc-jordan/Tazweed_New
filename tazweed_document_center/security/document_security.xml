<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_document_user" model="res.groups">
        <field name="name">Document User</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_document_manager" model="res.groups">
        <field name="name">Document Manager</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_document_user'))]"/>
    </record>

    <record id="group_document_admin" model="res.groups">
        <field name="name">Document Administrator</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('group_document_manager'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="rule_document_dashboard_user" model="ir.rule">
        <field name="name">Document Dashboard: User Access</field>
        <field name="model_id" ref="model_document_dashboard"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_document_user'))]"/>
    </record>

    <record id="rule_document_alert_user" model="ir.rule">
        <field name="name">Document Alert: User Access</field>
        <field name="model_id" ref="model_document_alert"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_document_user'))]"/>
    </record>

    <record id="rule_document_renewal_user" model="ir.rule">
        <field name="name">Document Renewal: User Access</field>
        <field name="model_id" ref="model_document_renewal_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_document_user'))]"/>
    </record>
</odoo>
