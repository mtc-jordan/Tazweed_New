<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Invoice Form View -->
    <record id="view_client_invoice_form" model="ir.ui.view">
        <field name="name">tazweed.client.invoice.form</field>
        <field name="model">tazweed.client.invoice</field>
        <field name="arch" type="xml">
            <form string="Client Invoice">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            states="draft" class="btn-primary"/>
                    <button name="action_send" string="Mark Sent" type="object" 
                            states="confirmed" class="btn-primary"/>
                    <button name="action_paid" string="Mark Paid" type="object" 
                            states="sent" class="btn-primary"/>
                    <button name="action_create_accounting_invoice" string="Create Accounting Invoice" 
                            type="object" states="confirmed,sent" class="btn-secondary"
                            attrs="{'invisible': [('account_move_id', '!=', False)]}"/>
                    <button name="action_view_accounting_invoice" string="View Accounting Invoice" 
                            type="object" class="btn-secondary"
                            attrs="{'invisible': [('account_move_id', '=', False)]}"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            states="draft,confirmed"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,sent,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Client">
                            <field name="client_id"/>
                            <field name="partner_id" invisible="1"/>
                        </group>
                        <group string="Dates">
                            <field name="date_invoice"/>
                            <field name="date_due"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoice Lines" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="placement_id"/>
                                    <field name="employee_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_untaxed"/>
                                <field name="apply_vat"/>
                                <field name="vat_rate" attrs="{'invisible': [('apply_vat', '=', False)]}"/>
                                <field name="amount_tax"/>
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes..."/>
                        </page>
                    </notebook>
                    <field name="account_move_id" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Client Invoice Tree View -->
    <record id="view_client_invoice_tree" model="ir.ui.view">
        <field name="name">tazweed.client.invoice.tree</field>
        <field name="model">tazweed.client.invoice</field>
        <field name="arch" type="xml">
            <tree string="Client Invoices" decoration-info="state=='draft'" 
                  decoration-success="state=='paid'" decoration-warning="state=='sent'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="date_invoice"/>
                <field name="date_due"/>
                <field name="period_start"/>
                <field name="period_end"/>
                <field name="amount_total"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Client Invoice Search View -->
    <record id="view_client_invoice_search" model="ir.ui.view">
        <field name="name">tazweed.client.invoice.search</field>
        <field name="model">tazweed.client.invoice</field>
        <field name="arch" type="xml">
            <search string="Search Invoices">
                <field name="name"/>
                <field name="client_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_invoice', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Last Month" name="last_month" 
                        domain="[('date_invoice', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                ('date_invoice', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Invoice Date" name="group_date" context="{'group_by': 'date_invoice:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Invoice Action -->
    <record id="action_client_invoice" model="ir.actions.act_window">
        <field name="name">Client Invoices</field>
        <field name="res_model">tazweed.client.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_client_invoice_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client invoice
            </p>
            <p>
                Generate monthly invoices for clients based on placements.
            </p>
        </field>
    </record>

    <!-- Invoice Generation Wizard Form -->
    <record id="view_client_invoice_wizard_form" model="ir.ui.view">
        <field name="name">tazweed.client.invoice.wizard.form</field>
        <field name="model">tazweed.client.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Client Invoices">
                <group>
                    <field name="client_id" placeholder="All clients"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                </group>
                <footer>
                    <button name="action_generate" string="Generate Invoices" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Invoice Generation Wizard Action -->
    <record id="action_client_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Generate Monthly Invoices</field>
        <field name="res_model">tazweed.client.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
