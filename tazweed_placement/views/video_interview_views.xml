<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Video Interview Tree View -->
    <record id="view_video_interview_tree" model="ir.ui.view">
        <field name="name">video.interview.tree</field>
        <field name="model">video.interview</field>
        <field name="arch" type="xml">
            <tree string="Video Interviews" decoration-success="state=='completed'" decoration-info="state in ['scheduled','reminder_sent']" decoration-warning="state=='in_progress'" decoration-danger="state in ['cancelled','no_show']">
                <field name="name"/>
                <field name="candidate_name"/>
                <field name="job_title"/>
                <field name="interview_type"/>
                <field name="scheduled_date"/>
                <field name="duration"/>
                <field name="platform"/>
                <field name="overall_rating"/>
                <field name="recommendation" widget="badge"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Video Interview Form View -->
    <record id="view_video_interview_form" model="ir.ui.view">
        <field name="name">video.interview.form</field>
        <field name="model">video.interview</field>
        <field name="arch" type="xml">
            <form string="Video Interview">
                <header>
                    <button name="action_schedule" string="Schedule" type="object" class="btn-primary" states="draft"/>
                    <button name="action_send_reminder" string="Send Reminder" type="object" states="scheduled"/>
                    <button name="action_start_interview" string="Start Interview" type="object" class="btn-primary" states="scheduled,reminder_sent"/>
                    <button name="action_join_meeting" string="Join Meeting" type="object" class="btn-success" states="scheduled,reminder_sent,in_progress"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-primary" states="in_progress"/>
                    <button name="action_reschedule" string="Reschedule" type="object" states="scheduled,reminder_sent"/>
                    <button name="action_mark_no_show" string="No Show" type="object" states="scheduled,reminder_sent,in_progress"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,scheduled,reminder_sent"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Interview Details">
                            <field name="candidate_id"/>
                            <field name="job_order_id"/>
                            <field name="interview_type"/>
                            <field name="interviewer_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Schedule">
                            <field name="scheduled_date"/>
                            <field name="duration"/>
                            <field name="end_time"/>
                            <field name="timezone"/>
                        </group>
                    </group>
                    <group>
                        <group string="Video Platform">
                            <field name="platform"/>
                            <field name="meeting_link" widget="url"/>
                            <field name="meeting_id"/>
                            <field name="meeting_password"/>
                        </group>
                        <group string="Recording">
                            <field name="is_recorded"/>
                            <field name="recording_consent" attrs="{'invisible': [('is_recorded', '=', False)]}"/>
                            <field name="recording_url" widget="url" attrs="{'invisible': [('recording_url', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Evaluation" name="evaluation" attrs="{'invisible': [('state', 'not in', ['in_progress', 'completed'])]}">
                            <group>
                                <group string="Scores">
                                    <field name="overall_rating" widget="priority"/>
                                    <field name="technical_score" widget="progressbar"/>
                                    <field name="communication_score" widget="progressbar"/>
                                    <field name="cultural_fit_score" widget="progressbar"/>
                                </group>
                                <group string="Recommendation">
                                    <field name="recommendation" widget="radio"/>
                                </group>
                            </group>
                            <group string="Evaluation Notes">
                                <field name="strengths" placeholder="Candidate strengths..."/>
                                <field name="weaknesses" placeholder="Areas for improvement..."/>
                            </group>
                            <field name="evaluation_notes" placeholder="Detailed evaluation notes..."/>
                        </page>
                        <page string="Questions" name="questions">
                            <field name="question_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="question"/>
                                    <field name="question_type"/>
                                    <field name="candidate_answer"/>
                                    <field name="rating" widget="priority"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Participants" name="participants">
                            <group>
                                <group string="Internal Interviewers">
                                    <field name="interviewer_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                                <group string="Client Participants">
                                    <field name="client_participant_ids" widget="many2many_tags" nolabel="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Tracking" name="tracking">
                            <group>
                                <group>
                                    <field name="reminder_sent"/>
                                    <field name="reminder_date"/>
                                </group>
                                <group>
                                    <field name="create_date"/>
                                    <field name="write_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Video Interview Calendar View -->
    <record id="view_video_interview_calendar" model="ir.ui.view">
        <field name="name">video.interview.calendar</field>
        <field name="model">video.interview</field>
        <field name="arch" type="xml">
            <calendar string="Video Interviews" date_start="scheduled_date" date_stop="end_time" color="interview_type" mode="week">
                <field name="candidate_name"/>
                <field name="job_title"/>
                <field name="interview_type"/>
                <field name="platform"/>
            </calendar>
        </field>
    </record>

    <!-- Video Interview Template Tree View -->
    <record id="view_video_interview_template_tree" model="ir.ui.view">
        <field name="name">video.interview.template.tree</field>
        <field name="model">video.interview.template</field>
        <field name="arch" type="xml">
            <tree string="Interview Templates">
                <field name="name"/>
                <field name="interview_type"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Video Interview Template Form View -->
    <record id="view_video_interview_template_form" model="ir.ui.view">
        <field name="name">video.interview.template.form</field>
        <field name="model">video.interview.template</field>
        <field name="arch" type="xml">
            <form string="Interview Template">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="interview_type"/>
                            <field name="duration"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Questions" name="questions">
                            <field name="question_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="question"/>
                                    <field name="question_type"/>
                                    <field name="expected_answer"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_video_interview" model="ir.actions.act_window">
        <field name="name">Video Interviews</field>
        <field name="res_model">video.interview</field>
        <field name="view_mode">tree,calendar,form</field>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule your first video interview
            </p>
            <p>
                Conduct video interviews with candidates using Zoom, Teams, or Google Meet.
            </p>
        </field>
    </record>

    <record id="action_video_interview_template" model="ir.actions.act_window">
        <field name="name">Interview Templates</field>
        <field name="res_model">video.interview.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create interview question templates
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_video_interviews" name="Video Interviews" parent="tazweed_placement.menu_tazweed_placement_root" sequence="30"/>
    <menuitem id="menu_video_interview_list" name="All Interviews" parent="menu_video_interviews" action="action_video_interview" sequence="10"/>
    <menuitem id="menu_video_interview_templates" name="Templates" parent="menu_video_interviews" action="action_video_interview_template" sequence="20"/>

    <!-- Sequence -->
    <record id="seq_video_interview" model="ir.sequence">
        <field name="name">Video Interview</field>
        <field name="code">video.interview</field>
        <field name="prefix">VI-</field>
        <field name="padding">5</field>
    </record>
</odoo>
