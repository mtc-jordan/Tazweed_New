<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Category Tree View -->
    <record id="view_pro_service_category_tree" model="ir.ui.view">
        <field name="name">pro.service.category.tree</field>
        <field name="model">pro.service.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="service_count"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Service Category Form View -->
    <record id="view_pro_service_category_form" model="ir.ui.view">
        <field name="name">pro.service.category.form</field>
        <field name="model">pro.service.category</field>
        <field name="arch" type="xml">
            <form string="Service Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_services"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="icon" placeholder="fa-folder"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Category Search View -->
    <record id="view_pro_service_category_search" model="ir.ui.view">
        <field name="name">pro.service.category.search</field>
        <field name="model">pro.service.category</field>
        <field name="arch" type="xml">
            <search string="Service Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="parent_id"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Category Action -->
    <record id="action_pro_service_category" model="ir.actions.act_window">
        <field name="name">Service Categories</field>
        <field name="res_model">pro.service.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service category
            </p>
            <p>
                Categories help organize PRO services into logical groups.
            </p>
        </field>
    </record>
</odoo>
