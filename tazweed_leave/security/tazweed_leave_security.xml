<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Leave Security Groups -->
    <record id="group_leave_user" model="res.groups">
        <field name="name">Leave User</field>
        <field name="category_id" ref="base.module_category_human_resources_time_off"/>
        <field name="implied_ids" eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
    </record>

    <record id="group_leave_officer" model="res.groups">
        <field name="name">Leave Officer</field>
        <field name="category_id" ref="base.module_category_human_resources_time_off"/>
        <field name="implied_ids" eval="[(4, ref('group_leave_user'))]"/>
    </record>

    <record id="group_leave_manager" model="res.groups">
        <field name="name">Leave Manager</field>
        <field name="category_id" ref="base.module_category_human_resources_time_off"/>
        <field name="implied_ids" eval="[(4, ref('group_leave_officer'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="rule_leave_user_own" model="ir.rule">
        <field name="name">Leave User: Own Leaves</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_leave_user'))]"/>
    </record>

    <record id="rule_leave_officer_department" model="ir.rule">
        <field name="name">Leave Officer: Department Leaves</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">['|', ('employee_id.user_id', '=', user.id), ('employee_id.department_id.manager_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_leave_officer'))]"/>
    </record>

    <record id="rule_leave_manager_all" model="ir.rule">
        <field name="name">Leave Manager: All Leaves</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_leave_manager'))]"/>
    </record>

    <!-- Attendance Rules -->
    <record id="rule_attendance_user_own" model="ir.rule">
        <field name="name">Attendance User: Own Attendance</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_leave_user'))]"/>
    </record>

    <record id="rule_attendance_manager_all" model="ir.rule">
        <field name="name">Attendance Manager: All Attendance</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_leave_manager'))]"/>
    </record>
</odoo>
