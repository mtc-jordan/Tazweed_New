<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Signing Batch Tree View -->
    <record id="view_bulk_signing_batch_tree" model="ir.ui.view">
        <field name="name">bulk.signing.batch.tree</field>
        <field name="model">bulk.signing.batch</field>
        <field name="arch" type="xml">
            <tree string="Bulk Signing Batches" decoration-info="state=='draft'" decoration-warning="state=='processing'" decoration-success="state=='completed'">
                <field name="name"/>
                <field name="batch_type"/>
                <field name="document_type"/>
                <field name="total_count"/>
                <field name="sent_count"/>
                <field name="signed_count"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state in ('processing','partially_completed')" decoration-success="state=='completed'" decoration-danger="state=='cancelled'"/>
                <field name="created_date"/>
            </tree>
        </field>
    </record>

    <!-- Bulk Signing Batch Form View -->
    <record id="view_bulk_signing_batch_form" model="ir.ui.view">
        <field name="name">bulk.signing.batch.form</field>
        <field name="model">bulk.signing.batch</field>
        <field name="arch" type="xml">
            <form string="Bulk Signing Batch">
                <header>
                    <button name="action_generate_items" type="object" string="Generate Items" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_send_all" type="object" string="Send All" class="btn-primary" attrs="{'invisible': [('state', 'not in', ('ready', 'partially_completed'))]}"/>
                    <button name="action_send_reminders" type="object" string="Send Reminders" attrs="{'invisible': [('state', 'not in', ('sent', 'partially_completed'))]}"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('state', 'in', ('completed', 'cancelled'))]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,ready,sent,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_requests" type="object" class="oe_stat_button" icon="fa-file-signature">
                            <field name="total_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Batch Configuration">
                            <field name="batch_type"/>
                            <field name="document_type"/>
                            <field name="template_id" attrs="{'invisible': [('batch_type', '!=', 'template_based')]}"/>
                        </group>
                        <group string="Master Document">
                            <field name="master_document" filename="master_filename" attrs="{'invisible': [('batch_type', '!=', 'same_document')]}"/>
                            <field name="master_filename" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Signer Source">
                            <field name="signer_source"/>
                            <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('signer_source', '!=', 'employee_list')]}"/>
                            <field name="department_ids" widget="many2many_tags" attrs="{'invisible': [('signer_source', '!=', 'department')]}"/>
                        </group>
                        <group string="Signing Configuration">
                            <field name="signing_order"/>
                            <field name="expiry_days"/>
                            <field name="reminder_enabled"/>
                            <field name="reminder_days" attrs="{'invisible': [('reminder_enabled', '=', False)]}"/>
                        </group>
                    </group>
                    <group string="Additional Signers">
                        <field name="additional_signer_ids" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Batch Items" name="items">
                            <field name="item_ids">
                                <tree string="Items" editable="bottom" decoration-success="state=='signed'" decoration-warning="state in ('sent','partially_signed')" decoration-danger="state=='failed'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="employee_id"/>
                                    <field name="signer_name"/>
                                    <field name="signer_email"/>
                                    <field name="document_name"/>
                                    <field name="state" widget="badge"/>
                                    <field name="sent_date"/>
                                    <field name="signed_date"/>
                                    <button name="action_view_request" type="object" string="View" icon="fa-external-link" attrs="{'invisible': [('signature_request_id', '=', False)]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Statistics" name="statistics">
                            <group>
                                <group>
                                    <field name="total_count"/>
                                    <field name="sent_count"/>
                                    <field name="signed_count"/>
                                </group>
                                <group>
                                    <field name="pending_count"/>
                                    <field name="failed_count"/>
                                    <field name="progress" widget="progressbar"/>
                                </group>
                            </group>
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <group>
                                    <field name="created_by"/>
                                    <field name="created_date"/>
                                </group>
                                <group>
                                    <field name="sent_date"/>
                                    <field name="completed_date"/>
                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                            </group>
                            <field name="description" placeholder="Add a description..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Bulk Signing Batch Search View -->
    <record id="view_bulk_signing_batch_search" model="ir.ui.view">
        <field name="name">bulk.signing.batch.search</field>
        <field name="model">bulk.signing.batch</field>
        <field name="arch" type="xml">
            <search string="Bulk Signing Batches">
                <field name="name"/>
                <field name="batch_type"/>
                <field name="document_type"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="My Batches" name="my_batches" domain="[('created_by', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Batch Type" name="group_type" context="{'group_by': 'batch_type'}"/>
                    <filter string="Document Type" name="group_doctype" context="{'group_by': 'document_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Bulk Signing Batch Action -->
    <record id="action_bulk_signing_batch" model="ir.actions.act_window">
        <field name="name">Bulk Signing</field>
        <field name="res_model">bulk.signing.batch</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_batch_type': 'same_document'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new bulk signing batch
            </p>
            <p>
                Send the same document to multiple signers or process different documents in bulk.
            </p>
        </field>
    </record>

    <!-- Bulk Signing Import Wizard Form -->
    <record id="view_bulk_signing_import_wizard_form" model="ir.ui.view">
        <field name="name">bulk.signing.import.wizard.form</field>
        <field name="model">bulk.signing.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Signers">
                <group>
                    <field name="batch_id" invisible="1"/>
                    <field name="csv_file" filename="csv_filename"/>
                    <field name="csv_filename" invisible="1"/>
                </group>
                <group string="Column Mapping">
                    <field name="name_column"/>
                    <field name="email_column"/>
                    <field name="phone_column"/>
                </group>
                <group string="Options">
                    <field name="has_header"/>
                    <field name="delimiter"/>
                </group>
                <footer>
                    <button name="action_import" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Bulk Signing Import Wizard Action -->
    <record id="action_bulk_signing_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Signers</field>
        <field name="res_model">bulk.signing.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
